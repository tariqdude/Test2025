---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="hero container fade-in">
				<h1 class="display-1">Empower Your Business with Next-Gen Solutions</h1>
				<p class="lead">We deliver enterprise-grade services and cutting-edge technology to drive growth and innovation.</p>
				<a href="/contact" class="btn">Get Started Today</a>
			</section>

			<!-- Features Section -->
			<section class="features container">
				<div class="feature-item">
					<h3>Custom Software</h3>
					<p>Tailored applications that align perfectly with your business processes and goals.</p>
				</div>
				<div class="feature-item">
					<h3>Cloud Integration</h3>
					<p>Seamlessly migrate and optimize your infrastructure on leading cloud platforms.</p>
				</div>
				<div class="feature-item">
					<h3>Data Analytics</h3>
					<p>Leverage actionable insights and AI-powered analytics to stay ahead of the competition.</p>
				</div>
			</section>

			<!-- Testimonials Section -->
			<section class="testimonials container fade-in">
				<h2>Trusted by Industry Leaders</h2>
				<blockquote>
					"Their expertise transformed our operations. We saw a 40% increase in efficiency within 6 months."<br/>
					<cite>â€” Jane Doe, CEO of Acme Corp</cite>
				</blockquote>
			</section>

			<!-- Call to Action Section -->
			<section class="cta container fade-in">
				<h2>Ready to Scale Your Business?</h2>
				<p>Contact our team for a free consultation and learn how we can help you achieve your vision.</p>
				<a href="/contact" class="btn">Schedule a Consultation</a>
			</section>
		</main>
		<Footer />
	</body>
</html>
