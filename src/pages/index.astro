---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import SystemHighlights from '../components/SystemHighlights.astro';
import HeroSection from '../components/landing/HeroSection.astro';
import SignalGrid from '../components/landing/SignalGrid.astro';
import PlaybookSection from '../components/landing/PlaybookSection.astro';
import EngagementSection from '../components/landing/EngagementSection.astro';
import ControlStackSection from '../components/landing/ControlStackSection.astro';
import TestimonialsSection from '../components/landing/TestimonialsSection.astro';
import InsightSection from '../components/landing/InsightSection.astro';
import DemoCtaSection from '../components/landing/DemoCtaSection.astro';
import StructuredData from '../components/StructuredData.astro';
import {
  clientBadges,
  landingPillars,
  systemHighlightItems,
  securitySummary,
} from '../data/marketing';
import { withBasePath } from '../utils/helpers';

const headline = 'Static intelligence for decisive operators';
const subheading =
  'Build a single, executive-ready hub that captures status, launches, and incident narratives—hosted statically, governed by design.';
---

<MarketingLayout title={headline} description={subheading}>
  <StructuredData type="organization" />
  <section class="relative overflow-hidden pt-28">
    <div
      class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top,_rgba(148,163,184,0.2),_transparent_55%)]"
    >
    </div>
    <div class="relative mx-auto max-w-[1220px] px-6">
      <div class="grid gap-14 lg:grid-cols-[minmax(0,1.05fr)_minmax(0,0.95fr)]">
        <HeroSection headline={headline} subheading={subheading} />
        <SignalGrid />
      </div>

      <div
        class="mt-14 flex flex-wrap items-center gap-6 border-t border-white/10 pt-8 text-[0.7rem] uppercase tracking-[0.35em] text-slate-400"
      >
        <span class="text-slate-500">Trusted by teams at</span>
        <div class="flex flex-wrap gap-4 text-slate-200/80">
          {
            clientBadges.map(badge => (
              <span class="rounded-full border border-white/10 px-4 py-2 text-xs tracking-[0.28em]">
                {badge}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <section class="relative">
    <div class="absolute inset-0 -z-10 bg-[rgba(15,23,42,0.55)]"></div>
    <div class="relative mx-auto max-w-[1220px] px-6 py-24">
      <div class="max-w-3xl space-y-4">
        <p
          class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
        >
          Why teams switch
        </p>
        <h2 class="text-3xl font-semibold text-white sm:text-4xl">
          Focus on the work that moves operations forward
        </h2>
        <p class="text-sm text-slate-300">
          Astro keeps content static and fast so your updates deploy reliably to
          GitHub Pages. No opaque services, no background daemons—just composed
          narratives and the data you trust.
        </p>
      </div>

      <div class="mt-12 grid gap-6 md:grid-cols-2 xl:grid-cols-3">
        {
          landingPillars.map((pillar, index) => (
            <article
              class="card h-full space-y-4 animate-fade-in-up"
              style={`animation-delay: ${index * 100}ms; opacity: 0;`}
            >
              <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl border border-white/15 bg-white/10 text-xs font-semibold uppercase tracking-[0.32em] text-slate-200 hover:bg-indigo-500/20 hover:border-indigo-400/30 transition-all duration-300">
                {pillar.title.slice(0, 2)}
              </span>
              <h3 class="text-xl font-semibold text-white">{pillar.title}</h3>
              <p class="text-sm text-slate-300">{pillar.description}</p>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <SystemHighlights
    eyebrow="System highlights"
    intro="Each module is tuned for industrial stakeholders—from compliance teams to product leadership—while keeping the markup approachable."
    items={systemHighlightItems}
    title="A calm surface. A disciplined build."
  />

  <section
    class="relative border-t border-white/5 bg-[rgba(9,14,26,0.68)] py-24"
  >
    <div
      class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top,_rgba(148,163,184,0.1),_transparent_60%)]"
    >
    </div>
    <div
      class="relative mx-auto flex max-w-[1220px] flex-col gap-12 px-6 lg:flex-row lg:items-start lg:justify-between"
    >
      <div class="max-w-2xl space-y-4">
        <p
          class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
        >
          Security & compliance posture
        </p>
        <h2 class="text-3xl font-semibold text-white sm:text-4xl">
          Executive-ready and auditor-approved from day one
        </h2>
        <p class="text-sm text-slate-300">
          {securitySummary.intro}
        </p>
      </div>
      <div class="grid flex-1 gap-6 sm:grid-cols-2">
        {
          securitySummary.principles.map((principle, index) => (
            <article
              class="glass-panel border border-white/10 p-6 animate-fade-in-up"
              style={`animation-delay: ${index * 150}ms; opacity: 0;`}
            >
              <div class="flex flex-col gap-2">
                <span class="chip bg-[rgba(99,102,241,0.12)] text-[0.6rem] uppercase tracking-[0.32em] text-slate-200">
                  {principle.indicator}
                </span>
                <h3 class="text-lg font-semibold text-white">
                  {principle.title}
                </h3>
              </div>
              <p class="mt-3 text-sm text-slate-300">{principle.description}</p>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <PlaybookSection />
  <EngagementSection />
  <ControlStackSection />
  <TestimonialsSection />
  <InsightSection />
  <DemoCtaSection />
</MarketingLayout>
