---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const headline = 'Purpose-built analytics for calm operations';
const subheading =
  'Monitor launches, track customer impact, and share clear status updates without maintaining custom dashboards.';

const metrics = [
  { value: '24/7', label: 'Status visibility' },
  { value: '-40%', label: 'Incident resolution time' },
  { value: '+18%', label: 'Customer satisfaction' },
];

const features = [
  {
    title: 'Unified reporting',
    description:
      'Ship executive-ready updates from a single workspace with exports that look great on every device.',
  },
  {
    title: 'Performance guardrails',
    description:
      'Catch regressions early with lightweight checks that run on every release pipeline.',
  },
  {
    title: 'Team alignment',
    description:
      'Invite product, engineering, and support to collaborate on the same shared context.',
  },
];

const testimonials = [
  {
    quote:
      'The weekly rollups keep leadership focused on trends instead of chasing down screenshots.',
    name: 'Danielle Ortiz',
    role: 'VP Engineering, Northwind',
  },
  {
    quote:
      'We replaced three different dashboards with one Astro site and shipping finally feels predictable.',
    name: 'Marcus Chen',
    role: 'Head of Product, Globex',
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={headline} description={subheading} />
  </head>
  <body class="bg-neutral-50 text-neutral-900 antialiased">
    <Header />
    <main>
      <section class="relative overflow-hidden">
        <div class="container mx-auto max-w-6xl px-4 py-24 sm:px-6 lg:px-8">
          <div class="max-w-3xl">
            <span
              class="inline-flex items-center gap-2 rounded-full border border-neutral-200 bg-white px-3 py-1 text-xs font-semibold uppercase tracking-[0.3em] text-neutral-600"
            >
              Built for clarity
            </span>
            <h1
              class="mt-6 text-4xl font-semibold tracking-tight sm:text-5xl lg:text-6xl"
            >
              {headline}
            </h1>
            <p class="mt-6 text-lg leading-8 text-neutral-600 sm:text-xl">
              {subheading}
            </p>
            <div class="mt-8 flex flex-wrap gap-4">
              <a
                class="inline-flex items-center justify-center rounded-full bg-brand-600 px-6 py-3 text-sm font-semibold text-white shadow-elevation-xs transition hover:bg-brand-700"
                href="/contact"
              >
                Schedule a walkthrough
              </a>
              <a
                class="inline-flex items-center justify-center rounded-full border border-neutral-200 px-6 py-3 text-sm font-semibold text-neutral-800 transition hover:border-neutral-300 hover:bg-white"
                href="/blog"
              >
                Read customer stories
              </a>
            </div>
          </div>
          <dl class="mt-16 grid gap-6 sm:grid-cols-3">
            {
              metrics.map(metric => (
                <div class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-elevation-xs">
                  <dt class="text-sm font-medium text-neutral-500">
                    {metric.label}
                  </dt>
                  <dd class="mt-3 text-3xl font-semibold text-neutral-900">
                    {metric.value}
                  </dd>
                </div>
              ))
            }
          </dl>
        </div>
      </section>

      <section class="bg-white">
        <div class="container mx-auto max-w-6xl px-4 py-20 sm:px-6 lg:px-8">
          <div class="max-w-3xl">
            <p
              class="text-sm font-semibold uppercase tracking-[0.3em] text-neutral-500"
            >
              Why teams switch
            </p>
            <h2
              class="mt-4 text-3xl font-semibold text-neutral-950 sm:text-4xl"
            >
              Focus on the work that matters
            </h2>
            <p class="mt-4 text-lg text-neutral-600">
              Astro keeps content static and fast so your updates deploy
              reliably to GitHub Pages. No opaque services, no background
              daemons—just your copy, visuals, and the data points you want to
              share.
            </p>
          </div>
          <div class="mt-12 grid gap-8 lg:grid-cols-3">
            {
              features.map(feature => (
                <article class="flex h-full flex-col rounded-2xl border border-neutral-200 bg-neutral-50 p-8 shadow-elevation-xs">
                  <h3 class="text-2xl font-semibold text-neutral-900">
                    {feature.title}
                  </h3>
                  <p class="mt-4 text-neutral-600">{feature.description}</p>
                </article>
              ))
            }
          </div>
        </div>
      </section>

      <section class="bg-neutral-900 py-20 text-neutral-100">
        <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
          <div
            class="grid gap-12 lg:grid-cols-[minmax(0,0.8fr)_minmax(0,1.2fr)]"
          >
            <div>
              <p
                class="text-sm font-semibold uppercase tracking-[0.3em] text-neutral-400"
              >
                Customer perspective
              </p>
              <h2 class="mt-4 text-3xl font-semibold text-white sm:text-4xl">
                Stories from teams using the template today
              </h2>
              <p class="mt-4 text-neutral-300">
                These quotes come from the pilot group that migrated their
                internal status sites to Astro. They now deploy straight to
                GitHub Pages with confidence.
              </p>
            </div>
            <div class="space-y-6">
              {
                testimonials.map(item => (
                  <blockquote class="rounded-2xl bg-neutral-800/60 p-8 shadow-elevation-sm ring-1 ring-neutral-700/60">
                    <p class="text-lg text-neutral-100">“{item.quote}”</p>
                    <footer class="mt-4 text-sm text-neutral-400">
                      <span class="font-semibold text-neutral-200">
                        {item.name}
                      </span>
                      <span class="ml-2">{item.role}</span>
                    </footer>
                  </blockquote>
                ))
              }
            </div>
          </div>
        </div>
      </section>

      <section class="bg-white">
        <div
          class="container mx-auto max-w-4xl px-4 py-20 text-center sm:px-6 lg:px-8"
        >
          <h2 class="text-3xl font-semibold text-neutral-950 sm:text-4xl">
            Ready to publish updates without the overhead?
          </h2>
          <p class="mt-4 text-lg text-neutral-600">
            Start with this streamlined Astro setup, connect your repository,
            and deploy to GitHub Pages in minutes.
          </p>
          <a
            class="mt-8 inline-flex items-center justify-center rounded-full bg-brand-600 px-8 py-3 text-sm font-semibold text-white shadow-elevation-xs transition hover:bg-brand-700"
            href="/contact"
          >
            Talk with our team
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
