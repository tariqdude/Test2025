---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import SystemHighlights from '../components/SystemHighlights.astro';
import {
  heroSignals,
  clientBadges,
  keyMetrics,
  landingPillars,
  systemHighlightItems,
  playbookSteps,
  testimonials,
  engagementTracks,
  controlStack,
  insightReports,
  securitySummary,
} from '../data/marketing';

const headline = 'Static intelligence for decisive operators';
const subheading =
  'Build a single, executive-ready hub that captures status, launches, and incident narratives—hosted statically, governed by design.';
const baseUrl = import.meta.env.BASE_URL;
---

<MarketingLayout title={headline} description={subheading}>
  <section class="relative overflow-hidden pt-28">
    <div
      class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top,_rgba(148,163,184,0.2),_transparent_55%)]"
    >
    </div>
    <div class="relative mx-auto max-w-[1220px] px-6">
      <div class="grid gap-14 lg:grid-cols-[minmax(0,1.05fr)_minmax(0,0.95fr)]">
        <div class="space-y-9">
          <span
            class="chip bg-[rgba(99,102,241,0.08)] text-[0.65rem] uppercase tracking-[0.32em] text-slate-200"
          >
            High-trust static ops
          </span>
          <h1
            class="text-4xl font-semibold leading-[1.05] text-white sm:text-5xl lg:text-6xl"
          >
            {headline}
          </h1>
          <p class="max-w-xl text-base text-slate-300 sm:text-lg">
            {subheading}
          </p>
          <ul class="grid gap-3 sm:grid-cols-2">
            {
              heroSignals.map(signal => (
                <li class="flex items-start gap-3 text-sm text-slate-300">
                  <span class="mt-0.5 inline-flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full border border-white/15 text-[0.7rem] text-slate-100">
                    •
                  </span>
                  <span>{signal}</span>
                </li>
              ))
            }
          </ul>
          <div class="flex flex-wrap gap-4">
            <a class="btn btn-primary" href={`${baseUrl}contact/`}>
              Schedule a walkthrough
            </a>
            <a class="btn btn-secondary" href={`${baseUrl}showcase/`}>
              Explore the templates
            </a>
          </div>
        </div>

        <div class="glass-panel p-8 shadow-lg lg:p-10">
          <h2
            class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
          >
            Confidence indicators
          </h2>
          <dl class="mt-6 grid gap-6 sm:grid-cols-3">
            {
              keyMetrics.map(metric => (
                <div class="rounded-2xl border border-white/10 bg-white/5 p-5 text-center">
                  <dt class="text-[0.65rem] font-medium uppercase tracking-[0.3em] text-slate-400">
                    {metric.label}
                  </dt>
                  <dd class="mt-3 text-2xl font-semibold text-white">
                    {metric.value}
                  </dd>
                </div>
              ))
            }
          </dl>
          <p class="mt-8 text-xs text-slate-400">
            Results from live engagements using the Elite Project starter and
            GitHub Pages pipelines.
          </p>
        </div>
      </div>

      <div
        class="mt-14 flex flex-wrap items-center gap-6 border-t border-white/10 pt-8 text-[0.7rem] uppercase tracking-[0.35em] text-slate-400"
      >
        <span class="text-slate-500">Trusted by teams at</span>
        <div class="flex flex-wrap gap-4 text-slate-200/80">
          {
            clientBadges.map(badge => (
              <span class="rounded-full border border-white/10 px-4 py-2 text-xs tracking-[0.28em]">
                {badge}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <section class="relative">
    <div class="absolute inset-0 -z-10 bg-[rgba(15,23,42,0.55)]"></div>
    <div class="relative mx-auto max-w-[1220px] px-6 py-24">
      <div class="max-w-3xl space-y-4">
        <p
          class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
        >
          Why teams switch
        </p>
        <h2 class="text-3xl font-semibold text-white sm:text-4xl">
          Focus on the work that moves operations forward
        </h2>
        <p class="text-sm text-slate-300">
          Astro keeps content static and fast so your updates deploy reliably to
          GitHub Pages. No opaque services, no background daemons—just composed
          narratives and the data you trust.
        </p>
      </div>

      <div class="mt-12 grid gap-6 md:grid-cols-2 xl:grid-cols-3">
        {
          landingPillars.map(pillar => (
            <article class="card h-full space-y-4">
              <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl border border-white/15 bg-white/10 text-xs font-semibold uppercase tracking-[0.32em] text-slate-200">
                {pillar.title.slice(0, 2)}
              </span>
              <h3 class="text-xl font-semibold text-white">{pillar.title}</h3>
              <p class="text-sm text-slate-300">{pillar.description}</p>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <SystemHighlights
    eyebrow="System highlights"
    intro="Each module is tuned for industrial stakeholders—from compliance teams to product leadership—while keeping the markup approachable."
    items={systemHighlightItems}
    title="A calm surface. A disciplined build."
  />

  <section
    class="relative border-t border-white/5 bg-[rgba(9,14,26,0.68)] py-24"
  >
    <div
      class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top,_rgba(148,163,184,0.1),_transparent_60%)]"
    >
    </div>
    <div
      class="relative mx-auto flex max-w-[1220px] flex-col gap-12 px-6 lg:flex-row lg:items-start lg:justify-between"
    >
      <div class="max-w-2xl space-y-4">
        <p
          class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
        >
          Security & compliance posture
        </p>
        <h2 class="text-3xl font-semibold text-white sm:text-4xl">
          Executive-ready and auditor-approved from day one
        </h2>
        <p class="text-sm text-slate-300">
          {securitySummary.intro}
        </p>
      </div>
      <div class="grid flex-1 gap-6 sm:grid-cols-2">
        {
          securitySummary.principles.map(principle => (
            <article class="glass-panel border border-white/10 p-6">
              <div class="flex flex-col gap-2">
                <span class="chip bg-[rgba(99,102,241,0.12)] text-[0.6rem] uppercase tracking-[0.32em] text-slate-200">
                  {principle.indicator}
                </span>
                <h3 class="text-lg font-semibold text-white">
                  {principle.title}
                </h3>
              </div>
              <p class="mt-3 text-sm text-slate-300">{principle.description}</p>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <section class="relative">
    <div class="absolute inset-0 -z-10 bg-[rgba(8,14,26,0.8)]"></div>
    <div class="relative mx-auto max-w-[1220px] px-6 py-24">
      <div class="grid gap-12 lg:grid-cols-[minmax(0,0.9fr)_minmax(0,1.1fr)]">
        <div class="space-y-5">
          <p
            class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
          >
            Operations playbook
          </p>
          <h2 class="text-3xl font-semibold text-white sm:text-4xl">
            From empty repo to trusted status hub in three moves
          </h2>
          <p class="text-sm text-slate-300">
            These steps are baked into the starter documentation. Follow them
            as-is or adapt the cadence to match your governance process.
          </p>
        </div>
        <div class="space-y-4">
          {
            playbookSteps.map(item => (
              <article class="glass-panel flex gap-5 border border-white/10 p-6">
                <span class="mt-1 inline-flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full border border-white/15 text-sm font-semibold text-slate-200">
                  {item.step}
                </span>
                <div class="space-y-2">
                  <h3 class="text-lg font-semibold text-white">{item.title}</h3>
                  <p class="text-sm text-slate-300">{item.detail}</p>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <section class="relative">
    <div class="absolute inset-0 -z-10 bg-[rgba(15,23,42,0.72)]"></div>
    <div class="relative mx-auto max-w-[1220px] px-6 py-24">
      <div class="grid gap-12 lg:grid-cols-[minmax(0,0.85fr)_minmax(0,1.15fr)]">
        <div class="space-y-4">
          <p
            class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
          >
            Engagement options
          </p>
          <h2 class="text-3xl font-semibold text-white sm:text-4xl">
            Choose the partnership cadence that matches your velocity
          </h2>
          <p class="text-sm text-slate-300">
            Whether you need a sprint to polish messaging or a standing
            operations retainer, each track keeps deliverables focused and
            measurable.
          </p>
        </div>
        <div class="grid gap-6 lg:grid-cols-3">
          {
            engagementTracks.map(option => (
              <article class="glass-panel flex h-full flex-col gap-5 border border-white/10 p-6">
                <div class="flex items-baseline justify-between text-slate-200">
                  <h3 class="text-lg font-semibold text-white">
                    {option.name}
                  </h3>
                  <span class="text-xs uppercase tracking-[0.3em] text-slate-400">
                    {option.timeline}
                  </span>
                </div>
                <p class="text-sm text-slate-300">{option.summary}</p>
                <ul class="space-y-2 text-sm text-slate-300/90">
                  {option.deliverables.map(item => (
                    <li class="flex items-start gap-2">
                      <span class="mt-1 inline-flex h-2 w-2 flex-shrink-0 rounded-full bg-[rgba(99,102,241,0.55)]" />
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </article>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <section class="relative">
    <div class="absolute inset-0 -z-10 bg-[rgba(8,13,24,0.78)]"></div>
    <div class="relative mx-auto max-w-[1220px] px-6 py-24">
      <div class="grid gap-12 lg:grid-cols-[minmax(0,0.85fr)_minmax(0,1.15fr)]">
        <div class="space-y-4">
          <p
            class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
          >
            Control stack
          </p>
          <h2 class="text-3xl font-semibold text-white sm:text-4xl">
            Deploy a consistent operating layer across every release
          </h2>
          <p class="text-sm text-slate-300">
            Each module is designed to drop into your existing workflow,
            connecting runbooks and audit trails with calm, executive-ready
            interfaces.
          </p>
        </div>
        <div class="grid gap-6 lg:grid-cols-3">
          {
            controlStack.map(stack => (
              <article class="glass-panel flex h-full flex-col gap-5 border border-white/10 p-6">
                <div class="flex items-start justify-between gap-4">
                  <h3 class="text-lg font-semibold text-white">{stack.name}</h3>
                  <div class="text-right">
                    <p class="text-sm font-semibold text-white">
                      {stack.metric}
                    </p>
                    <p class="text-[0.65rem] uppercase tracking-[0.3em] text-slate-400">
                      {stack.metricLabel}
                    </p>
                  </div>
                </div>
                <p class="text-sm text-slate-300">{stack.summary}</p>
                <ul class="space-y-2 text-sm text-slate-300/90">
                  {stack.bullets.map(point => (
                    <li class="flex items-start gap-2">
                      <span class="mt-1 inline-flex h-2 w-2 flex-shrink-0 rounded-full bg-[rgba(99,102,241,0.55)]" />
                      <span>{point}</span>
                    </li>
                  ))}
                </ul>
              </article>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <section class="relative">
    <div class="absolute inset-0 -z-10 bg-[rgba(7,12,22,0.85)]"></div>
    <div class="relative mx-auto max-w-[1220px] px-6 py-24">
      <div class="grid gap-10 lg:grid-cols-[minmax(0,0.9fr)_minmax(0,1.1fr)]">
        <div class="space-y-4">
          <p
            class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
          >
            Customer perspective
          </p>
          <h2 class="text-3xl font-semibold text-white sm:text-4xl">
            Stories from teams running mission-critical updates
          </h2>
          <p class="text-sm text-slate-300">
            Every quote below comes from a production rollout of the Elite
            Project starter. Each team now delivers consistent updates without
            owning runtime infrastructure.
          </p>
        </div>
        <div class="grid gap-6">
          {
            testimonials.map(item => (
              <blockquote class="glass-panel border border-white/10 p-8 shadow-md">
                <p class="text-lg text-slate-100">“{item.quote}”</p>
                <footer class="mt-4 text-sm text-slate-400">
                  <span class="font-semibold text-slate-100">{item.name}</span>
                  <span class="ml-2 text-slate-400">{item.role}</span>
                </footer>
              </blockquote>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <section class="relative">
    <div class="absolute inset-0 -z-10 bg-[rgba(6,11,22,0.85)]"></div>
    <div class="relative mx-auto max-w-[1220px] px-6 py-24">
      <div class="max-w-3xl space-y-4">
        <p
          class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
        >
          Ops intelligence
        </p>
        <h2 class="text-3xl font-semibold text-white sm:text-4xl">
          Toolkits that accelerate the way you brief, audit, and recover
        </h2>
        <p class="text-sm text-slate-300">
          Pair the starter with focused resources that walk your teams through
          messaging, risk posture, and customer narratives without adding
          overhead.
        </p>
      </div>
      <div class="mt-12 grid gap-6 md:grid-cols-2 xl:grid-cols-3">
        {
          insightReports.map(report => (
            <article class="glass-panel flex h-full flex-col justify-between gap-5 border border-white/10 p-6">
              <div class="space-y-4">
                <span class="inline-flex w-max items-center rounded-full border border-white/10 px-3 py-1 text-[0.65rem] font-semibold uppercase tracking-[0.32em] text-slate-300">
                  {report.category}
                </span>
                <h3 class="text-xl font-semibold text-white">{report.title}</h3>
                <p class="text-sm text-slate-300">{report.description}</p>
              </div>
              <a
                class="inline-flex w-max items-center gap-2 text-sm font-semibold text-slate-200 transition hover:text-white"
                href={`${baseUrl}${report.href}`}
              >
                {report.linkLabel}
                <span aria-hidden="true">→</span>
              </a>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <section class="relative">
    <div class="absolute inset-0 -z-10 bg-[rgba(15,23,42,0.82)]"></div>
    <div class="relative mx-auto max-w-[980px] px-6 py-20 text-center">
      <div class="glass-panel border border-white/10 px-10 py-14">
        <p
          class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
        >
          Next step
        </p>
        <h2 class="mt-4 text-3xl font-semibold text-white sm:text-4xl">
          Ready to publish status updates without operational drag?
        </h2>
        <p class="mt-4 text-sm text-slate-300">
          Clone the repo, run through the included quality checklist, and deploy
          to GitHub Pages. When you need a partner, our team can fast-track the
          rollout.
        </p>
        <div class="mt-8 flex flex-wrap justify-center gap-4">
          <a class="btn btn-primary" href={`${baseUrl}contact/`}>
            Talk with our team
          </a>
          <a
            class="btn btn-secondary"
            href="https://github.com/tariqdude/Test2025"
          >
            Download the starter
          </a>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>
