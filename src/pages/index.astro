---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import Grid from '../components/ui/Grid.astro';
import Animate from '../components/ui/Animate.astro';
import Icon from '../components/ui/Icon.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-white dark:bg-gray-900 min-h-screen antialiased">
		<Header />
		<main>
			<!-- Hero Section -->
			<section id="hero" class="relative overflow-hidden bg-gradient-to-br from-primary-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-purple-900 py-28 lg:py-36">
				<!-- Enhanced Background decorations -->
				<div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
				<div class="absolute inset-0 bg-gradient-to-t from-white/20 to-transparent dark:from-gray-900/20"></div>
				
				<!-- Floating Elements -->
				<div class="absolute top-20 left-10 w-32 h-32 bg-gradient-to-br from-primary-200 to-purple-200 dark:from-primary-800 dark:to-purple-800 rounded-full blur-3xl opacity-30 animate-float"></div>
				<div class="absolute bottom-20 right-10 w-40 h-40 bg-gradient-to-br from-purple-200 to-pink-200 dark:from-purple-800 dark:to-pink-800 rounded-full blur-3xl opacity-30 animate-float" style="animation-delay: 2s;"></div>
				<div class="absolute top-1/2 left-1/4 w-24 h-24 bg-gradient-to-br from-blue-200 to-cyan-200 dark:from-blue-800 dark:to-cyan-800 rounded-full blur-2xl opacity-20 animate-float" style="animation-delay: 4s;"></div>
				
				<div class="container-custom relative">
					<div class="max-w-6xl mx-auto text-center">
						<div class="inline-flex items-center rounded-full px-6 py-3 bg-white/80 dark:bg-gray-800/80 border border-white/20 dark:border-gray-700/20 text-primary-600 dark:text-primary-400 text-sm font-medium mb-10 backdrop-blur-md shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
							<span class="w-2 h-2 bg-gradient-to-r from-primary-500 to-purple-500 rounded-full mr-3 animate-pulse"></span>
							<span class="bg-gradient-to-r from-primary-600 to-purple-600 bg-clip-text text-transparent font-semibold">Enterprise Solutions Now Available</span>
						</div>
						
						<h1 class="text-6xl md:text-8xl lg:text-9xl font-bold leading-tight mb-10 tracking-tight">
							<span class="text-gray-900 dark:text-white">Professional</span>
							<br>
							<span class="relative">
								<span class="bg-gradient-to-r from-primary-600 via-purple-600 to-pink-600 bg-clip-text text-transparent animate-gradient-x">
									Business Solutions
								</span>
								<div class="absolute -inset-1 bg-gradient-to-r from-primary-600 via-purple-600 to-pink-600 rounded-lg blur opacity-20 animate-pulse"></div>
							</span>
							<br>
							<span class="text-gray-900 dark:text-white">for Modern Companies</span>
						</h1>
						
						<p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 max-w-4xl mx-auto leading-relaxed mb-12 text-pretty">
							We deliver <span class="text-primary-600 dark:text-primary-400 font-semibold">cutting-edge technology solutions</span> that drive growth, efficiency, and innovation for businesses of all sizes. Transform your digital presence with our expert team.
						</p>
						
						<!-- Enhanced CTA Section -->
						<div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-16">
							<Button 
								variant="primary" 
								size="lg" 
								href="/contact" 
								className="group relative overflow-hidden bg-gradient-to-r from-primary-600 to-purple-600 hover:from-primary-700 hover:to-purple-700 text-white font-semibold py-4 px-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 border-0"
							>
								<span class="relative z-10 flex items-center">
									Get Started Today
									<Icon name="arrow-right" size="sm" className="ml-2 group-hover:translate-x-1 transition-transform duration-300" />
								</span>
								<div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-pink-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
							</Button>
							
							<Button 
								variant="outline" 
								size="lg" 
								href="/services" 
								className="group relative bg-white/90 dark:bg-gray-800/90 text-gray-900 dark:text-white font-semibold py-4 px-8 rounded-xl border-2 border-gray-200 dark:border-gray-600 hover:border-primary-300 dark:hover:border-primary-500 backdrop-blur-sm shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105"
							>
								<span class="relative z-10 flex items-center">
									<Icon name="play" size="sm" className="mr-2 group-hover:rotate-45 transition-transform duration-300" />
									View Our Services
								</span>
							</Button>
						</div>
						
						<!-- Enhanced Stats Section -->
						<div class="grid grid-cols-2 lg:grid-cols-4 gap-8 max-w-4xl mx-auto mb-16">
							<div class="group text-center p-6 rounded-2xl bg-white/70 dark:bg-gray-800/70 backdrop-blur-md border border-white/20 dark:border-gray-700/20 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 hover:-translate-y-2">
								<div class="text-4xl font-bold text-primary-600 dark:text-primary-400 mb-2 group-hover:animate-pulse">500+</div>
								<div class="text-sm text-gray-600 dark:text-gray-300 font-medium">Projects Completed</div>
							</div>
							<div class="group text-center p-6 rounded-2xl bg-white/70 dark:bg-gray-800/70 backdrop-blur-md border border-white/20 dark:border-gray-700/20 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 hover:-translate-y-2" style="animation-delay: 0.1s;">
								<div class="text-4xl font-bold text-purple-600 dark:text-purple-400 mb-2 group-hover:animate-pulse">99%</div>
								<div class="text-sm text-gray-600 dark:text-gray-300 font-medium">Client Satisfaction</div>
							</div>
							<div class="group text-center p-6 rounded-2xl bg-white/70 dark:bg-gray-800/70 backdrop-blur-md border border-white/20 dark:border-gray-700/20 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 hover:-translate-y-2" style="animation-delay: 0.2s;">
								<div class="text-4xl font-bold text-pink-600 dark:text-pink-400 mb-2 group-hover:animate-pulse">24/7</div>
								<div class="text-sm text-gray-600 dark:text-gray-300 font-medium">Expert Support</div>
							</div>
							<div class="group text-center p-6 rounded-2xl bg-white/70 dark:bg-gray-800/70 backdrop-blur-md border border-white/20 dark:border-gray-700/20 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 hover:-translate-y-2" style="animation-delay: 0.3s;">
								<div class="text-4xl font-bold text-blue-600 dark:text-blue-400 mb-2 group-hover:animate-pulse">5 Years</div>
								<div class="text-sm text-gray-600 dark:text-gray-300 font-medium">Industry Experience</div>
							</div>
						</div>
						
						<!-- Enhanced Trust Indicators -->
						<div class="flex flex-wrap justify-center items-center gap-12 opacity-70 hover:opacity-90 transition-opacity duration-300">
							<div class="text-sm text-gray-500 dark:text-gray-400 font-medium">Trusted by leading companies worldwide</div>
							<div class="flex gap-8 items-center">
								<div class="group w-24 h-10 bg-gradient-to-r from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-600 rounded-lg opacity-60 hover:opacity-100 transition-all duration-300 transform hover:scale-105 relative overflow-hidden">
									<div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent translate-x-[-200%] group-hover:translate-x-[200%] transition-transform duration-1000 animate-shimmer"></div>
								</div>
								<div class="group w-24 h-10 bg-gradient-to-r from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-600 rounded-lg opacity-60 hover:opacity-100 transition-all duration-300 transform hover:scale-105 relative overflow-hidden">
									<div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent translate-x-[-200%] group-hover:translate-x-[200%] transition-transform duration-1000 animate-shimmer"></div>
								</div>
								<div class="group w-24 h-10 bg-gradient-to-r from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-600 rounded-lg opacity-60 hover:opacity-100 transition-all duration-300 transform hover:scale-105 relative overflow-hidden">
									<div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent translate-x-[-200%] group-hover:translate-x-[200%] transition-transform duration-1000 animate-shimmer"></div>
								</div>
								<div class="group w-24 h-10 bg-gradient-to-r from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-600 rounded-lg opacity-60 hover:opacity-100 transition-all duration-300 transform hover:scale-105 relative overflow-hidden">
									<div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent translate-x-[-200%] group-hover:translate-x-[200%] transition-transform duration-1000 animate-shimmer"></div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Enhanced Features Section -->
			<section id="features" class="relative py-24 lg:py-32 bg-gradient-to-b from-white via-gray-50/50 to-white dark:from-gray-900 dark:via-gray-800/50 dark:to-gray-900 overflow-hidden">
				<!-- Background elements -->
				<div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
				<div class="absolute top-20 right-20 w-64 h-64 bg-gradient-to-br from-emerald-200 to-blue-200 dark:from-emerald-800 dark:to-blue-800 rounded-full blur-3xl opacity-20 animate-float"></div>
				<div class="absolute bottom-20 left-20 w-48 h-48 bg-gradient-to-br from-purple-200 to-pink-200 dark:from-purple-800 dark:to-pink-800 rounded-full blur-3xl opacity-20 animate-float" style="animation-delay: 3s;"></div>
				
				<div class="container-custom relative">
					<div class="max-w-4xl mx-auto text-center mb-20">
						<div class="inline-flex items-center rounded-full px-6 py-3 bg-emerald-50/80 dark:bg-emerald-900/30 border border-emerald-200/50 dark:border-emerald-700/50 text-emerald-700 dark:text-emerald-300 text-sm font-medium mb-8 backdrop-blur-md shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
							<Icon name="check" size="sm" className="mr-3" />
							<span class="bg-gradient-to-r from-emerald-600 to-blue-600 bg-clip-text text-transparent font-semibold">Premium Features & Solutions</span>
						</div>
						
						<h2 class="text-5xl md:text-6xl font-bold mb-8 tracking-tight">
							<span class="text-gray-900 dark:text-white">Why Choose Our</span>
							<br>
							<span class="relative">
								<span class="bg-gradient-to-r from-emerald-600 via-blue-600 to-purple-600 bg-clip-text text-transparent animate-gradient-x">
									Premium Services
								</span>
								<div class="absolute -inset-1 bg-gradient-to-r from-emerald-600 via-blue-600 to-purple-600 rounded-lg blur opacity-20 animate-pulse"></div>
							</span>
						</h2>
						<p class="text-xl text-gray-600 dark:text-gray-300 text-balance max-w-3xl mx-auto leading-relaxed">
							We combine <span class="text-emerald-600 dark:text-emerald-400 font-semibold">cutting-edge expertise</span>, innovation, and dedication to deliver exceptional results that exceed expectations and drive your business forward.
						</p>
					</div>
					
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
						<div class="group relative p-8 rounded-3xl bg-white/80 dark:bg-gray-800/80 backdrop-blur-md border border-white/20 dark:border-gray-700/20 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:scale-105 hover:-translate-y-3 overflow-hidden">
							<!-- Card glow effect -->
							<div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 via-transparent to-purple-600/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
							
							<div class="relative z-10">
								<div class="text-blue-600 dark:text-blue-400 mb-8 p-4 bg-gradient-to-br from-blue-100 to-blue-50 dark:from-blue-900/30 dark:to-blue-800/20 rounded-2xl w-fit group-hover:scale-110 transition-transform duration-300 shadow-lg">
									<Icon name="lightning" size="2xl" />
								</div>
								<h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
									Lightning Fast Performance
								</h3>
								<p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-8 text-lg">
									Ultra-high performance solutions optimized for speed, reliability, and scalability across all platforms with cutting-edge optimization techniques.
								</p>
								<div class="flex items-center text-blue-600 dark:text-blue-400 font-semibold group-hover:translate-x-2 transition-transform duration-300">
									<Icon name="arrow-right" size="sm" className="mr-2" />
									Explore Performance Solutions
								</div>
							</div>
						</div>
						
						<div class="group relative p-8 rounded-3xl bg-white/80 dark:bg-gray-800/80 backdrop-blur-md border border-white/20 dark:border-gray-700/20 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:scale-105 hover:-translate-y-3 overflow-hidden" style="animation-delay: 0.2s;">
							<!-- Card glow effect -->
							<div class="absolute inset-0 bg-gradient-to-r from-emerald-600/20 via-transparent to-teal-600/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
							
							<div class="relative z-10">
								<div class="text-emerald-600 dark:text-emerald-400 mb-8 p-4 bg-gradient-to-br from-emerald-100 to-emerald-50 dark:from-emerald-900/30 dark:to-emerald-800/20 rounded-2xl w-fit group-hover:scale-110 transition-transform duration-300 shadow-lg">
									<Icon name="shield" size="2xl" />
								</div>
								<h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors duration-300">
									Bank-Grade Security
								</h3>
								<p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-8 text-lg">
									Enterprise-grade security with full compliance to international standards, zero-trust architecture, and advanced threat protection.
								</p>
								<div class="flex items-center text-emerald-600 dark:text-emerald-400 font-semibold group-hover:translate-x-2 transition-transform duration-300">
									<Icon name="arrow-right" size="sm" className="mr-2" />
									Discover Security Features
								</div>
							</div>
						</div>
						
						<div class="group relative p-8 rounded-3xl bg-white/80 dark:bg-gray-800/80 backdrop-blur-md border border-white/20 dark:border-gray-700/20 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:scale-105 hover:-translate-y-3 overflow-hidden" style="animation-delay: 0.4s;">
							<!-- Card glow effect -->
							<div class="absolute inset-0 bg-gradient-to-r from-purple-600/20 via-transparent to-pink-600/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
							
							<div class="relative z-10">
								<div class="text-purple-600 dark:text-purple-400 mb-8 p-4 bg-gradient-to-br from-purple-100 to-purple-50 dark:from-purple-900/30 dark:to-purple-800/20 rounded-2xl w-fit group-hover:scale-110 transition-transform duration-300 shadow-lg">
									<Icon name="users" size="2xl" />
								</div>
								<h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors duration-300">
									24/7 Expert Support
								</h3>
								<p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-8 text-lg">
									Round-the-clock expert support from our dedicated team of certified professionals, specialists, and industry experts.
								</p>
								<div class="flex items-center text-purple-600 dark:text-purple-400 font-semibold group-hover:translate-x-2 transition-transform duration-300">
									<Icon name="arrow-right" size="sm" className="mr-2" />
									Meet Our Support Team
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Enhanced Services Section -->
			<section id="services" class="relative py-24 lg:py-32 bg-gradient-to-br from-slate-50/80 via-blue-50/30 to-purple-50/40 dark:from-gray-800 dark:via-gray-900/80 dark:to-purple-900/20 overflow-hidden">
				<!-- Enhanced Background decorations -->
				<div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
				<div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-l from-blue-200/30 to-purple-200/30 dark:from-blue-800/30 dark:to-purple-800/30 rounded-full blur-3xl animate-float"></div>
				<div class="absolute bottom-0 left-0 w-80 h-80 bg-gradient-to-r from-emerald-200/30 to-cyan-200/30 dark:from-emerald-800/30 dark:to-cyan-800/30 rounded-full blur-3xl animate-float" style="animation-delay: 4s;"></div>
				<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-br from-pink-200/20 to-indigo-200/20 dark:from-pink-800/20 dark:to-indigo-800/20 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
				
				<div class="container-custom relative">
					<div class="max-w-4xl mx-auto text-center mb-20">
						<div class="inline-flex items-center rounded-full px-6 py-3 bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/30 dark:to-purple-900/30 border border-blue-200/50 dark:border-blue-700/50 text-blue-700 dark:text-blue-300 text-sm font-medium mb-8 backdrop-blur-md shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
							<div class="w-2 h-2 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full mr-3 animate-pulse"></div>
							<span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent font-semibold">Comprehensive Solutions</span>
						</div>
						
						<h2 class="text-5xl md:text-6xl font-bold mb-8 tracking-tight">
							<span class="text-gray-900 dark:text-white">Our</span>
							<br>
							<span class="relative">
								<span class="bg-gradient-to-r from-blue-600 via-purple-600 to-emerald-600 bg-clip-text text-transparent animate-gradient-x">
									Premium Services
								</span>
								<div class="absolute -inset-1 bg-gradient-to-r from-blue-600 via-purple-600 to-emerald-600 rounded-lg blur opacity-20 animate-pulse"></div>
							</span>
						</h2>
						<p class="text-xl text-gray-600 dark:text-gray-300 text-balance max-w-3xl mx-auto leading-relaxed">
							Comprehensive solutions tailored to your business needs with <span class="text-blue-600 dark:text-blue-400 font-semibold">cutting-edge technology</span> and expert implementation strategies.
						</p>
					</div>
					
					<div class="grid grid-cols-1 lg:grid-cols-2 gap-10 max-w-6xl mx-auto">
						<div class="group relative p-10 rounded-3xl bg-white/90 dark:bg-gray-800/90 backdrop-blur-md border border-white/20 dark:border-gray-700/20 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:scale-105 hover:-translate-y-3 overflow-hidden">
							<!-- Card glow effect -->
							<div class="absolute inset-0 bg-gradient-to-br from-blue-600/10 via-transparent to-purple-600/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
							
							<div class="relative z-10">
								<div class="flex items-start space-x-6 mb-8">
									<div class="p-4 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl shadow-lg group-hover:scale-110 transition-transform duration-300">
										<Icon name="monitor" size="xl" className="text-white" />
									</div>
									<div>
										<h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
											Web Development
										</h3>
										<div class="text-blue-600 dark:text-blue-400 font-semibold text-lg">Enterprise Solutions</div>
									</div>
								</div>
								<p class="text-gray-600 dark:text-gray-300 mb-10 leading-relaxed text-lg">
									Modern, responsive websites and web applications built with the latest technologies, optimized for exceptional performance and seamless user experience.
								</p>
								<div class="space-y-5 mb-10">
									<div class="flex items-center group/item">
										<div class="w-3 h-3 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-full mr-4 group-hover/item:scale-125 transition-transform duration-300"></div>
										<span class="text-gray-700 dark:text-gray-300 font-medium text-lg group-hover/item:text-emerald-600 dark:group-hover/item:text-emerald-400 transition-colors duration-300">Responsive & Mobile-First Design</span>
									</div>
									<div class="flex items-center group/item">
										<div class="w-3 h-3 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-full mr-4 group-hover/item:scale-125 transition-transform duration-300"></div>
										<span class="text-gray-700 dark:text-gray-300 font-medium text-lg group-hover/item:text-emerald-600 dark:group-hover/item:text-emerald-400 transition-colors duration-300">Advanced SEO Optimization</span>
									</div>
									<div class="flex items-center group/item">
										<div class="w-3 h-3 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-full mr-4 group-hover/item:scale-125 transition-transform duration-300"></div>
										<span class="text-gray-700 dark:text-gray-300 font-medium text-lg group-hover/item:text-emerald-600 dark:group-hover/item:text-emerald-400 transition-colors duration-300">Lightning-Fast Performance</span>
									</div>
								</div>
								<Button 
									variant="primary" 
									href="/services" 
									className="w-full group/btn bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold py-4 px-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 border-0"
								>
									<span class="flex items-center justify-center">
										Explore Web Development
										<Icon name="arrow-right" size="sm" className="ml-3 group-hover/btn:translate-x-2 transition-transform duration-300" />
									</span>
								</Button>
							</div>
						</div>
						
						<div class="group relative p-10 rounded-3xl bg-white/90 dark:bg-gray-800/90 backdrop-blur-md border border-white/20 dark:border-gray-700/20 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:scale-105 hover:-translate-y-3 overflow-hidden">
							
							<div class="relative z-10">
								<div class="flex items-start space-x-6 mb-8">
									<div class="p-4 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-2xl shadow-lg group-hover:scale-110 transition-transform duration-300">
										<Icon name="cloud" size="xl" className="text-white" />
									</div>
									<div>
										<h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors duration-300">
											Cloud Solutions
										</h3>
										<div class="text-emerald-600 dark:text-emerald-400 font-semibold text-lg">Scalable Infrastructure</div>
									</div>
