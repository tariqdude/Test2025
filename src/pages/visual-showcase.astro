  <script>
    // Particle system generator
    function createParticleSystem() {
      const demo = document.querySelector('.particle-demo');
      if (!demo) return;

      setInterval(() => {
        const particle = document.createElement('div');
        particle.className = 'particle-generated';
        particle.style.cssText = `
            position: absolute;
            width: ${2 + Math.random() * 4}px;
            height: ${2 + Math.random() * 4}px;
            background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(168,85,247,0.8) 50%, transparent 100%);
            border-radius: 50%;
            left: ${Math.random() * 100}%;
            top: 100%;
            pointer-events: none;
            animation: rise-particle ${2 + Math.random() * 3}s ease-out forwards;
          `;
        demo.appendChild(particle);

        setTimeout(() => particle.remove(), 5000);
      }, 200);
    }

    // Add keyframe animation for particles
    const style = document.createElement('style');
    style.textContent = `
        @keyframes rise-particle {
          0% {
            transform: translateY(0) scale(1);
            opacity: 0;
          }
          10% {
            opacity: 1;
          }
          90% {
            opacity: 1;
          }
          100% {
            transform: translateY(-300px) translateX(${Math.random() * 100 - 50}px) scale(0);
            opacity: 0;
          }
        }
      `;
    document.head.appendChild(style);

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', createParticleSystem);
    } else {
      createParticleSystem();
    }

    // Magnetic effect on buttons
    document.querySelectorAll('button, .interactive-tile').forEach(el => {
      el.addEventListener('mousemove', e => {
        if (!(e instanceof MouseEvent)) return;
        if (!(el instanceof HTMLElement)) return;
        const rect = el.getBoundingClientRect();
        const x = ((e.clientX - rect.left) / rect.width - 0.5) * 20;
        const y = ((e.clientY - rect.top) / rect.height - 0.5) * 20;
        el.style.transform = `translate(${x * 0.5}px, ${y * 0.5}px)`;
      });

      el.addEventListener('mouseleave', () => {
        if (!(el instanceof HTMLElement)) return;
        el.style.transform = '';
      });
    });

    // Scroll progress indicator
    const progressBar = document.createElement('div');
    progressBar.style.cssText =
      'position: fixed; top: 0; left: 0; height: 4px; background: linear-gradient(90deg, #8b5cf6, #ec4899, #3b82f6); width: 0%; z-index: 9999; transition: width 0.1s ease;';
    document.body.appendChild(progressBar);

    window.addEventListener('scroll', () => {
      const scrolled =
        (window.scrollY /
          (document.documentElement.scrollHeight - window.innerHeight)) *
        100;
      progressBar.style.width = scrolled + '%';
    });
  </script>
