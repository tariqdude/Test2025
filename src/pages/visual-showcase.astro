    <style>
      /* Morphing blobs */
      .morphing-blob-1,
      .morphing-blob-2,
      .morphing-blob-3 {
        position: absolute;
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        animation:
          morph 8s ease-in-out infinite,
          float 6s ease-in-out infinite;
        filter: blur(40px);
      }

      .morphing-blob-1 {
        width: 200px;
        height: 200px;
        background: linear-gradient(
          135deg,
          rgba(99, 102, 241, 0.6),
          rgba(168, 85, 247, 0.6)
        );
      }

      .morphing-blob-2 {
        width: 180px;
        height: 180px;
        background: linear-gradient(
          135deg,
          rgba(236, 72, 153, 0.5),
          rgba(239, 68, 68, 0.5)
        );
        animation-delay: -2s;
      }

      .morphing-blob-3 {
        width: 160px;
        height: 160px;
        background: linear-gradient(
          135deg,
          rgba(59, 130, 246, 0.5),
          rgba(16, 185, 129, 0.5)
        );
        animation-delay: -4s;
      }

      @keyframes morph {
        0%,
        100% {
          border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        }
        25% {
          border-radius: 58% 42% 75% 25% / 76% 46% 54% 24%;
        }
        50% {
          border-radius: 50% 50% 33% 67% / 55% 27% 73% 45%;
        }
        75% {
          border-radius: 33% 67% 58% 42% / 63% 68% 32% 37%;
        }
      }

      /* Wave animations */
      .wave-path {
        animation: wave-flow 3s ease-in-out infinite;
      }

      @keyframes wave-flow {
        0%,
        100% {
          d: path('M0,100 Q50,50 100,100 T200,100 T300,100 T400,100');
        }
        50% {
          d: path('M0,100 Q50,150 100,100 T200,100 T300,100 T400,100');
        }
      }

      /* Gradient orbs */
      .gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        animation: float-orb 8s ease-in-out infinite;
        mix-blend-mode: screen;
      }

      .orb-1 {
        width: 150px;
        height: 150px;
        background: rgba(99, 102, 241, 0.7);
        top: 20%;
        left: 20%;
      }

      .orb-2 {
        width: 120px;
        height: 120px;
        background: rgba(236, 72, 153, 0.7);
        top: 60%;
        right: 20%;
        animation-delay: -2s;
      }

      .orb-3 {
        width: 100px;
        height: 100px;
        background: rgba(59, 130, 246, 0.7);
        bottom: 20%;
        left: 30%;
        animation-delay: -4s;
      }

      .orb-4 {
        width: 130px;
        height: 130px;
        background: rgba(168, 85, 247, 0.7);
        top: 40%;
        right: 40%;
        animation-delay: -6s;
      }

      @keyframes float-orb {
        0%,
        100% {
          transform: translate(0, 0) scale(1);
        }
        33% {
          transform: translate(30px, -30px) scale(1.1);
        }
        66% {
          transform: translate(-20px, 20px) scale(0.9);
        }
      }

      /* Interactive tile hover effect */
      .interactive-tile::before {
        content: '';
        position: absolute;
        inset: -2px;
        background: linear-gradient(45deg, #6366f1, #a855f7, #ec4899, #6366f1);
        background-size: 300% 300%;
        border-radius: inherit;
        opacity: 0;
        transition: opacity 0.5s;
        animation: gradient-rotate 4s linear infinite;
        z-index: -1;
      }

      .interactive-tile:hover::before {
        opacity: 1;
      }

      @keyframes gradient-rotate {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      /* Demo card styles */
      .interactive-demo-card {
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .interactive-demo-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 20px 60px rgba(168, 85, 247, 0.3);
      }
    </style>

    <script>
      // Particle system generator
      function createParticleSystem() {
        const demo = document.querySelector('.particle-demo');
        if (!demo) return;

        setInterval(() => {
          const particle = document.createElement('div');
          particle.className = 'particle-generated';
          particle.style.cssText = `
            position: absolute;
            width: ${2 + Math.random() * 4}px;
            height: ${2 + Math.random() * 4}px;
            background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(168,85,247,0.8) 50%, transparent 100%);
            border-radius: 50%;
            left: ${Math.random() * 100}%;
            top: 100%;
            pointer-events: none;
            animation: rise-particle ${2 + Math.random() * 3}s ease-out forwards;
          `;
          demo.appendChild(particle);

          setTimeout(() => particle.remove(), 5000);
        }, 200);
      }

      // Add keyframe animation for particles
      const style = document.createElement('style');
      style.textContent = `
        @keyframes rise-particle {
          0% {
            transform: translateY(0) scale(1);
            opacity: 0;
          }
          10% {
            opacity: 1;
          }
          90% {
            opacity: 1;
          }
          100% {
            transform: translateY(-300px) translateX(${Math.random() * 100 - 50}px) scale(0);
            opacity: 0;
          }
        }
      `;
      document.head.appendChild(style);

      // Initialize when DOM is ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', createParticleSystem);
      } else {
        createParticleSystem();
      }

      // Magnetic effect on buttons
      document.querySelectorAll('button, .interactive-tile').forEach(el => {
        el.addEventListener('mousemove', e => {
          if (!(e instanceof MouseEvent)) return;
          if (!(el instanceof HTMLElement)) return;
          const rect = el.getBoundingClientRect();
          const x = ((e.clientX - rect.left) / rect.width - 0.5) * 20;
          const y = ((e.clientY - rect.top) / rect.height - 0.5) * 20;
          el.style.transform = `translate(${x * 0.5}px, ${y * 0.5}px)`;
        });

        el.addEventListener('mouseleave', () => {
          if (!(el instanceof HTMLElement)) return;
          el.style.transform = '';
        });
      });
    </script>
  </body>
