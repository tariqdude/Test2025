---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import Icon from '../components/ui/Icon.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const pricingPlans = [
  {
    title: 'Starter',
    description: 'Perfect for small businesses getting started with digital transformation',
    price: 29,
    period: 'month',
    popular: false,
    color: 'blue',
    features: [
      'Up to 5 team members',
      'Basic analytics dashboard',
      'Email support',
      'Mobile app access',
      'Basic integrations',
      '5GB storage',
      'Standard templates'
    ],
    excluded: [
      'Custom integrations',
      'Priority support',
      'Advanced analytics',
      'White-label options'
    ]
  },
  {
    title: 'Professional',
    description: 'Ideal for growing businesses with advanced needs and scaling requirements',
    price: 79,
    period: 'month',
    popular: true,
    color: 'purple',
    features: [
      'Up to 25 team members',
      'Advanced analytics & reporting',
      'Priority email support',
      'Custom integrations',
      'API access',
      '50GB storage',
      'Custom templates',
      'Multi-workspace support'
    ],
    excluded: [
      '24/7 phone support',
      'Dedicated account manager',
      'Custom development',
      'SLA guarantees'
    ]
  },
  {
    title: 'Enterprise',
    description: 'Comprehensive solution for large organizations with complex requirements',
    price: 199,
    period: 'month',
    popular: false,
    color: 'orange',
    features: [
      'Unlimited team members',
      'Enterprise analytics suite',
      '24/7 phone & chat support',
      'Unlimited integrations',
      'Advanced API access',
      'Unlimited storage',
      'White-label options',
      'Dedicated account manager',
      'Custom development',
      'SLA guarantees',
      'Security compliance',
      'Priority onboarding'
    ],
    excluded: []
  }
];

const faqs = [
  {
    question: 'Can I switch plans at any time?',
    answer: 'Yes, you can upgrade or downgrade your plan at any time. Changes will be reflected in your next billing cycle, and we\'ll prorate any differences.'
  },
  {
    question: 'Do you offer custom pricing for large enterprises?',
    answer: 'Absolutely! We offer custom pricing and solutions for large enterprises with specific requirements. Contact our sales team to discuss your needs.'
  },
  {
    question: 'Is there a free trial available?',
    answer: 'Yes, we offer a 14-day free trial for all plans. No credit card required to get started.'
  },
  {
    question: 'What kind of support do you provide?',
    answer: 'We provide email support for all plans, priority email support for Professional plans, and 24/7 phone & chat support for Enterprise plans.'
  },
  {
    question: 'Are there any setup fees?',
    answer: 'No, there are no setup fees for any of our plans. You only pay the monthly subscription fee.'
  },
  {
    question: 'Can I cancel my subscription anytime?',
    answer: 'Yes, you can cancel your subscription at any time. Your access will continue until the end of your current billing period.'
  }
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} | Pricing`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    
    <main>
      <!-- Hero Section -->
      <section class="relative py-20 bg-gradient-to-br from-primary-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-purple-900 overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-white/20 to-transparent dark:from-gray-900/20"></div>
        
        <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-4xl mx-auto text-center">
            <div class="inline-flex items-center px-4 py-2 bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400 rounded-full text-sm font-medium mb-6 backdrop-blur-sm">
              <Icon name="dollar-sign" class="w-4 h-4 mr-2" />
              Transparent Pricing
            </div>
            <h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
              Choose Your 
              <span class="bg-gradient-to-r from-primary-600 to-purple-600 bg-clip-text text-transparent">
                Perfect Plan
              </span>
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-3xl mx-auto">
              Flexible pricing options designed to grow with your business. 
              Start with a free trial and scale as you succeed.
            </p>
          </div>
        </div>
      </section>

      <!-- Pricing Cards -->
      <section class="py-20 bg-white dark:bg-gray-950">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {pricingPlans.map((plan) => (
              <Card className={`relative border-0 p-8 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 ${
                plan.popular 
                  ? 'bg-gradient-to-br from-primary-50 to-purple-50 dark:from-primary-900/20 dark:to-purple-900/20 ring-2 ring-primary-500 dark:ring-primary-400' 
                  : 'bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-900'
              }`}>
                {plan.popular && (
                  <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                    <span class="bg-gradient-to-r from-primary-600 to-purple-600 text-white px-4 py-2 rounded-full text-sm font-medium">
                      Most Popular
                    </span>
                  </div>
                )}
                
                <div class="text-center">
                  <!-- Plan Header -->
                  <div class={`w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br ${
                    plan.color === 'blue' ? 'from-blue-400 to-blue-600' :
                    plan.color === 'purple' ? 'from-purple-400 to-purple-600' :
                    'from-orange-400 to-orange-600'
                  } flex items-center justify-center text-white text-2xl font-bold`}>
                    {plan.title.charAt(0)}
                  </div>
                  
                  <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                    {plan.title}
                  </h3>
                  
                  <p class="text-gray-600 dark:text-gray-300 mb-6">
                    {plan.description}
                  </p>
                  
                  <!-- Pricing -->
                  <div class="mb-8">
                    <div class="flex items-baseline justify-center">
                      <span class="text-5xl font-bold text-gray-900 dark:text-white">
                        ${plan.price}
                      </span>
                      <span class="text-gray-600 dark:text-gray-400 ml-2">
                        /{plan.period}
                      </span>
                    </div>
                  </div>
                  
                  <!-- CTA Button -->
                  <Button 
                    variant={plan.popular ? "primary" : "outline"} 
                    className="w-full mb-8 group-hover:scale-105 transition-transform duration-200"
                  >
                    {plan.popular ? 'Start Free Trial' : 'Get Started'}
                  </Button>
                  
                  <!-- Features -->
                  <div class="text-left">
                    <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-4 uppercase tracking-wide">
                      What's Included
                    </h4>
                    <ul class="space-y-3 mb-6">
                      {plan.features.map((feature) => (
                        <li class="flex items-start">
                          <Icon name="check" class="w-5 h-5 text-green-500 mr-3 flex-shrink-0 mt-0.5" />
                          <span class="text-gray-600 dark:text-gray-300 text-sm">
                            {feature}
                          </span>
                        </li>
                      ))}
                    </ul>
                    
                    {plan.excluded.length > 0 && (
                      <div>
                        <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-4 uppercase tracking-wide">
                          Not Included
                        </h4>
                        <ul class="space-y-3">
                          {plan.excluded.map((feature) => (
                            <li class="flex items-start">
                              <Icon name="x" class="w-5 h-5 text-gray-400 mr-3 flex-shrink-0 mt-0.5" />
                              <span class="text-gray-500 dark:text-gray-400 text-sm">
                                {feature}
                              </span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}
                  </div>
                </div>
              </Card>
            ))}
          </div>
          
          <!-- Enterprise Contact -->
          <div class="text-center mt-12">
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Need a custom solution for your organization?
            </p>
            <a href="/contact" class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium">
              <Icon name="phone" class="w-4 h-4 mr-2" />
              Contact our sales team
            </a>
          </div>
        </div>
      </section>

      <!-- Features Comparison -->
      <section class="py-20 bg-gray-50 dark:bg-gray-800">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
              Why Choose Our Platform?
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300">
              Powerful features and capabilities that set us apart from the competition.
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            <Card className="text-center border-0 bg-white dark:bg-gray-900 p-6 hover:shadow-xl transition-shadow">
              <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center text-white mx-auto mb-4">
                <Icon name="zap" class="w-6 h-6" />
              </div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
                Lightning Fast
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">
                Optimized performance ensures your applications run at peak speed.
              </p>
            </Card>

            <Card className="text-center border-0 bg-white dark:bg-gray-900 p-6 hover:shadow-xl transition-shadow">
              <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center text-white mx-auto mb-4">
                <Icon name="shield" class="w-6 h-6" />
              </div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
                Enterprise Security
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">
                Bank-level security with encryption, compliance, and regular audits.
              </p>
            </Card>

            <Card className="text-center border-0 bg-white dark:bg-gray-900 p-6 hover:shadow-xl transition-shadow">
              <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-purple-600 rounded-lg flex items-center justify-center text-white mx-auto mb-4">
                <Icon name="trending-up" class="w-6 h-6" />
              </div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
                Scalable Growth
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">
                Scales automatically with your business, from startup to enterprise.
              </p>
            </Card>

            <Card className="text-center border-0 bg-white dark:bg-gray-900 p-6 hover:shadow-xl transition-shadow">
              <div class="w-12 h-12 bg-gradient-to-br from-orange-400 to-orange-600 rounded-lg flex items-center justify-center text-white mx-auto mb-4">
                <Icon name="globe" class="w-6 h-6" />
              </div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
                Global Reach
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">
                Worldwide infrastructure ensures optimal performance everywhere.
              </p>
            </Card>

            <Card className="text-center border-0 bg-white dark:bg-gray-900 p-6 hover:shadow-xl transition-shadow">
              <div class="w-12 h-12 bg-gradient-to-br from-pink-400 to-pink-600 rounded-lg flex items-center justify-center text-white mx-auto mb-4">
                <Icon name="heart" class="w-6 h-6" />
              </div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
                24/7 Support
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">
                Round-the-clock support from our expert team whenever you need help.
              </p>
            </Card>

            <Card className="text-center border-0 bg-white dark:bg-gray-900 p-6 hover:shadow-xl transition-shadow">
              <div class="w-12 h-12 bg-gradient-to-br from-indigo-400 to-indigo-600 rounded-lg flex items-center justify-center text-white mx-auto mb-4">
                <Icon name="code" class="w-6 h-6" />
              </div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
                Developer Friendly
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">
                Comprehensive APIs and documentation for seamless integration.
              </p>
            </Card>
          </div>
        </div>
      </section>

      <!-- FAQ Section -->
      <section class="py-20 bg-white dark:bg-gray-950">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
              Frequently Asked Questions
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300">
              Got questions? We have answers. Here are the most common questions about our pricing.
            </p>
          </div>

          <div class="max-w-3xl mx-auto space-y-6">
            {faqs.map((faq) => (
              <Card className="border-0 bg-gray-50 dark:bg-gray-800 p-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
                  {faq.question}
                </h3>
                <p class="text-gray-600 dark:text-gray-300">
                  {faq.answer}
                </p>
              </Card>
            ))}
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="py-20 bg-primary-600 dark:bg-primary-700">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
              Ready to Get Started?
            </h2>
            <p class="text-xl text-primary-100 mb-8">
              Join thousands of satisfied customers who have transformed their business with our platform.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/contact" class="inline-flex items-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-50 transition-colors">
                <Icon name="play" class="w-5 h-5 mr-2" />
                Start Free Trial
              </a>
              <a href="/services" class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary-600 transition-colors">
                <Icon name="phone" class="w-5 h-5 mr-2" />
                Talk to Sales
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>
    
    <Footer />
  </body>
</html>
