---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { withBasePath } from '../utils/helpers';

type FocusArea = { title: string; description: string };
type WorkflowStep = string;
type UpgradeHighlight = { label: string; detail: string };

const focusAreas: FocusArea[] = [
  {
    title: 'Static-first reporting',
    description:
      'Version dashboards as Markdown summaries or screenshots so they deploy with the rest of your site.',
  },
  {
    title: 'Automation hooks',
    description:
      'Use the included scripts folder to convert CSV exports into tables and timeline updates.',
  },
  {
    title: 'People-friendly updates',
    description:
      'Summaries keep stakeholders informed without navigating a complex single-page app.',
  },
];

const workflow: WorkflowStep[] = [
  'Collect metrics via your preferred observability platform.',
  'Export or summarise key numbers once per cadence (day, week, sprint).',
  'Commit the update as Markdown so Git tracks the changes and reviews remain simple.',
];

const upgradeHighlights: UpgradeHighlight[] = [
  {
    label: 'Performance',
    detail:
      'Removes all runtime dependencies, cutting bundle size to zero for this page.',
  },
  {
    label: 'Governance',
    detail:
      'Every dashboard revision is versioned, reviewable, and easy to diff in Git.',
  },
  {
    label: 'Portability',
    detail:
      'Works on GitHub Pages, GitLab Pages, or any static hosting provider without changes.',
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="Dashboard v2 | Elite Project"
      description="A streamlined dashboard concept that leans on static exports instead of runtime frameworks."
    />
  </head>
  <body class="bg-neutral-50 text-neutral-900">
    <Header />
    <main>
      <section class="bg-neutral-900 text-neutral-50">
        <div class="mx-auto max-w-4xl px-6 py-24">
          <p
            class="text-sm font-semibold uppercase tracking-[0.3em] text-neutral-400"
          >
            Dashboard v2
          </p>
          <h1 class="mt-6 text-4xl font-semibold sm:text-5xl">
            Modern analytics, without the runtime baggage.
          </h1>
          <p class="mt-6 text-lg text-neutral-300">
            Version 2 of the dashboard re-imagines the experience as a curated
            report built from exports. No more shipping five different
            frameworks to approximate product health.
          </p>
        </div>
      </section>

      <section class="bg-white">
        <div class="mx-auto max-w-5xl space-y-8 px-6 py-16">
          {
            focusAreas.map(area => (
              <article class="rounded-2xl border border-neutral-200 bg-neutral-50 p-8">
                <h2 class="text-2xl font-semibold text-neutral-900">
                  {area.title}
                </h2>
                <p class="mt-3 text-sm text-neutral-600">{area.description}</p>
              </article>
            ))
          }
        </div>
      </section>

      <section class="bg-neutral-50">
        <div class="mx-auto max-w-4xl px-6 py-16 text-center">
          <h2 class="text-2xl font-semibold text-neutral-900">
            Suggested workflow
          </h2>
          <ol class="mt-6 space-y-4 text-sm text-neutral-600">
            {
              workflow.map((step, index) => (
                <li class="mx-auto flex max-w-3xl items-start gap-4 rounded-2xl border border-neutral-200 bg-white px-5 py-4">
                  <span class="flex h-8 w-8 items-center justify-center rounded-full bg-brand-600 text-sm font-semibold text-white">
                    {index + 1}
                  </span>
                  <span>{step}</span>
                </li>
              ))
            }
          </ol>
          <div class="mt-8 flex flex-wrap justify-center gap-3">
            <a
              class="inline-flex items-center justify-center rounded-full bg-brand-600 px-5 py-2 text-sm font-semibold text-white transition hover:bg-brand-700"
              href={withBasePath('pricing/')}
            >
              Compare support options
            </a>
            <a
              class="inline-flex items-center justify-center rounded-full border border-neutral-200 px-5 py-2 text-sm font-semibold text-neutral-800 transition hover:border-neutral-300"
              href={withBasePath('contact/')}
            >
              Request migration help
            </a>
          </div>
        </div>
      </section>

      <section class="bg-white">
        <div class="mx-auto max-w-5xl px-6 py-16">
          <h2 class="text-2xl font-semibold text-neutral-900">
            Upgrade highlights
          </h2>
          <dl class="mt-6 grid gap-6 sm:grid-cols-3">
            {
              upgradeHighlights.map(item => (
                <div class="rounded-2xl border border-neutral-200 bg-neutral-50 p-6">
                  <dt class="text-sm font-semibold uppercase tracking-wide text-brand-600">
                    {item.label}
                  </dt>
                  <dd class="mt-3 text-sm text-neutral-600">{item.detail}</dd>
                </div>
              ))
            }
          </dl>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
