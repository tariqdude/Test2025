---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import DashboardMetrics, { type DashboardMetric } from '../components/ui/DashboardMetrics.astro';
import PerformanceMonitor from '../components/PerformanceMonitor.astro';
import ThreeScene from '../components/react/ThreeScene';
import ReactiveCounter from '../components/solid/ReactiveCounter';
import ParticleCanvas from '../components/svelte/ParticleCanvas.svelte';

// Mock real-time data
const projectStats = {
  totalFiles: 247,
  linesOfCode: 15420,
  testCoverage: 87.3,
  buildTime: 2.4,
  lastDeployment: new Date('2024-01-15T14:30:00'),
  activeUsers: 1247,
  apiCalls: 45230,
  errorRate: 0.12
};

const performanceMetrics = {
  cpu: 23.5,
  memory: 67.2,
  disk: 45.8,
  network: 12.3
};

const recentActivity = [
  { type: 'deployment', message: 'Production deployment successful', time: '2 minutes ago', status: 'success' },
  { type: 'test', message: 'All tests passed in CI/CD pipeline', time: '15 minutes ago', status: 'success' },
  { type: 'error', message: 'TypeScript compilation warning resolved', time: '1 hour ago', status: 'warning' },
  { type: 'security', message: 'Security scan completed - no issues found', time: '2 hours ago', status: 'success' },
  { type: 'performance', message: 'Bundle size optimization completed', time: '3 hours ago', status: 'info' }
];

const dashboardMetrics: DashboardMetric[] = [
  { label: 'Total Revenue', value: 124530, format: 'currency', change: 12.5, changeType: 'increase' },
  { label: 'Active Users', value: projectStats.activeUsers, format: 'number', change: 8.2, changeType: 'increase' },
  { label: 'Conversion Rate', value: 3.24, format: 'percentage', change: -0.3, changeType: 'decrease' },
  { label: 'API Calls', value: projectStats.apiCalls, format: 'number', change: 15.7, changeType: 'increase' }
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Elite Dashboard | Real-time Project Analytics" description="Comprehensive real-time dashboard for project monitoring, analytics, and performance tracking" />
    <style>
      .custom-scrollbar::-webkit-scrollbar {
        width: 4px;
      }
      
      .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
      }
      
      .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgb(156 163 175 / 0.5);
        border-radius: 2px;
      }
      
      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: rgb(156 163 175 / 0.7);
      }

      /* Enhanced animations */
      @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        25% { transform: translateY(-10px) rotate(1deg); }
        50% { transform: translateY(-20px) rotate(0deg); }
        75% { transform: translateY(-10px) rotate(-1deg); }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 dark:from-slate-900 dark:via-slate-800 dark:to-indigo-900">
        <!-- Floating Background Elements -->
        <div class="fixed inset-0 overflow-hidden pointer-events-none">
          <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-blue-300/20 rounded-full blur-3xl animate-float"></div>
          <div class="absolute top-3/4 right-1/4 w-96 h-96 bg-purple-300/20 rounded-full blur-3xl animate-float"></div>
          <div class="absolute bottom-1/4 left-1/3 w-80 h-80 bg-green-300/20 rounded-full blur-3xl animate-float"></div>
        </div>

        <!-- Main Dashboard Container -->
        <div class="relative z-10 container mx-auto px-6 py-8">
          
          <!-- Dashboard Header -->
          <div class="mb-8">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
              <div>
                <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent animate-slide-down">
                  üöÄ Elite Project Dashboard
                </h1>
                <p class="text-gray-600 dark:text-gray-300 mt-2 animate-slide-up">
                  Real-time analytics and monitoring for your development workflow
                </p>
              </div>
              <div class="flex flex-wrap gap-3 animate-slide-left">
                <Button variant="primary" size="md">
                  üîÑ Refresh Data
                </Button>
                <Button variant="outline" size="md">
                  üìä Export Report
                </Button>
                <Button variant="ghost" size="md">
                  ‚öôÔ∏è Settings
                </Button>
              </div>
            </div>
            
            <!-- Live Status Indicator -->
            <div class="flex items-center gap-2 mt-4 animate-fade-in">
              <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
              <span class="text-sm text-gray-600 dark:text-gray-300">Live monitoring active</span>
              <span class="text-xs text-gray-500">Last updated: {new Date().toLocaleTimeString()}</span>
            </div>
          </div>

          <!-- Key Metrics Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <Card variant="glass" hover={true} className="animate-scale">
              <div class="text-center">
                <div class="text-3xl mb-2">üìÅ</div>
                <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">{projectStats.totalFiles}</div>
                <div class="text-sm text-gray-600 dark:text-gray-300">Total Files</div>
                <div class="mt-2 text-xs text-green-600 dark:text-green-400">+12 this week</div>
              </div>
            </Card>

            <Card variant="glass" hover={true} className="animate-scale">
              <div class="text-center">
                <div class="text-3xl mb-2">üíª</div>
                <div class="text-2xl font-bold text-purple-600 dark:text-purple-400">{projectStats.linesOfCode.toLocaleString()}</div>
                <div class="text-sm text-gray-600 dark:text-gray-300">Lines of Code</div>
                <div class="mt-2 text-xs text-green-600 dark:text-green-400">+1,247 this week</div>
              </div>
            </Card>

            <Card variant="glass" hover={true} className="animate-scale">
              <div class="text-center">
                <div class="text-3xl mb-2">üß™</div>
                <div class="text-2xl font-bold text-green-600 dark:text-green-400">{projectStats.testCoverage}%</div>
                <div class="text-sm text-gray-600 dark:text-gray-300">Test Coverage</div>
                <div class="mt-2 text-xs text-green-600 dark:text-green-400">+2.3% this week</div>
              </div>
            </Card>

            <Card variant="glass" hover={true} className="animate-scale">
              <div class="text-center">
                <div class="text-3xl mb-2">‚ö°</div>
                <div class="text-2xl font-bold text-orange-600 dark:text-orange-400">{projectStats.buildTime}s</div>
                <div class="text-sm text-gray-600 dark:text-gray-300">Build Time</div>
                <div class="mt-2 text-xs text-green-600 dark:text-green-400">-0.3s improvement</div>
              </div>
            </Card>
          </div>

          <!-- Interactive Data Visualization Row -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
            
            <!-- Custom Performance Chart -->
            <Card variant="glass" className="animate-slide-right">
              <div class="h-80">
                <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                  üìà Performance Trends
                  <span class="text-sm text-gray-500 font-normal">Last 6 months</span>
                </h3>
                <div class="w-full h-64 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-lg flex items-center justify-center">
                  <div class="text-center">
                    <div class="text-4xl mb-2">üìä</div>
                    <div class="text-lg font-semibold text-gray-700 dark:text-gray-300">Performance Chart</div>
                    <div class="text-sm text-gray-500">Interactive visualization</div>
                  </div>
                </div>
              </div>
            </Card>

            <!-- 3D Scene Visualization -->
            <Card variant="glass" className="animate-slide-left">
              <div class="h-80">
                <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                  üåê 3D Project Structure
                  <span class="text-sm text-gray-500 font-normal">Interactive visualization</span>
                </h3>
                <div class="w-full h-64 rounded-lg overflow-hidden">
                  <ThreeScene client:only="react" />
                </div>
              </div>
            </Card>
          </div>

          <!-- System Performance and Activity Row -->
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
            
            <!-- Real-time Performance Monitor -->
            <Card variant="glass" className="animate-slide-up">
              <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                ‚öôÔ∏è System Performance
                <div class="ml-2">
                  <ReactiveCounter client:load />
                </div>
              </h3>
              <PerformanceMonitor />
              
              <div class="space-y-3 mt-4">
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600 dark:text-gray-300">CPU Usage</span>
                  <span class="font-semibold">{performanceMetrics.cpu}%</span>
                </div>
                <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                  <div class="bg-blue-600 h-2 rounded-full transition-all duration-500" style={`width: ${performanceMetrics.cpu}%`}></div>
                </div>
                
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600 dark:text-gray-300">Memory</span>
                  <span class="font-semibold">{performanceMetrics.memory}%</span>
                </div>
                <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                  <div class="bg-purple-600 h-2 rounded-full transition-all duration-500" style={`width: ${performanceMetrics.memory}%`}></div>
                </div>
                
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600 dark:text-gray-300">Disk</span>
                  <span class="font-semibold">{performanceMetrics.disk}%</span>
                </div>
                <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                  <div class="bg-green-600 h-2 rounded-full transition-all duration-500" style={`width: ${performanceMetrics.disk}%`}></div>
                </div>
              </div>
            </Card>

            <!-- Recent Activity Feed -->
            <Card variant="glass" className="animate-slide-up lg:col-span-2">
              <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                üìã Recent Activity
                <span class="text-sm text-gray-500 font-normal">Live feed</span>
              </h3>
              
              <div class="space-y-3 max-h-64 overflow-y-auto custom-scrollbar">
                {recentActivity.map((activity, _index) => (
                  <div class="flex items-start gap-3 p-3 rounded-lg bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm border border-white/20 dark:border-gray-700/50 hover:bg-white/70 dark:hover:bg-gray-700/70 transition-colors">
                    <div class={`w-2 h-2 rounded-full mt-2 ${
                      activity.status === 'success' ? 'bg-green-500' :
                      activity.status === 'warning' ? 'bg-yellow-500' :
                      activity.status === 'error' ? 'bg-red-500' : 'bg-blue-500'
                    }`}></div>
                    <div class="flex-1">
                      <div class="flex items-center gap-2">
                        <span class="text-lg">
                          {activity.type === 'deployment' ? 'üöÄ' :
                           activity.type === 'test' ? 'üß™' :
                           activity.type === 'error' ? '‚ö†Ô∏è' :
                           activity.type === 'security' ? 'üîí' : '‚ö°'}
                        </span>
                        <span class="font-medium text-sm">{activity.message}</span>
                      </div>
                      <div class="text-xs text-gray-500 mt-1">{activity.time}</div>
                    </div>
                  </div>
                ))}
              </div>
            </Card>
          </div>

          <!-- Interactive Particle Background Component -->
          <Card variant="glass" className="animate-fade-in">
            <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
              ‚ú® Interactive Particle System
              <span class="text-sm text-gray-500 font-normal">Mouse-reactive visualization</span>
            </h3>
            <div class="h-48 rounded-lg overflow-hidden">
              <ParticleCanvas client:load />
            </div>
          </Card>

          <!-- Additional Dashboard Metrics -->
          <div class="mt-8">
            <DashboardMetrics metrics={dashboardMetrics} />
          </div>

        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
