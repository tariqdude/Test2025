---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import UltraCard from '../components/ui/UltraCard.astro';
import HyperButton from '../components/ui/HyperButton.astro';
import UltraGrid from '../components/ui/UltraGrid.astro';
import UltraAnimate from '../components/ui/UltraAnimate.astro';
import { Image } from 'astro:assets';
import AboutHeroImage from '../assets/blog-placeholder-about.jpg';

const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="About Us" description="Learn more about our mission, vision, and the team behind our innovative solutions." />
	</head>
	<body>
		<Header />
		
		<!-- Hero Section -->
		<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-black via-gray-900 to-neon-dark overflow-hidden">
			<div class="absolute inset-0 bg-mesh opacity-20"></div>
			<div class="absolute inset-0 bg-gradient-to-r from-neon-blue/10 to-neon-purple/10"></div>
			
			<!-- Quantum Particles -->
			<div class="absolute inset-0 overflow-hidden">
				<div class="absolute top-20 left-10 w-20 h-20 bg-gradient-to-br from-neon-cyan/40 to-neon-blue/40 rounded-full animate-consciousness-expand"></div>
				<div class="absolute bottom-32 right-16 w-16 h-16 bg-gradient-to-br from-neon-pink/40 to-neon-purple/40 rounded-full animate-dimensional-shift"></div>
				<div class="absolute top-1/2 right-1/4 w-12 h-12 bg-gradient-to-br from-neon-green/40 to-neon-cyan/40 rounded-full animate-neural-pulse"></div>
				<div class="absolute bottom-1/4 left-1/3 w-8 h-8 bg-gradient-to-br from-neon-yellow/40 to-neon-orange/40 rounded-full animate-holographic-shimmer"></div>
			</div>

			<div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
				<UltraAnimate animation="consciousness-expand">
					<UltraCard variant="quantum" size="xl" dimension="4d" interaction="quantum" energy="transcendent" glowIntensity="reality-breaking" className="text-center">
						<h1 class="text-8xl font-bold bg-gradient-to-r from-neon-cyan via-neon-blue to-neon-purple bg-clip-text text-transparent mb-8 animate-holographic-shimmer">
							ENTITY PROFILE
						</h1>
						<p class="text-2xl text-gray-300 leading-relaxed max-w-4xl mx-auto">
							We are <span class="text-neon-cyan font-semibold">quantum architects</span> crafting 
							<span class="text-neon-purple font-semibold">reality-transcending experiences</span> through 
							<span class="text-neon-pink font-semibold">dimensional technology</span>.
						</p>
					</UltraCard>
				</UltraAnimate>
			</div>
		</section>

		<!-- Mission & Vision Section -->
		<section class="py-20 bg-black">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<UltraAnimate animation="neural-pulse">
					<div class="text-center mb-16">
						<h2 class="text-6xl font-bold text-transparent bg-gradient-to-r from-neon-cyan via-neon-blue to-neon-purple bg-clip-text mb-6">QUANTUM MISSION</h2>
						<div class="w-64 h-2 bg-gradient-to-r from-neon-purple via-neon-blue to-neon-cyan mx-auto rounded-full animate-glow"></div>
					</div>
				</UltraAnimate>

				<UltraGrid cols={1} md={2} gap="dimensional" className="mb-20">
					<UltraAnimate animation="dimensional-shift" delay={200}>
						<UltraCard variant="holographic" size="large" dimension="3d" interaction="quantum" energy="cosmic" glowIntensity="high">
							<div class="text-center space-y-6">
								<div class="w-20 h-20 bg-gradient-to-br from-neon-cyan to-neon-blue rounded-full mx-auto flex items-center justify-center mb-6 animate-consciousness-expand">
									<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
									</svg>
								</div>
								<h3 class="text-4xl font-bold text-white">INNOVATION NEXUS</h3>
								<p class="text-lg text-gray-300 leading-relaxed">
									We manipulate the quantum fabric of <span class="text-neon-cyan">reality itself</span>, creating 
									breakthrough solutions that <span class="text-neon-purple">transcend dimensions</span> and transform 
									how consciousness interacts with <span class="text-neon-blue">infinite possibility</span>.
								</p>
							</div>
						</UltraCard>
					</UltraAnimate>

					<UltraAnimate animation="consciousness-expand" delay={400}>
						<UltraCard variant="neural" size="large" dimension="3d" interaction="quantum" energy="transcendent" glowIntensity="high">
							<div class="text-center space-y-6">
								<div class="w-20 h-20 bg-gradient-to-br from-neon-purple to-neon-pink rounded-full mx-auto flex items-center justify-center mb-6 animate-holographic-shimmer">
									<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
									</svg>
								</div>
								<h3 class="text-4xl font-bold text-white">PERFECTION PROTOCOL</h3>
								<p class="text-lg text-gray-300 leading-relaxed">
									We architect <span class="text-neon-pink">flawless quantum systems</span> that exceed 
									multidimensional expectations, delivering <span class="text-neon-purple">god-tier excellence</span> 
									in every <span class="text-neon-cyan">reality matrix</span> we construct.
								</p>
							</div>
						</UltraCard>
					</UltraAnimate>
				</UltraGrid>
			</div>
		</section>

		<!-- Story Section -->
		<section class="py-20 bg-gradient-to-br from-gray-900 via-black to-neon-dark">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<UltraGrid cols={1} gap="dimensional" className="items-center">
					<UltraAnimate animation="dimensional-shift">
						<UltraCard variant="cosmic" size="large" dimension="3d" interaction="quantum" energy="transcendent" glowIntensity="reality-breaking">
							<div class="relative">
								<Image
									src={AboutHeroImage}
									alt="Our Quantum Origin"
									width={600}
									height={400}
									class="w-full h-80 object-cover rounded-3xl"
								/>
								<div class="absolute inset-0 bg-gradient-to-t from-neon-blue/60 via-neon-purple/30 to-transparent rounded-3xl"></div>
								<div class="absolute inset-0 bg-mesh opacity-30 rounded-3xl"></div>
							</div>
						</UltraCard>
					</UltraAnimate>

					<UltraAnimate animation="consciousness-expand" delay={300}>
						<div class="space-y-8">
							<h2 class="text-6xl font-bold text-transparent bg-gradient-to-r from-neon-cyan to-neon-purple bg-clip-text">ORIGIN MATRIX</h2>
							<div class="space-y-6 text-lg text-gray-300 leading-relaxed">
								<p>
									Spawned from the <span class="text-neon-cyan">quantum singularity</span> of infinite possibility, 
									we've evolved from microscopic code fragments to <span class="text-neon-purple">reality-bending architects</span> 
									commanding the <span class="text-neon-blue">digital multiverse</span>.
								</p>
								<p>
									Our essence crystallized around a <span class="text-neon-pink">fundamental truth</span>: technology should 
									<span class="text-neon-cyan">amplify consciousness</span>, not diminish it. This quantum philosophy 
									drives every <span class="text-neon-purple">dimensional manipulation</span> we perform.
								</p>
								<p>
									Today, we continue <span class="text-neon-blue">reality-hacking</span>, exploring 
									<span class="text-neon-cyan">impossible frontiers</span>, and manifesting solutions that 
									create <span class="text-neon-purple">multiversal impact</span> across infinite planes of existence.
								</p>
							</div>
							<HyperButton 
								variant="cosmic" 
								size="large" 
								href={baseUrl + "contact/"}
								effect="quantum"
								energy="maximum"
								shape="morphing"
								interaction="magnetic"
							>
								JOIN THE NEXUS
								<svg class="w-6 h-6 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
								</svg>
							</HyperButton>
						</div>
					</UltraAnimate>
				</UltraGrid>
			</div>
		</section>

		<!-- Values Section -->
		<section class="py-20 bg-black">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<UltraAnimate animation="neural-pulse">
					<div class="text-center mb-16">
						<h2 class="text-6xl font-bold text-transparent bg-gradient-to-r from-neon-pink via-neon-purple to-neon-cyan bg-clip-text mb-6">CORE PROTOCOLS</h2>
						<div class="w-64 h-2 bg-gradient-to-r from-neon-purple via-neon-blue to-neon-cyan mx-auto rounded-full animate-glow"></div>
					</div>
				</UltraAnimate>

				<UltraGrid cols={1} gap="dimensional">
					<UltraAnimate animation="consciousness-expand" delay={200}>
						<UltraCard variant="holographic" size="medium" dimension="3d" interaction="quantum" energy="cosmic" glowIntensity="high">
							<div class="text-center space-y-4">
								<div class="w-16 h-16 bg-gradient-to-br from-neon-cyan to-neon-blue rounded-xl mx-auto flex items-center justify-center animate-dimensional-shift">
									<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
									</svg>
								</div>
								<h3 class="text-2xl font-bold text-white">CREATIVE NEXUS</h3>
								<p class="text-gray-300">
									We embrace <span class="text-neon-cyan">impossible thinking</span> and foster 
									quantum environments where <span class="text-neon-blue">multidimensional ideas</span> 
									transcend reality barriers.
								</p>
							</div>
						</UltraCard>
					</UltraAnimate>

					<UltraAnimate animation="neural-pulse" delay={400}>
						<UltraCard variant="neural" size="medium" dimension="3d" interaction="quantum" energy="transcendent" glowIntensity="high">
							<div class="text-center space-y-4">
								<div class="w-16 h-16 bg-gradient-to-br from-neon-green to-neon-cyan rounded-xl mx-auto flex items-center justify-center animate-holographic-shimmer">
									<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
									</svg>
								</div>
								<h3 class="text-2xl font-bold text-white">UNITY MATRIX</h3>
								<p class="text-gray-300">
									We believe <span class="text-neon-green">cosmic synchronization</span> occurs when 
									<span class="text-neon-cyan">diverse consciousness</span> converges toward 
									<span class="text-neon-purple">universal objectives</span>.
								</p>
							</div>
						</UltraCard>
					</UltraAnimate>

					<UltraAnimate animation="dimensional-shift" delay={600}>
						<UltraCard variant="cosmic" size="medium" dimension="3d" interaction="quantum" energy="godmode" glowIntensity="reality-breaking">
							<div class="text-center space-y-4">
								<div class="w-16 h-16 bg-gradient-to-br from-neon-purple to-neon-pink rounded-xl mx-auto flex items-center justify-center animate-consciousness-expand">
									<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
									</svg>
								</div>
								<h3 class="text-2xl font-bold text-white">QUANTUM IMPACT</h3>
								<p class="text-gray-300">
									Every reality manipulation we execute creates 
									<span class="text-neon-purple">meaningful quantum ripples</span> across 
									<span class="text-neon-pink">infinite dimensional planes</span> of existence.
								</p>
							</div>
						</UltraCard>
					</UltraAnimate>
				</UltraGrid>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-20 bg-gradient-to-br from-neon-purple via-neon-blue to-neon-cyan relative overflow-hidden">
			<div class="absolute inset-0 bg-mesh opacity-30"></div>
			<div class="absolute inset-0">
				<div class="absolute top-10 left-10 w-32 h-32 bg-neon-pink/20 rounded-full animate-consciousness-expand"></div>
				<div class="absolute bottom-10 right-10 w-24 h-24 bg-neon-cyan/20 rounded-full animate-dimensional-shift"></div>
				<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-48 h-48 bg-neon-purple/10 rounded-full animate-neural-pulse"></div>
			</div>
			
			<div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<UltraAnimate animation="multiverse-sync">
					<UltraCard variant="void" size="xl" dimension="4d" interaction="quantum" energy="transcendent" glowIntensity="reality-breaking">
						<h2 class="text-5xl font-bold text-white mb-6 animate-holographic-shimmer">READY TO TRANSCEND REALITY?</h2>
						<p class="text-xl text-white/90 mb-8 leading-relaxed">
							Let's <span class="text-neon-cyan font-bold">quantum-entangle</span> our consciousness and 
							manifest your <span class="text-neon-pink font-bold">impossible vision</span> into 
							<span class="text-neon-purple font-bold">dimensional existence</span>.
						</p>
						<div class="flex flex-col sm:flex-row gap-6 justify-center">
							<HyperButton 
								variant="holographic" 
								size="large" 
								href={baseUrl + "contact/"}
								effect="quantum"
								energy="maximum"
								shape="morphing"
								interaction="magnetic"
							>
								INITIATE PROTOCOL
								<svg class="w-6 h-6 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
								</svg>
							</HyperButton>
							<HyperButton 
								variant="void" 
								size="large" 
								href={baseUrl + "blog/"}
								effect="ripple"
								energy="high"
								shape="pill"
								interaction="dimensional"
							>
								EXPLORE MATRIX
							</HyperButton>
						</div>
					</UltraCard>
				</UltraAnimate>
			</div>
		</section>

		<Footer />
	</body>
</html>
