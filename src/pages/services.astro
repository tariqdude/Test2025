---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const offerings = [
  {
    name: 'Template setup',
    summary:
      'Clone, configure, and document the Elite Project starter for your organisation.',
    details: [
      'Repository bootstrap with base path configuration for GitHub Pages.',
      'Automated checks for content collections and RSS feeds.',
      'Deployment walkthrough including caching and asset considerations.',
    ],
  },
  {
    name: 'Content migration',
    summary:
      'Move existing documentation or status updates into Markdown collections.',
    details: [
      'Frontmatter templates for posts and changelog entries.',
      'Structured metadata for RSS, sitemap, and search visibility.',
      'Training session showing non-technical contributors how to publish updates.',
    ],
  },
  {
    name: 'Design tuning',
    summary:
      'Extend the Tailwind theme with your brand tokens while staying utility-first.',
    details: [
      'Accessible colour palette audit with contrast checks.',
      'Reusable section patterns for hero, CTA, and resource grids.',
      'Light/dark mode polish without introducing client-side frameworks.',
    ],
  },
];

const deliverables = [
  'Astro + Tailwind project configured for static hosting.',
  'Documentation for maintaining content and running quality checks.',
  'Optional GitHub Actions workflow for automated builds.',
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="Services | Elite Project"
      description="A focused list of services to adapt the Elite Project starter to your needs."
    />
  </head>
  <body class="bg-white text-neutral-900">
    <Header />
    <main>
      <section class="bg-neutral-900 text-neutral-50">
        <div class="mx-auto max-w-5xl px-6 py-24">
          <p
            class="text-sm font-semibold uppercase tracking-[0.3em] text-neutral-400"
          >
            Services
          </p>
          <h1 class="mt-6 text-4xl font-semibold sm:text-5xl">
            Practical support for publishing static sites that scale with you.
          </h1>
          <p class="mt-6 max-w-3xl text-lg text-neutral-300">
            We keep implementation scoped to Astro and Tailwind so you can focus
            on content. Each engagement results in a maintainable GitHub Pages
            workflow and a confident team.
          </p>
        </div>
      </section>

      <section class="bg-white">
        <div class="mx-auto max-w-5xl space-y-8 px-6 py-16">
          {
            offerings.map(offering => (
              <article class="rounded-2xl border border-neutral-200 bg-neutral-50 p-8">
                <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
                  <div>
                    <h2 class="text-2xl font-semibold text-neutral-900">
                      {offering.name}
                    </h2>
                    <p class="mt-2 text-sm text-neutral-600">
                      {offering.summary}
                    </p>
                  </div>
                  <a
                    class="inline-flex items-center justify-center rounded-full border border-neutral-200 px-4 py-2 text-sm font-semibold text-neutral-800 transition hover:border-neutral-300"
                    href="/contact"
                  >
                    Discuss this service
                  </a>
                </div>
                <ul class="mt-6 grid gap-3 text-sm text-neutral-600">
                  {offering.details.map(item => (
                    <li class="flex items-start gap-2">
                      <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-brand-500" />
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </article>
            ))
          }
        </div>
      </section>

      <section class="bg-neutral-50">
        <div class="mx-auto max-w-4xl px-6 py-16 text-center">
          <h2 class="text-2xl font-semibold text-neutral-900">
            What you receive
          </h2>
          <ul class="mt-6 space-y-3 text-sm text-neutral-600">
            {
              deliverables.map(line => (
                <li class="mx-auto max-w-2xl rounded-full border border-neutral-200 bg-white px-4 py-3">
                  {line}
                </li>
              ))
            }
          </ul>
          <div class="mt-10 flex flex-wrap justify-center gap-3">
            <a
              class="inline-flex items-center justify-center rounded-full bg-brand-600 px-6 py-2 text-sm font-semibold text-white transition hover:bg-brand-700"
              href="/pricing"
            >
              View pricing guide
            </a>
            <a
              class="inline-flex items-center justify-center rounded-full border border-neutral-200 px-6 py-2 text-sm font-semibold text-neutral-800 transition hover:border-neutral-300"
              href="/contact"
            >
              Plan a call
            </a>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
