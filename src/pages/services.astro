---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import SystemHighlights from '../components/SystemHighlights.astro';
import { withBasePath } from '../utils/helpers';

const offerings = [
  {
    name: 'Template setup',
    summary:
      'Clone, configure, and document the Elite Project starter for your organisation.',
    details: [
      'Repository bootstrap with base path configuration for GitHub Pages.',
      'Automated checks for content collections and RSS feeds.',
      'Deployment walkthrough including caching and asset considerations.',
    ],
  },
  {
    name: 'Content migration',
    summary:
      'Move existing documentation or status updates into Markdown collections.',
    details: [
      'Frontmatter templates for posts and changelog entries.',
      'Structured metadata for RSS, sitemap, and search visibility.',
      'Training session showing non-technical contributors how to publish updates.',
    ],
  },
  {
    name: 'Design tuning',
    summary:
      'Extend the Tailwind theme with your brand tokens while staying utility-first.',
    details: [
      'Accessible colour palette audit with contrast checks.',
      'Reusable section patterns for hero, CTA, and resource grids.',
      'Light/dark mode polish without introducing client-side frameworks.',
    ],
  },
];

const highlightItems = [
  {
    label: '01',
    title: 'Static-first implementation',
    description:
      'We adapt the starter with your routes, copy, and assets while preserving static builds that deploy cleanly to GitHub Pages.',
  },
  {
    label: '02',
    title: 'Operational playbooks',
    description:
      'You receive maintenance guides, content workflows, and CLI scripts so teams can publish confidently without new tooling.',
  },
  {
    label: '03',
    title: 'Long-term resilience',
    description:
      'Accessibility, performance checks, and type-safe content collections keep the site stable as your library grows.',
  },
];

const deliverables = [
  {
    name: 'Static-ready codebase',
    detail:
      'Astro + Tailwind project tuned for base paths, asset handling, and repeatable GitHub Pages deploys.',
  },
  {
    name: 'Documented workflows',
    detail:
      'Publishing handbook covering content collections, quality checks, RSS updates, and rollout cadence.',
  },
  {
    name: 'Optional automation',
    detail:
      'GitHub Actions blueprints for type checks, linting, and scheduled builds when your team is ready.',
  },
];

const process = [
  {
    phase: 'Discovery',
    duration: 'Week 1',
    focus:
      'Audit existing content, confirm hosting constraints, and align on navigation hierarchy.',
  },
  {
    phase: 'Implementation',
    duration: 'Weeks 2-3',
    focus:
      'Adapt the starter, wire in your copy, and align Tailwind tokens with your brand palette.',
  },
  {
    phase: 'Transition',
    duration: 'Week 4',
    focus:
      'Deliver documentation, run training sessions, and set up optional automation for ongoing updates.',
  },
];
---

<MarketingLayout
  title="Services | Elite Project"
  description="A focused list of services to adapt the Elite Project starter to your needs."
>
  <section class="relative overflow-hidden bg-neutral-950">
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(80,80,80,0.45),_transparent_60%)]"
    >
    </div>
    <div
      class="relative mx-auto flex max-w-6xl flex-col gap-12 px-6 pb-24 pt-28 lg:flex-row lg:items-center"
    >
      <div class="max-w-xl text-neutral-50">
        <p
          class="text-xs font-semibold uppercase tracking-[0.35em] text-neutral-400"
        >
          Services
        </p>
        <h1 class="mt-6 text-4xl font-semibold sm:text-5xl lg:text-6xl">
          Practical support for static operations teams.
        </h1>
        <p class="mt-6 text-lg text-neutral-300">
          Every engagement focuses on delivering a GitHub Pages-ready Astro
          build, with documentation and tooling that keep your releases
          predictable.
        </p>
        <div class="mt-10 flex flex-wrap gap-4">
          <a href={withBasePath('pricing/')} class="btn btn-primary">
            View pricing guide
          </a>
          <a href={withBasePath('contact/')} class="btn btn-secondary">
            Schedule a scoping call
          </a>
        </div>
      </div>
      <div
        class="glass-panel grid flex-1 gap-4 rounded-3xl border border-white/10 p-6 lg:max-w-md animate-fade-in-up"
      >
        <div class="card rounded-2xl border border-white/10 p-5">
          <p class="text-sm font-semibold text-white">Engagement span</p>
          <p class="mt-2 text-xs text-neutral-400">
            Typical delivery completes within four weeks including documentation
            and training handover.
          </p>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="card rounded-2xl border border-white/10 p-5">
            <p class="text-3xl font-semibold text-white">48h</p>
            <p class="mt-2 text-xs text-neutral-400">
              Average first content publish after onboarding
            </p>
          </div>
          <div class="card rounded-2xl border border-white/10 p-5">
            <p class="text-3xl font-semibold text-white">0</p>
            <p class="mt-2 text-xs text-neutral-400">
              Server dependencies introduced
            </p>
          </div>
        </div>
        <div class="card rounded-2xl border border-white/10 p-5">
          <p class="text-sm font-semibold text-white">Coverage</p>
          <p class="mt-2 text-xs text-neutral-400">
            Includes accessibility sweeps, performance checks, and CI-friendly
            scripts ready for your repositories.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="border-b border-neutral-200 bg-neutral-50">
    <div class="mx-auto max-w-6xl px-6 py-20">
      <SystemHighlights
        eyebrow="Why teams hire us"
        title="Outcomes we commit to"
        intro="Each package focuses on predictable releases and maintainable infrastructure for static documentation and operations hubs."
        items={highlightItems}
      />
    </div>
  </section>

  <section class="bg-white">
    <div class="mx-auto max-w-6xl space-y-10 px-6 py-20">
      {
        offerings.map(offering => (
          <article class="rounded-3xl border border-neutral-200 bg-neutral-50 p-8 shadow-[0_30px_80px_-60px_rgba(15,23,42,0.35)]">
            <div class="flex flex-col gap-4 lg:flex-row lg:items-start lg:justify-between">
              <div class="max-w-xl">
                <h2 class="text-2xl font-semibold text-neutral-900">
                  {offering.name}
                </h2>
                <p class="mt-3 text-sm text-neutral-600">{offering.summary}</p>
              </div>
              <a
                class="inline-flex items-center justify-center rounded-full border border-neutral-300 px-4 py-2 text-sm font-semibold text-neutral-800 transition hover:border-neutral-400"
                href={withBasePath('contact/')}
              >
                Discuss this service
              </a>
            </div>
            <ul class="mt-6 grid gap-3 text-sm text-neutral-600">
              {offering.details.map(item => (
                <li class="flex items-start gap-2">
                  <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-brand-500" />
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </article>
        ))
      }
    </div>
  </section>

  <section class="bg-neutral-950 text-neutral-50">
    <div class="mx-auto max-w-6xl px-6 py-20">
      <div
        class="flex flex-col gap-10 lg:flex-row lg:items-start lg:justify-between"
      >
        <div class="max-w-xl">
          <p
            class="text-xs font-semibold uppercase tracking-[0.35em] text-neutral-400"
          >
            Implementation cadence
          </p>
          <h2 class="mt-4 text-3xl font-semibold text-white">How we deliver</h2>
          <p class="mt-4 text-base text-neutral-300">
            We work in focused weekly sprints with demos at each milestone. The
            plan adapts to your content volume and internal review cycles.
          </p>
        </div>
        <div class="flex-1">
          <div class="grid gap-5 lg:grid-cols-3">
            {
              process.map(step => (
                <article class="rounded-2xl border border-white/15 bg-neutral-900/60 p-6">
                  <p class="text-xs font-semibold uppercase tracking-[0.2em] text-brand-300">
                    {step.duration}
                  </p>
                  <h3 class="mt-3 text-lg font-semibold text-white">
                    {step.phase}
                  </h3>
                  <p class="mt-3 text-sm text-neutral-300">{step.focus}</p>
                </article>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-neutral-50">
    <div class="mx-auto max-w-5xl px-6 py-20">
      <h2 class="text-3xl font-semibold text-neutral-900">
        Deliverables at handover
      </h2>
      <p class="mt-4 max-w-2xl text-base text-neutral-600">
        You leave with more than files. Every project wraps with documentation,
        automation hooks, and assurances that your content team can ship updates
        without additional support.
      </p>
      <div class="mt-10 grid gap-6 md:grid-cols-3">
        {
          deliverables.map(item => (
            <article class="rounded-2xl border border-neutral-200 bg-white p-6">
              <h3 class="text-lg font-semibold text-neutral-900">
                {item.name}
              </h3>
              <p class="mt-3 text-sm leading-relaxed text-neutral-600">
                {item.detail}
              </p>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <section class="bg-white">
    <div class="mx-auto max-w-5xl px-6 py-20">
      <div
        class="rounded-3xl border border-neutral-200 bg-neutral-950/95 px-8 py-14 text-center text-neutral-50 shadow-[0_45px_90px_-45px_rgba(17,17,17,0.45)]"
      >
        <p
          class="text-xs font-semibold uppercase tracking-[0.35em] text-brand-400"
        >
          Next step
        </p>
        <h2 class="mt-6 text-3xl font-semibold text-white">
          Bring us in when you need reliable documentation infrastructure
        </h2>
        <p class="mt-5 text-base text-neutral-300">
          Share your current stack and launch goalsâ€”we will identify the fastest
          path to a static site your team can extend.
        </p>
        <div class="mt-8 flex flex-wrap justify-center gap-3">
          <a
            class="inline-flex items-center justify-center rounded-full bg-brand-500 px-5 py-2 text-sm font-semibold text-white transition hover:bg-brand-600"
            href={withBasePath('contact/')}
          >
            Book a consultation
          </a>
          <a
            class="inline-flex items-center justify-center rounded-full border border-white/20 px-5 py-2 text-sm font-semibold text-white transition hover:border-white/40"
            href={withBasePath('pricing/')}
          >
            Review pricing tiers
          </a>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>
