---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
import Card from '../components/ui/Card.astro';
import Icon from '../components/ui/Icon.astro';
import { SITE_TITLE } from '../consts';

// Contact page configuration
const pageTitle = `${SITE_TITLE} | Contact`;
const pageDescription = 'Get in touch with our expert team. Fast response times, free consultations, and personalized solutions for your business needs.';

// Contact information data
const contactInfo = {
  phone: {
    number: '+1 (234) 567-8900',
    display: '+1 (234) 567-8900',
    availability: 'Available Mon-Fri, 9 AM - 6 PM EST'
  },
  email: {
    address: 'hello@example.com',
    responseTime: 'We typically respond within 2 hours'
  },
  address: {
    street: '123 Business District',
    suite: 'Suite 456',
    city: 'City, State 12345'
  }
};

// Business hours data
const businessHours = [
  { day: 'Monday - Friday', hours: '9:00 AM - 6:00 PM', isOpen: true },
  { day: 'Saturday', hours: '10:00 AM - 4:00 PM', isOpen: true },
  { day: 'Sunday', hours: 'Closed', isOpen: false }
];

// FAQ data
const faqs = [
  {
    question: 'How quickly can you start a project?',
    answer: 'We typically can begin new projects within 1-2 weeks, depending on our current capacity and project scope.'
  },
  {
    question: 'Do you provide ongoing support?',
    answer: 'Yes, we offer comprehensive support and maintenance packages to ensure your solutions continue to perform optimally.'
  },
  {
    question: 'What industries do you serve?',
    answer: 'We work with businesses across various industries including healthcare, finance, e-commerce, and technology.'
  },
  {
    question: 'How do you handle project communication?',
    answer: 'We maintain regular communication through weekly updates, dedicated project channels, and milestone reviews.'
  }
];

// Trust indicators data
const trustIndicators = [
  { text: 'Response within 2 hours', color: 'green', delay: '0s' },
  { text: 'Free consultation', color: 'blue', delay: '1s' },
  { text: 'Trusted by 500+ clients', color: 'purple', delay: '2s' }
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} />
  </head>
  <body>
    <Header />
    
    <main>
      <!-- Hero Section -->
      <section class="relative py-24 lg:py-32 bg-gradient-to-br from-primary-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-purple-900 overflow-hidden">
        <!-- Enhanced Background Elements -->
        <div class="absolute inset-0 bg-grid-pattern opacity-5" aria-hidden="true"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-white/20 to-transparent dark:from-gray-900/20" aria-hidden="true"></div>
        
        <!-- Floating Elements -->
        <div class="absolute top-20 left-10 w-32 h-32 bg-gradient-to-br from-primary-200 to-purple-200 dark:from-primary-800 dark:to-purple-800 rounded-full blur-3xl opacity-30 animate-float" aria-hidden="true"></div>
        <div class="absolute bottom-20 right-10 w-40 h-40 bg-gradient-to-br from-purple-200 to-pink-200 dark:from-purple-800 dark:to-pink-800 rounded-full blur-3xl opacity-30 animate-float" style="animation-delay: 2s;" aria-hidden="true"></div>
        <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-gradient-to-br from-blue-200 to-cyan-200 dark:from-blue-800 dark:to-cyan-800 rounded-full blur-2xl opacity-20 animate-float" style="animation-delay: 4s;" aria-hidden="true"></div>
        
        <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-4xl mx-auto text-center">
            <div class="inline-flex items-center px-6 py-3 bg-white/80 dark:bg-gray-800/80 text-primary-600 dark:text-primary-400 rounded-full text-sm font-medium mb-8 backdrop-blur-md border border-white/20 dark:border-gray-700/20 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
              <Icon name="mail" class="w-4 h-4 mr-2" aria-hidden="true" />
              <span class="bg-gradient-to-r from-primary-600 to-purple-600 bg-clip-text text-transparent font-semibold">Contact Us</span>
            </div>
            
            <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-gray-900 dark:text-white mb-8 leading-tight">
              Let's Start a 
              <span class="relative inline-block">
                <span class="bg-gradient-to-r from-primary-600 via-purple-600 to-pink-600 bg-clip-text text-transparent animate-gradient-x">
                  Conversation
                </span>
                <div class="absolute -inset-1 bg-gradient-to-r from-primary-600 via-purple-600 to-pink-600 rounded-lg blur opacity-20 group-hover:opacity-100 transition duration-1000 group-hover:duration-200" aria-hidden="true"></div>
              </span>
            </h1>
            
            <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-4xl mx-auto mb-8">
              Ready to transform your business? We'd love to hear about your project 
              and explore how we can help you achieve your <span class="text-primary-600 dark:text-primary-400 font-semibold">extraordinary goals</span>.
            </p>
            
            <!-- Enhanced Stats Bar -->
            <div class="flex flex-wrap justify-center gap-8 mt-12" role="list" aria-label="Service guarantees">
              {trustIndicators.map((indicator) => (
                <div class="flex items-center space-x-2 text-gray-600 dark:text-gray-300" role="listitem">
                  <div class={`w-2 h-2 bg-${indicator.color}-500 rounded-full animate-pulse`} style={`animation-delay: ${indicator.delay};`} aria-hidden="true"></div>
                  <span class="text-sm font-medium">{indicator.text}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>

      <!-- Contact Content Section -->
      <section class="py-24 bg-gradient-to-b from-white via-gray-50/50 to-white dark:from-gray-950 dark:via-gray-900/50 dark:to-gray-950">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid lg:grid-cols-2 gap-16 max-w-7xl mx-auto">
            
            <!-- Contact Form Column -->
            <div class="order-2 lg:order-1">
              <Card className="group relative border-0 bg-gradient-to-br from-white via-gray-50/50 to-white dark:from-gray-800 dark:via-gray-800/50 dark:to-gray-900 p-10 shadow-2xl hover:shadow-3xl transition-all duration-500 transform hover:-translate-y-2">
                <!-- Decorative Border -->
                <div class="absolute inset-0 bg-gradient-to-r from-primary-500 via-purple-500 to-pink-500 rounded-2xl blur-sm opacity-20 group-hover:opacity-30 transition-opacity duration-500" aria-hidden="true"></div>
                <div class="absolute inset-0.5 bg-gradient-to-br from-white via-gray-50/50 to-white dark:from-gray-800 dark:via-gray-800/50 dark:to-gray-900 rounded-2xl" aria-hidden="true"></div>
                
                <div class="relative">
                  <header class="flex items-center mb-8">
                    <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-purple-600 rounded-xl flex items-center justify-center mr-4 shadow-lg" aria-hidden="true">
                      <Icon name="edit" class="w-6 h-6 text-white" aria-hidden="true" />
                    </div>
                    <h2 class="text-3xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 dark:from-white dark:to-gray-300 bg-clip-text text-transparent">
                      Send us a Message
                    </h2>
                  </header>
                  
                  <p class="text-gray-600 dark:text-gray-300 mb-8 text-lg">
                    Tell us about your project and we'll get back to you within 24 hours with a detailed proposal.
                  </p>
                  
                  <ContactForm />
                </div>
              </Card>
            </div>

            <!-- Contact Information Column -->
            <aside class="order-1 lg:order-2 space-y-8">
              <!-- Contact Header -->
              <header class="text-center lg:text-left mb-10">
                <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
                  Get in Touch
                </h2>
                <p class="text-lg text-gray-600 dark:text-gray-300">
                  Choose your preferred way to connect with our team
                </p>
              </header>

              <!-- Office Location Card -->
              <Card className="group relative border-0 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl p-8 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 hover:scale-105">
                <div class="absolute inset-0 bg-gradient-to-r from-primary-500/10 to-purple-500/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" aria-hidden="true"></div>
                <div class="relative flex items-start space-x-6">
                  <div class="p-4 bg-gradient-to-br from-primary-100 to-primary-200 dark:from-primary-900/30 dark:to-primary-800/30 text-primary-600 dark:text-primary-400 rounded-2xl shadow-lg group-hover:shadow-xl transition-shadow duration-300" aria-hidden="true">
                    <Icon name="map-pin" class="w-8 h-8" aria-hidden="true" />
                  </div>
                  <div class="flex-1">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-300">
                      Our Office
                    </h3>
                    <address class="text-gray-600 dark:text-gray-300 leading-relaxed not-italic">
                      {contactInfo.address.street}<br>
                      {contactInfo.address.suite}<br>
                      {contactInfo.address.city}
                    </address>
                    <a href="#" class="mt-4 inline-flex items-center text-primary-600 dark:text-primary-400 font-medium text-sm group-hover:text-primary-700 dark:group-hover:text-primary-300 transition-colors duration-300" aria-label="View office location on map">
                      <Icon name="external-link" class="w-4 h-4 mr-2" aria-hidden="true" />
                      View on Map
                    </a>
                  </div>
                </div>
              </Card>

              <!-- Phone Contact Card -->
              <Card className="group relative border-0 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl p-8 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 hover:scale-105">
                <div class="absolute inset-0 bg-gradient-to-r from-green-500/10 to-emerald-500/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" aria-hidden="true"></div>
                <div class="relative flex items-start space-x-6">
                  <div class="p-4 bg-gradient-to-br from-green-100 to-emerald-200 dark:from-green-900/30 dark:to-emerald-800/30 text-green-600 dark:text-green-400 rounded-2xl shadow-lg group-hover:shadow-xl transition-shadow duration-300" aria-hidden="true">
                    <Icon name="phone" class="w-8 h-8" aria-hidden="true" />
                  </div>
                  <div class="flex-1">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-green-600 dark:group-hover:text-green-400 transition-colors duration-300">
                      Phone
                    </h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-2">
                      <a href={`tel:${contactInfo.phone.number.replace(/\s+/g, '')}`} class="text-lg font-semibold hover:text-green-600 dark:hover:text-green-400 transition-colors" aria-label={`Call us at ${contactInfo.phone.display}`}>
                        {contactInfo.phone.display}
                      </a>
                    </p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                      {contactInfo.phone.availability}
                    </p>
                  </div>
                </div>
              </Card>

              <!-- Email Contact Card -->
              <Card className="group relative border-0 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl p-8 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 hover:scale-105">
                <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-cyan-500/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" aria-hidden="true"></div>
                <div class="relative flex items-start space-x-6">
                  <div class="p-4 bg-gradient-to-br from-blue-100 to-cyan-200 dark:from-blue-900/30 dark:to-cyan-800/30 text-blue-600 dark:text-blue-400 rounded-2xl shadow-lg group-hover:shadow-xl transition-shadow duration-300" aria-hidden="true">
                    <Icon name="mail" class="w-8 h-8" aria-hidden="true" />
                  </div>
                  <div class="flex-1">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
                      Email
                    </h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-2">
                      <a href={`mailto:${contactInfo.email.address}`} class="text-lg font-semibold hover:text-blue-600 dark:hover:text-blue-400 transition-colors" aria-label={`Send email to ${contactInfo.email.address}`}>
                        {contactInfo.email.address}
                      </a>
                    </p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                      {contactInfo.email.responseTime}
                    </p>
                  </div>
                </div>
              </Card>

              <!-- Business Hours Card -->
              <Card className="group relative border-0 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl p-8 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 hover:scale-105">
                <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 to-pink-500/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" aria-hidden="true"></div>
                <div class="relative flex items-start space-x-6">
                  <div class="p-4 bg-gradient-to-br from-purple-100 to-pink-200 dark:from-purple-900/30 dark:to-pink-800/30 text-purple-600 dark:text-purple-400 rounded-2xl shadow-lg group-hover:shadow-xl transition-shadow duration-300" aria-hidden="true">
                    <Icon name="clock" class="w-8 h-8" aria-hidden="true" />
                  </div>
                  <div class="flex-1">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors duration-300">
                      Business Hours
                    </h3>
                    <div class="space-y-2 text-gray-600 dark:text-gray-300">
                      {businessHours.map((schedule) => (
                        <div class="flex justify-between">
                          <span>{schedule.day}:</span>
                          <span class={`font-semibold ${schedule.isOpen ? '' : 'text-red-500'}`}>
                            {schedule.hours}
                          </span>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              </Card>
            </aside>
          </div>
        </div>
      </section>

      <!-- FAQ Section -->
      <section class="py-20 bg-gray-50 dark:bg-gray-800" aria-labelledby="faq-heading">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <header class="text-center mb-16">
            <h2 id="faq-heading" class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
              Frequently Asked Questions
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300">
              Quick answers to common questions about our services.
            </p>
          </header>

          <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
            {faqs.map((faq) => (
              <Card className="border-0 bg-white dark:bg-gray-900 p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
                  {faq.question}
                </h3>
                <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                  {faq.answer}
                </p>
              </Card>
            ))}
          </div>
        </div>
      </section>

      <!-- Call-to-Action Section -->
      <section class="py-20 bg-primary-600 dark:bg-primary-700" aria-labelledby="cta-heading">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto text-center">
            <h2 id="cta-heading" class="text-3xl md:text-4xl font-bold text-white mb-4">
              Ready to Get Started?
            </h2>
            <p class="text-xl text-primary-100 mb-8">
              Don't wait any longer. Let's discuss your project and bring your vision to life.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a 
                href="#" 
                class="inline-flex items-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-50 transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600"
                aria-label="Schedule a consultation call"
              >
                <Icon name="calendar" class="w-5 h-5 mr-2" aria-hidden="true" />
                Schedule a Call
              </a>
              <a 
                href="/services" 
                class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary-600 transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600"
                aria-label="View our portfolio and previous work"
              >
                <Icon name="eye" class="w-5 h-5 mr-2" aria-hidden="true" />
                View Our Work
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>
    
    <Footer />
  </body>
</html>
