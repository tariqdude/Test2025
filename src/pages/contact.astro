---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import InteractiveForm from '../components/ui/InteractiveForm.astro';
import ModernCard from '../components/ui/ModernCard.astro';
import ModernButton from '../components/ui/ModernButton.astro';

const contactFormFields = [
  {
    name: 'name',
    label: 'Full Name',
    type: 'text' as const,
    placeholder: 'Enter your full name',
    required: true,
    icon: 'üë§',
    validation: {
      minLength: 2,
      maxLength: 50
    }
  },
  {
    name: 'email',
    label: 'Email Address',
    type: 'email' as const,
    placeholder: 'your.email@example.com',
    required: true,
    icon: 'üìß',
    description: 'We\'ll never share your email with anyone else.'
  },
  {
    name: 'company',
    label: 'Company',
    type: 'text' as const,
    placeholder: 'Your company name (optional)',
    required: false,
    icon: 'üè¢'
  },
  {
    name: 'subject',
    label: 'Subject',
    type: 'select' as const,
    placeholder: 'Choose a subject',
    required: true,
    icon: 'üìã',
    options: [
      { value: 'general', label: 'General Inquiry' },
      { value: 'support', label: 'Technical Support' },
      { value: 'business', label: 'Business Partnership' },
      { value: 'feedback', label: 'Feedback & Suggestions' },
      { value: 'bug', label: 'Bug Report' },
      { value: 'other', label: 'Other' }
    ]
  },
  {
    name: 'priority',
    label: 'Priority Level',
    type: 'radio' as const,
    required: true,
    icon: '‚ö°',
    options: [
      { value: 'low', label: 'Low - General inquiry' },
      { value: 'medium', label: 'Medium - Need response within a week' },
      { value: 'high', label: 'High - Need response within 24 hours' },
      { value: 'urgent', label: 'Urgent - Critical issue' }
    ]
  },
  {
    name: 'message',
    label: 'Message',
    type: 'textarea' as const,
    placeholder: 'Tell us more about your inquiry...',
    required: true,
    icon: 'üí¨',
    validation: {
      minLength: 10,
      maxLength: 1000
    },
    description: 'Please provide as much detail as possible to help us assist you better.'
  },
  {
    name: 'newsletter',
    label: 'Newsletter Subscription',
    type: 'checkbox' as const,
    placeholder: 'Subscribe to our newsletter for updates and tips',
    required: false,
    icon: 'üì¨'
  },
  {
    name: 'attachment',
    label: 'Attachment',
    type: 'file' as const,
    required: false,
    icon: 'üìé',
    description: 'Optional: Attach files related to your inquiry (max 10MB)'
  }
];

const contactInfo = [
  {
    title: 'Email Us',
    value: 'hello@eliteproject.dev',
    icon: 'üìß',
    description: 'Send us an email anytime',
    action: 'mailto:hello@eliteproject.dev'
  },
  {
    title: 'Call Us',
    value: '+1 (555) 123-4567',
    icon: 'üìû',
    description: 'Mon-Fri, 9 AM - 6 PM EST',
    action: 'tel:+15551234567'
  },
  {
    title: 'Live Chat',
    value: 'Chat Support',
    icon: 'üí¨',
    description: 'Available 24/7',
    action: '#'
  },
  {
    title: 'Visit Us',
    value: '123 Innovation St, Tech City',
    icon: 'üìç',
    description: 'Our headquarters',
    action: 'https://maps.google.com'
  }
];

const supportHours = [
  { day: 'Monday - Friday', hours: '9:00 AM - 6:00 PM EST' },
  { day: 'Saturday', hours: '10:00 AM - 4:00 PM EST' },
  { day: 'Sunday', hours: 'Emergency support only' }
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Contact Us | Elite Project" description="Get in touch with our team for support, partnerships, or general inquiries" />
    <style>
      .contact-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
      }
      
      .floating-elements {
        position: fixed;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
        z-index: -1;
      }
      
      .floating-shape {
        position: absolute;
        border-radius: 50%;
        opacity: 0.1;
        animation: float 8s ease-in-out infinite;
      }
      
      .floating-shape:nth-child(1) {
        top: 10%;
        left: 10%;
        width: 120px;
        height: 120px;
        background: linear-gradient(45deg, #3b82f6, #8b5cf6);
        animation-delay: 0s;
      }
      
      .floating-shape:nth-child(2) {
        top: 60%;
        right: 20%;
        width: 80px;
        height: 80px;
        background: linear-gradient(45deg, #10b981, #06b6d4);
        animation-delay: -2s;
      }
      
      .floating-shape:nth-child(3) {
        bottom: 20%;
        left: 30%;
        width: 100px;
        height: 100px;
        background: linear-gradient(45deg, #f59e0b, #ef4444);
        animation-delay: -4s;
      }
      
      @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        25% { transform: translateY(-20px) rotate(90deg); }
        50% { transform: translateY(-40px) rotate(180deg); }
        75% { transform: translateY(-20px) rotate(270deg); }
      }
    </style>
  </head>
  <body>
    <!-- Floating Background Elements -->
    <div class="floating-elements">
      <div class="floating-shape"></div>
      <div class="floating-shape"></div>
      <div class="floating-shape"></div>
    </div>
    
    <Header />
    <main>
      <div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 dark:from-blue-900 dark:via-indigo-900 dark:to-purple-900">
        
        <!-- Hero Section -->
        <section class="pt-20 pb-12">
          <div class="container mx-auto px-6 text-center">
            <h1 class="text-5xl lg:text-6xl font-bold bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 bg-clip-text text-transparent mb-6 animate-slide-down">
              üí¨ Get In Touch
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto animate-slide-up" style="animation-delay: 0.2s">
              Have questions, suggestions, or need support? We'd love to hear from you. 
              Our team is here to help you succeed with your projects.
            </p>
          </div>
        </section>

        <!-- Contact Information Cards -->
        <section class="pb-12">
          <div class="container mx-auto px-6">
            <h2 class="text-3xl font-bold text-center mb-8 animate-fade-in" style="animation-delay: 0.4s">
              üöÄ Multiple Ways to Reach Us
            </h2>
            
            <div class="contact-grid max-w-6xl mx-auto mb-12">
              {contactInfo.map((info, index) => (
                <ModernCard 
                  variant="glass" 
                  hover={true} 
                  glow={index % 2 === 0}
                  animated={true}
                  direction={index % 2 === 0 ? 'left' : 'right'}
                  delay={index * 0.1}
                >
                  <div class="text-center p-2">
                    <div class="text-4xl mb-3">{info.icon}</div>
                    <h3 class="text-xl font-semibold mb-2">{info.title}</h3>
                    <div class="text-lg font-medium text-blue-600 dark:text-blue-400 mb-2">
                      {info.value}
                    </div>
                    <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
                      {info.description}
                    </p>
                    <ModernButton 
                      variant="outline" 
                      size="sm" 
                      href={info.action}
                      className="w-full"
                    >
                      Contact Now
                    </ModernButton>
                  </div>
                </ModernCard>
              ))}
            </div>
          </div>
        </section>

        <!-- Main Contact Form -->
        <section class="pb-12">
          <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 max-w-7xl mx-auto">
              
              <!-- Contact Form -->
              <div class="lg:col-span-2">
                <InteractiveForm
                  title="üìù Send Us a Message"
                  description="Fill out the form below and we'll get back to you as soon as possible"
                  fields={contactFormFields}
                  submitLabel="Send Message ‚ú®"
                  variant="modern"
                  layout="vertical"
                  animated={true}
                />
              </div>

              <!-- Sidebar Information -->
              <div class="space-y-6">
                
                <!-- Support Hours -->
                <ModernCard variant="glass" animated={true} delay={0.8}>
                  <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                    üïí Support Hours
                  </h3>
                  <div class="space-y-3">
                    {supportHours.map(schedule => (
                      <div class="flex justify-between items-center py-2 border-b border-gray-200 dark:border-gray-700 last:border-0">
                        <span class="font-medium text-gray-700 dark:text-gray-300">
                          {schedule.day}
                        </span>
                        <span class="text-gray-600 dark:text-gray-400 text-sm">
                          {schedule.hours}
                        </span>
                      </div>
                    ))}
                  </div>
                </ModernCard>

                <!-- FAQ Quick Links -->
                <ModernCard variant="glass" animated={true} delay={1.0}>
                  <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                    ‚ùì Quick Help
                  </h3>
                  <div class="space-y-3">
                    <ModernButton variant="ghost" size="sm" className="w-full justify-start">
                      üìö Documentation
                    </ModernButton>
                    <ModernButton variant="ghost" size="sm" className="w-full justify-start">
                      üêõ Report a Bug
                    </ModernButton>
                    <ModernButton variant="ghost" size="sm" className="w-full justify-start">
                      üí° Feature Request
                    </ModernButton>
                    <ModernButton variant="ghost" size="sm" className="w-full justify-start">
                      ü§ù Community Forum
                    </ModernButton>
                  </div>
                </ModernCard>

                <!-- Response Time -->
                <ModernCard variant="neon" animated={true} delay={1.2}>
                  <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                    ‚ö° Response Time
                  </h3>
                  <div class="space-y-3">
                    <div class="flex items-center gap-3">
                      <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                      <span class="text-sm">
                        <strong>General inquiries:</strong> Within 24 hours
                      </span>
                    </div>
                    <div class="flex items-center gap-3">
                      <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                      <span class="text-sm">
                        <strong>Technical support:</strong> Within 4 hours
                      </span>
                    </div>
                    <div class="flex items-center gap-3">
                      <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                      <span class="text-sm">
                        <strong>Urgent issues:</strong> Within 1 hour
                      </span>
                    </div>
                  </div>
                </ModernCard>

                <!-- Social Links -->
                <ModernCard variant="minimal" animated={true} delay={1.4}>
                  <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                    üåê Follow Us
                  </h3>
                  <div class="flex gap-3">
                    <ModernButton variant="outline" size="sm" className="flex-1">
                      üê¶
                    </ModernButton>
                    <ModernButton variant="outline" size="sm" className="flex-1">
                      üìò
                    </ModernButton>
                    <ModernButton variant="outline" size="sm" className="flex-1">
                      üíº
                    </ModernButton>
                    <ModernButton variant="outline" size="sm" className="flex-1">
                      üì∏
                    </ModernButton>
                  </div>
                </ModernCard>

              </div>
            </div>
          </div>
        </section>

        <!-- Call to Action -->
        <section class="py-16">
          <div class="container mx-auto px-6 text-center">
            <ModernCard variant="glass" size="lg" className="max-w-4xl mx-auto" animated={true} delay={1.6}>
              <h2 class="text-3xl font-bold mb-6">ü§ù Let's Build Something Amazing Together</h2>
              <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
                Whether you're looking for technical support, want to explore partnership opportunities, 
                or just have questions about our project, we're here to help.
              </p>
              <div class="flex flex-wrap justify-center gap-4">
                <ModernButton variant="gradient" size="lg" leftIcon="üöÄ">
                  Start a Project
                </ModernButton>
                <ModernButton variant="outline" size="lg" leftIcon="üìû">
                  Schedule a Call
                </ModernButton>
              </div>
            </ModernCard>
          </div>
        </section>

      </div>
    </main>
    <Footer />
  </body>
</html>
