---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
import Card from '../components/ui/Card.astro';
import Icon from '../components/ui/Icon.astro';
import Grid from '../components/ui/Grid.astro';
import Animate from '../components/ui/Animate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} | Contact`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="container fade-in">
            <section class="contact">
        <Animate animation="slideInUp">
          <div class="contact-header">
            <h1>Contact Our Team</h1>
            <p class="lead">Ready to transform your business? Get in touch with our experts today for a personalized consultation.</p>
          </div>
        </Animate>
        
        <Grid columns="2" gap="12" breakpoints={{ lg: 2 }}>
          <Animate animation="slideInLeft" delay={100}>
            <div class="contact-info">
              <div class="contact-cards">
                <Card variant="elevated" hover={true} className="contact-card">
                  <div class="contact-card-icon">
                    <Icon name="phone" size={24} />
                  </div>
                  <h3>Phone Support</h3>
                  <p>Speak directly with our consultants</p>
                  <a href="tel:+1-555-0123">+1 (555) 012-3456</a>
                </Card>

                <Card variant="elevated" hover={true} className="contact-card">
                  <div class="contact-card-icon">
                    <Icon name="mail" size={24} />
                  </div>
                  <h3>Email Support</h3>
                  <p>Get detailed responses within 2 hours</p>
                  <a href="mailto:hello@company.com">hello@company.com</a>
                </Card>

                <Card variant="elevated" hover={true} className="contact-card">
                  <div class="contact-card-icon">
                    <Icon name="map-pin" size={24} />
                  </div>
                  <h3>Office Location</h3>
                  <p>Visit our headquarters</p>
                  <address>123 Business Ave<br>Tech City, TC 12345</address>
                </Card>
              </div>

              <Card variant="ghost" className="response-time">
                <h3>Response Times</h3>
                <ul>
                  <li><strong>Emergency Support:</strong> Within 1 hour</li>
                  <li><strong>General Inquiries:</strong> Within 2 hours</li>
                  <li><strong>Project Consultation:</strong> Within 24 hours</li>
                </ul>
              </Card>
            </div>
          </Animate>

          <Animate animation="slideInRight" delay={200}>
            <div class="contact-form-container">
              <ContactForm />
            </div>
          </Animate>
        </Grid>
      </section>
    </main>
    <Footer />

    <style>
      .contact {
        padding: 2rem 0 4rem;
      }

      .contact-header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .contact-header h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .lead {
        font-size: 1.125rem;
        color: var(--text-muted);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
      }

      .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: start;
      }

      .contact-cards {
        display: grid;
        gap: 1.5rem;
        margin-bottom: 2rem;
      }

      .contact-card {
        padding: 1.5rem;
        background: var(--card-bg);
        border-radius: 12px;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
      }

      .contact-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        border-color: var(--primary-color);
      }

      .contact-card-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        margin-bottom: 1rem;
      }

      .contact-card h3 {
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
      }

      .contact-card p {
        color: var(--text-muted);
        margin-bottom: 0.75rem;
        font-size: 0.9rem;
      }

      .contact-card a {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
      }

      .contact-card a:hover {
        color: var(--secondary-color);
      }

      .contact-card address {
        color: var(--primary-color);
        font-style: normal;
        font-weight: 500;
        line-height: 1.5;
      }

      .response-time {
        background: var(--card-bg);
        padding: 1.5rem;
        border-radius: 12px;
        border: 1px solid var(--border-color);
      }

      .response-time h3 {
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--text-primary);
      }

      .response-time ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .response-time li {
        padding: 0.5rem 0;
        border-bottom: 1px solid var(--border-color);
        font-size: 0.9rem;
        color: var(--text-muted);
      }

      .response-time li:last-child {
        border-bottom: none;
      }

      .response-time strong {
        color: var(--text-primary);
      }

      .contact-form-container {
        position: sticky;
        top: 2rem;
      }

      @media (max-width: 768px) {
        .contact-grid {
          grid-template-columns: 1fr;
          gap: 2rem;
        }

        .contact-header h1 {
          font-size: 2rem;
        }

        .contact-form-container {
          position: static;
        }

        .contact-cards {
          grid-template-columns: 1fr;
        }
      }

      @media (min-width: 769px) and (max-width: 1024px) {
        .contact-cards {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </body>
</html>
