---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import Grid from '../components/ui/Grid.astro';
import Animate from '../components/ui/Animate.astro';
import { Image } from 'astro:assets';
import AboutHeroImage from '../assets/blog-placeholder-about.jpg';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="About Us" description="Learn more about our mission, vision, and the team behind our innovative solutions." />
	</head>
	<body class="bg-white dark:bg-gray-900 min-h-screen">
		<Header />
		
		<!-- Hero Section -->
		<section class="relative bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-gray-900 dark:to-gray-800 py-20 lg:py-32">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="max-w-6xl mx-auto">
					<Grid cols={2} gap="lg" responsive={{ sm: 1, lg: 2 }}>
						<div class="flex flex-col justify-center">
							<Animate animation="slide-left" duration="slow">
								<h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white leading-tight mb-6">
									About Our
									<span class="text-primary-600 dark:text-primary-400">Company</span>
								</h1>
								<p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed mb-8">
									We are a team of passionate professionals dedicated to delivering innovative solutions that drive business success and technological advancement.
								</p>
								<Button variant="primary" size="lg" href="/contact">
									Get In Touch
								</Button>
							</Animate>
						</div>
						
						<div class="flex justify-center lg:justify-end">
							<Animate animation="slide-right" delay="sm">
								<div class="relative max-w-md">
									<Image
										src={AboutHeroImage}
										alt="About us"
										class="rounded-lg shadow-lg"
										width={400}
										height={300}
									/>
								</div>
							</Animate>
						</div>
					</Grid>
				</div>
			</div>
		</section>

		<!-- Mission & Vision Section -->
		<section class="py-20 bg-white dark:bg-gray-900">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<Grid cols={2} gap="xl" responsive={{ sm: 1, lg: 2 }}>
					<Animate animation="slide-up" trigger="scroll">
						<Card variant="outline" className="h-full">
							<div class="text-primary-600 dark:text-primary-400 mb-6">
								<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
								Our Mission
							</h2>
							<p class="text-gray-600 dark:text-gray-300 leading-relaxed">
								To empower businesses with cutting-edge technology solutions that drive innovation, efficiency, and growth. We believe in creating digital experiences that make a meaningful impact on our clients' success.
							</p>
						</Card>
					</Animate>
					
					<Animate animation="slide-up" trigger="scroll" delay="sm">
						<Card variant="outline" className="h-full">
							<div class="text-primary-600 dark:text-primary-400 mb-6">
								<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
								Our Vision
							</h2>
							<p class="text-gray-600 dark:text-gray-300 leading-relaxed">
								To be the leading technology partner for businesses seeking digital transformation. We envision a world where technology seamlessly integrates with business goals to create exceptional value.
							</p>
						</Card>
					</Animate>
				</Grid>
			</div>
		</section>

		<!-- Values Section -->
		<section class="py-20 bg-gray-50 dark:bg-gray-800">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="max-w-3xl mx-auto text-center mb-16">
					<h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
						Our Core Values
					</h2>
					<p class="text-lg text-gray-600 dark:text-gray-300">
						The principles that guide everything we do.
					</p>
				</div>
				
				<Grid cols={3} gap="lg" responsive={{ sm: 1, md: 2, lg: 3 }}>
					<Animate animation="scale" trigger="scroll">
						<Card variant="default">
							<div class="text-center">
								<div class="text-primary-600 dark:text-primary-400 mb-4">
									<svg class="w-10 h-10 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
									</svg>
								</div>
								<h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
									Excellence
								</h3>
								<p class="text-gray-600 dark:text-gray-300">
									We strive for excellence in every project, delivering quality that exceeds expectations.
								</p>
							</div>
						</Card>
					</Animate>
					
					<Animate animation="scale" trigger="scroll" delay="sm">
						<Card variant="default">
							<div class="text-center">
								<div class="text-primary-600 dark:text-primary-400 mb-4">
									<svg class="w-10 h-10 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
									</svg>
								</div>
								<h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
									Collaboration
								</h3>
								<p class="text-gray-600 dark:text-gray-300">
									We work closely with our clients as partners, ensuring transparent communication throughout.
								</p>
							</div>
						</Card>
					</Animate>
					
					<Animate animation="scale" trigger="scroll" delay="md">
						<Card variant="default">
							<div class="text-center">
								<div class="text-primary-600 dark:text-primary-400 mb-4">
									<svg class="w-10 h-10 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
									</svg>
								</div>
								<h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
									Innovation
								</h3>
								<p class="text-gray-600 dark:text-gray-300">
									We embrace cutting-edge technologies and creative solutions to solve complex challenges.
								</p>
							</div>
						</Card>
					</Animate>
				</Grid>
			</div>
		</section>

		<!-- Team Section -->
		<section class="py-20 bg-white dark:bg-gray-900">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="max-w-3xl mx-auto text-center mb-16">
					<h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
						Meet Our Team
					</h2>
					<p class="text-lg text-gray-600 dark:text-gray-300">
						Talented professionals dedicated to your success.
					</p>
				</div>
				
				<Grid cols={3} gap="lg" responsive={{ sm: 1, md: 2, lg: 3 }}>
					<Animate animation="fade-in" trigger="scroll">
						<Card variant="default">
							<div class="text-center">
								<div class="w-24 h-24 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full flex items-center justify-center text-white text-2xl font-bold mx-auto mb-4">
									JD
								</div>
								<h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
									John Doe
								</h3>
								<p class="text-primary-600 dark:text-primary-400 font-medium mb-3">
									CEO & Founder
								</p>
								<p class="text-gray-600 dark:text-gray-300 text-sm">
									Visionary leader with 15+ years in technology and business strategy.
								</p>
							</div>
						</Card>
					</Animate>
					
					<Animate animation="fade-in" trigger="scroll" delay="sm">
						<Card variant="default">
							<div class="text-center">
								<div class="w-24 h-24 bg-gradient-to-br from-secondary-400 to-secondary-600 rounded-full flex items-center justify-center text-white text-2xl font-bold mx-auto mb-4">
									JS
								</div>
								<h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
									Jane Smith
								</h3>
								<p class="text-primary-600 dark:text-primary-400 font-medium mb-3">
									CTO
								</p>
								<p class="text-gray-600 dark:text-gray-300 text-sm">
									Technical expert specializing in scalable architecture and innovation.
								</p>
							</div>
						</Card>
					</Animate>
					
					<Animate animation="fade-in" trigger="scroll" delay="md">
						<Card variant="default">
							<div class="text-center">
								<div class="w-24 h-24 bg-gradient-to-br from-accent-400 to-accent-600 rounded-full flex items-center justify-center text-white text-2xl font-bold mx-auto mb-4">
									MB
								</div>
								<h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
									Mike Brown
								</h3>
								<p class="text-primary-600 dark:text-primary-400 font-medium mb-3">
									Lead Developer
								</p>
								<p class="text-gray-600 dark:text-gray-300 text-sm">
									Full-stack developer passionate about creating exceptional user experiences.
								</p>
							</div>
						</Card>
					</Animate>
				</Grid>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-20 bg-primary-600 dark:bg-primary-700">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="max-w-3xl mx-auto text-center">
					<Animate animation="fade-in" trigger="scroll">
						<h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
							Ready to Work Together?
						</h2>
						<p class="text-xl text-primary-100 mb-8">
							Let's discuss how our expertise can help achieve your business goals.
						</p>
						<Button variant="secondary" size="lg" href="/contact">
							Start a Conversation
						</Button>
					</Animate>
				</div>
			</div>
		</section>
		
		<Footer />
	</body>
</html>
