---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import RevealOnScroll from '../components/ui/RevealOnScroll.astro';
import { withBasePath } from '../utils/helpers';

const demos = [
  {
    id: 'visual',
    title: 'Visual Showcase',
    description: 'Explore cutting-edge 3D graphics, animations, and interactive effects',
    icon: '\u{1F3A8}',
    features: ['3D CSS Transforms', 'Particle Systems', 'Advanced Animations', 'WebGL Effects'],
    difficulty: 'Advanced',
    duration: '15-20 min',
    link: withBasePath('visual-showcase/'),
    color: 'from-purple-600 to-pink-600',
  },
  {
    id: 'interactive',
    title: 'Interactive Components',
    description: 'Test forms, validation, real-time feedback, and user interactions',
    icon: '\u26A1',
    features: ['Form Validation', 'Live Updates', 'Keyboard Navigation', 'Accessibility'],
    difficulty: 'Intermediate',
    duration: '10-15 min',
    link: withBasePath('contact/'),
    color: 'from-blue-600 to-cyan-600',
  },
  {
    id: 'performance',
    title: 'Performance Monitor',
    description: 'See real-time metrics, load times, and optimization techniques',
    icon: '\u{1F4CA}',
    features: ['Core Web Vitals', 'Load Analytics', 'Resource Timing', 'Optimization Tips'],
    difficulty: 'Beginner',
    duration: '5-10 min',
    link: withBasePath('about/'),
    color: 'from-green-600 to-emerald-600',
  },
  {
    id: 'code',
    title: 'Code Examples',
    description: 'Browse syntax-highlighted code samples and implementation patterns',
    icon: '\u{1F4BB}',
    features: ['TypeScript', 'Astro Components', 'Tailwind CSS', 'Best Practices'],
    difficulty: 'All Levels',
    duration: '10-15 min',
    link: withBasePath('showcase/'),
    color: 'from-orange-600 to-red-600',
  },
  {
    id: 'architecture',
    title: 'System Architecture',
    description: 'Understand the build pipeline, static generation, and deployment',
    icon: '\u{1F3D7}\uFE0F',
    features: ['Build Process', 'Static Generation', 'GitHub Pages', 'CI/CD Pipeline'],
    difficulty: 'Advanced',
    duration: '15-20 min',
    link: withBasePath('dashboard-v2/'),
    color: 'from-indigo-600 to-purple-600',
  },
  {
    id: 'accessibility',
    title: 'Accessibility Tour',
    description: 'Experience WCAG-compliant design and assistive technology support',
    icon: '\u267F',
    features: ['Screen Reader Support', 'Keyboard Navigation', 'ARIA Labels', 'Color Contrast'],
    difficulty: 'Intermediate',
    duration: '10-15 min',
    link: withBasePath('services/'),
    color: 'from-teal-600 to-green-600',
  },
];

const advancedOptions = [
  {
    title: 'Guided Walkthrough',
    description: 'Step-by-step interactive tour with tooltips and highlights',
    icon: '\u{1F9ED}',
    action: 'start-tour',
  },
  {
    title: 'Sandbox Mode',
    description: 'Experiment with components in an isolated environment',
    icon: '\u{1F52C}',
    action: 'open-sandbox',
  },
  {
    title: 'API Playground',
    description: 'Test API endpoints and explore response data structures',
    icon: '\u{1F3AE}',
    action: 'api-playground',
  },
  {
    title: 'Custom Demo Builder',
    description: 'Create your own demo by selecting specific components',
    icon: '\u{1F6E0}\uFE0F',
    action: 'demo-builder',
  },
];

const quickActions = [
  { label: 'View Source Code', icon: '\u{1F4C2}', href: 'https://github.com/tariqdude/Github-Pages-Project-v1' },
  { label: 'Download Starter', icon: '\u2B07\uFE0F', href: 'https://github.com/tariqdude/Github-Pages-Project-v1/archive/refs/heads/main.zip' },
  { label: 'Read Documentation', icon: '\u{1F4DA}', href: withBasePath('blog/') },
  { label: 'Contact Support', icon: '\u{1F4AC}', href: withBasePath('contact/') },
];
---

<MarketingLayout
  title="Interactive Demo Center | Elite Project"
  description="Explore comprehensive demos, tutorials, and interactive experiences showcasing modern web capabilities"
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-zinc-950 pt-24 pb-16">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>

    <div class="container mx-auto px-6 relative">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-zinc-900 border border-zinc-800 mb-6">
          <span class="w-2 h-2 rounded-full bg-accent-500 animate-pulse"></span>
          <span class="text-xs font-mono text-zinc-400 tracking-wider">INTERACTIVE_DEMO_CENTER</span>
        </div>
        <h1 class="text-5xl md:text-7xl font-display font-bold mb-6 text-white uppercase tracking-tight">
          Experience It <span class="text-accent-500">Live</span>
        </h1>
        <p class="text-xl md:text-2xl text-zinc-400 mb-8 font-mono">
          // Choose your adventure through interactive demos, code examples, and advanced features
        </p>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-3xl mx-auto mb-12">
          <div class="bg-zinc-900/50 border border-zinc-800 p-4 relative group hover:border-accent-500 transition-colors">
            <div class="absolute top-0 left-0 w-2 h-2 border-t border-l border-zinc-700 group-hover:border-accent-500 transition-colors"></div>
            <div class="text-3xl font-mono font-bold text-white group-hover:text-accent-500 transition-colors">6</div>
            <div class="text-sm text-zinc-500 font-mono uppercase">Demo_Paths</div>
          </div>
          <div class="bg-zinc-900/50 border border-zinc-800 p-4 relative group hover:border-accent-500 transition-colors">
            <div class="absolute top-0 right-0 w-2 h-2 border-t border-r border-zinc-700 group-hover:border-accent-500 transition-colors"></div>
            <div class="text-3xl font-mono font-bold text-white group-hover:text-accent-500 transition-colors">20+</div>
            <div class="text-sm text-zinc-500 font-mono uppercase">Components</div>
          </div>
          <div class="bg-zinc-900/50 border border-zinc-800 p-4 relative group hover:border-accent-500 transition-colors">
            <div class="absolute bottom-0 left-0 w-2 h-2 border-b border-l border-zinc-700 group-hover:border-accent-500 transition-colors"></div>
            <div class="text-3xl font-mono font-bold text-white group-hover:text-accent-500 transition-colors">100%</div>
            <div class="text-sm text-zinc-500 font-mono uppercase">Interactive</div>
          </div>
          <div class="bg-zinc-900/50 border border-zinc-800 p-4 relative group hover:border-accent-500 transition-colors">
            <div class="absolute bottom-0 right-0 w-2 h-2 border-b border-r border-zinc-700 group-hover:border-accent-500 transition-colors"></div>
            <div class="text-3xl font-mono font-bold text-white group-hover:text-accent-500 transition-colors">A11y</div>
            <div class="text-sm text-zinc-500 font-mono uppercase">Accessible</div>
          </div>
        </div>

        <!-- Quick Actions Bar -->
        <div class="flex flex-wrap gap-3 justify-center mb-8">
          {quickActions.map((action) => (
            <a
              href={action.href}
              class="inline-flex items-center gap-2 px-4 py-2 bg-zinc-900 hover:bg-zinc-800 border border-zinc-800 hover:border-accent-500 text-sm text-zinc-300 hover:text-accent-500 transition-all font-mono uppercase tracking-wider"
              target={action.href.startsWith('http') ? '_blank' : undefined}
              rel={action.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            >
              <span>{action.icon}</span>
              <span>{action.label}</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Main Demo Grid -->
  <section class="py-20 bg-zinc-900 border-y border-zinc-800">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-white mb-4">
          Choose Your Demo Experience
        </h2>
        <p class="text-xl text-zinc-400 font-mono">
          // Each demo is fully interactive and showcases different aspects of the platform
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {demos.map((demo, index) => (
          <RevealOnScroll delay={index * 100}>
            <div class="group h-full bg-zinc-950 border border-zinc-800 hover:border-accent-500 transition-all duration-300 relative">
              <div class="absolute top-0 right-0 w-4 h-4 border-t border-r border-zinc-700 group-hover:border-accent-500 transition-colors"></div>
              <div class="absolute bottom-0 left-0 w-4 h-4 border-b border-l border-zinc-700 group-hover:border-accent-500 transition-colors"></div>

              <!-- Card Header -->
              <div class="p-6 border-b border-zinc-800 bg-zinc-900/50">
                <div class="text-4xl mb-3 text-accent-500">{demo.icon}</div>
                <h3 class="text-2xl font-display font-bold text-white mb-2 group-hover:text-accent-500 transition-colors">{demo.title}</h3>
                <p class="text-zinc-400 text-sm font-mono">{demo.description}</p>
              </div>

              <!-- Card Body -->
              <div class="p-6">
                <!-- Features -->
                <div class="mb-6">
                  <h4 class="text-xs uppercase tracking-wider text-zinc-500 font-mono font-bold mb-3">Features_Included</h4>
                  <div class="flex flex-wrap gap-2">
                    {demo.features.map((feature) => (
                      <span class="px-2 py-1 bg-zinc-900 border border-zinc-800 text-xs text-zinc-300 font-mono">
                        {feature}
                      </span>
                    ))}
                  </div>
                </div>

                <!-- Meta Info -->
                <div class="flex items-center justify-between mb-6 text-sm font-mono">
                  <div class="flex items-center gap-2 text-zinc-400">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>{demo.duration}</span>
                  </div>
                  <span class={`px-2 py-1 border text-xs font-bold uppercase ${
                    demo.difficulty === 'Beginner' ? 'border-green-900 text-green-500 bg-green-900/10' :
                    demo.difficulty === 'Intermediate' ? 'border-yellow-900 text-yellow-500 bg-yellow-900/10' :
                    'border-red-900 text-red-500 bg-red-900/10'
                  }`}>
                    {demo.difficulty}
                  </span>
                </div>

                <!-- CTA -->
                <a
                  href={demo.link}
                  class="block w-full py-3 px-6 text-center font-bold text-sm uppercase tracking-wider border border-zinc-700 text-zinc-100 hover:bg-accent-500 hover:border-accent-500 hover:text-white transition-all font-mono"
                >
                  Launch_Demo {'>'}
                </a>
              </div>
            </div>
          </RevealOnScroll>
        ))}
      </div>
    </div>
  </section>

  <!-- Advanced Options Section -->
  <section class="py-20 bg-zinc-950 relative overflow-hidden">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>
    <div class="container mx-auto px-6 relative">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-zinc-900 border border-zinc-800 mb-4">
          <span class="text-xs font-mono text-accent-500 tracking-wider">POWER_USER_FEATURES</span>
        </div>
        <h2 class="text-4xl md:text-5xl font-display font-bold text-white mb-4">
          Advanced Demo Options
        </h2>
        <p class="text-xl text-zinc-400 max-w-3xl mx-auto font-mono">
          // Take your exploration to the next level with these advanced tools and interactive experiences
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {advancedOptions.map((option) => (
          <div
            class="group bg-zinc-900/80 backdrop-blur-sm border border-zinc-800 p-8 hover:border-accent-500 transition-all duration-300 cursor-pointer relative"
            data-action={option.action}
          >
            <div class="absolute top-0 left-0 w-2 h-2 border-t border-l border-zinc-700 group-hover:border-accent-500 transition-colors"></div>
            <div class="absolute bottom-0 right-0 w-2 h-2 border-b border-r border-zinc-700 group-hover:border-accent-500 transition-colors"></div>

            <div class="flex items-start gap-4">
              <div class="text-5xl text-zinc-600 group-hover:text-accent-500 transition-colors">{option.icon}</div>
              <div class="flex-1">
                <h3 class="text-2xl font-display font-bold text-white mb-2 group-hover:text-accent-500 transition-colors">
                  {option.title}
                </h3>
                <p class="text-zinc-400 mb-4 font-mono text-sm">{option.description}</p>
                <button
                  class="inline-flex items-center gap-2 text-accent-500 font-mono font-bold text-sm uppercase tracking-wider hover:gap-3 transition-all"
                  data-action={option.action}
                >
                  Get_Started
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Custom Demo Builder Section -->
  <section class="py-20 bg-zinc-900 border-y border-zinc-800">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <div class="bg-zinc-950 border border-zinc-800 p-12 relative">
          <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-accent-500 to-transparent opacity-50"></div>

          <div class="text-center mb-12">
            <h2 class="text-4xl md:text-5xl font-display font-bold text-white mb-4">
              Build Your Custom Demo
            </h2>
            <p class="text-xl text-zinc-400 font-mono">
              // Select the features you want to explore and create a personalized demo experience
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
            {[
              { name: '3D Graphics', icon: '\\u{1F3A8}', value: '3d' },
              { name: 'Animations', icon: '\\u2728', value: 'animations' },
              { name: 'Forms', icon: '\\u{1F4DD}', value: 'forms' },
              { name: 'Performance', icon: '\\u26A1', value: 'performance' },
              { name: 'Accessibility', icon: '\\u267F', value: 'a11y' },
              { name: 'Dark Mode', icon: '\\u{1F319}', value: 'theme' },
              { name: 'Responsive', icon: '\\u{1F4F1}', value: 'responsive' },
              { name: 'Code Samples', icon: '\\u{1F4BB}', value: 'code' },
            ].map((feature) => (
              <label class="flex items-center gap-3 p-4 bg-zinc-900 border border-zinc-800 hover:border-accent-500 cursor-pointer transition-all group">
                <input type="checkbox" class="w-5 h-5 rounded-none border-zinc-700 bg-zinc-950 text-accent-500 focus:ring-1 focus:ring-accent-500 focus:ring-offset-0" value={feature.value} />
                <span class="text-2xl">{feature.icon}</span>
                <span class="text-sm text-zinc-300 group-hover:text-white transition-colors font-mono">{feature.name}</span>
              </label>
            ))}
          </div>

          <div class="text-center">
            <button
              id="build-custom-demo"
              class="px-8 py-4 bg-zinc-100 text-zinc-900 font-bold text-lg hover:bg-accent-500 hover:text-white transition-colors font-mono uppercase tracking-wider"
            >
              Generate_Custom_Demo
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Help & Support Section -->
  <section class="py-20 bg-zinc-950">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-white mb-6">
          Need Help Getting Started?
        </h2>
        <p class="text-xl text-zinc-400 mb-8 font-mono">
          // Our team is here to guide you through any demo or answer your questions
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href={withBasePath('contact/')}
            class="px-8 py-4 bg-zinc-100 hover:bg-accent-500 hover:text-white text-zinc-900 font-bold transition-colors font-mono uppercase tracking-wider"
          >
            Contact_Support
          </a>
          <a
            href={withBasePath('blog/')}
            class="px-8 py-4 bg-zinc-900 hover:bg-zinc-800 border border-zinc-800 hover:border-accent-500 text-zinc-300 hover:text-accent-500 font-bold transition-all font-mono uppercase tracking-wider"
          >
            Read_Documentation
          </a>
          <a
            href="https://github.com/tariqdude/Github-Pages-Project-v1"
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-4 bg-zinc-900 hover:bg-zinc-800 border border-zinc-800 hover:border-accent-500 text-zinc-300 hover:text-accent-500 font-bold transition-all font-mono uppercase tracking-wider"
          >
            View_on_GitHub
          </a>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>

<script>
  // Advanced Options Interaction
  document.querySelectorAll('[data-action]').forEach(element => {
    element.addEventListener('click', (e) => {
      const action = (e.currentTarget as HTMLElement).dataset.action;

      switch(action) {
        case 'start-tour':
          alert('\\u{1F9ED} Guided tour feature coming soon! This will provide step-by-step walkthroughs of key features.');
          break;
        case 'open-sandbox':
          alert('\\u{1F52C} Sandbox mode coming soon! Experiment with components in an isolated environment.');
          break;
        case 'api-playground':
          alert('\\u{1F3AE} API Playground coming soon! Test endpoints and explore data structures interactively.');
          break;
        case 'demo-builder':
          document.getElementById('build-custom-demo')?.scrollIntoView({ behavior: 'smooth' });
          break;
      }
    });
  });

  // Custom Demo Builder
  document.getElementById('build-custom-demo')?.addEventListener('click', () => {
    const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
    const selected = Array.from(checkboxes).map(cb => (cb as HTMLInputElement).value);

    if (selected.length === 0) {
      alert('\\u26A0\\uFE0F Please select at least one feature to build your custom demo!');
      return;
    }

    const features = selected.join(', ');
    const message = `\\u2728 Custom demo created with: ${features}\\n\\nThis feature will generate a personalized demo page based on your selections. Coming soon!`;
    alert(message);
  });

  // Keyboard navigation enhancement
  document.addEventListener('keydown', (e) => {
    if (e.key === '?' && !e.ctrlKey && !e.metaKey) {
      alert('\\u2328\\uFE0F Keyboard Shortcuts:\\n\\n\\u2022 ? - Show this help\\n\\u2022 1-6 - Jump to demo\\n\\u2022 Esc - Close modals\\n\\u2022 Tab - Navigate elements');
      e.preventDefault();
    }
  });
</script>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  .group:hover .text-5xl {
    animation: float 2s ease-in-out infinite;
  }

  /* Custom scrollbar for demo cards */
  .demo-card::-webkit-scrollbar {
    width: 6px;
  }

  .demo-card::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 3px;
  }

  .demo-card::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 3px;
  }

  .demo-card::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }
</style>

