---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import Card from '../components/ui/Card.astro';
import ModernCard from '../components/ui/ModernCard.astro';
import AdvancedCard from '../components/ui/AdvancedCard.astro';
import ModernButton from '../components/ui/ModernButton.astro';
import Animate from '../components/ui/Animate.astro';
import ModernAnimate from '../components/ui/ModernAnimate.astro';
import Grid from '../components/ui/Grid.astro';
import ThemeToggle from '../components/ui/ThemeToggle.astro';
import LazyImage from '../components/ui/LazyImage.astro';
import Icon from '../components/ui/Icon.astro';

const title = 'Component Library';
const description =
  'Comprehensive showcase of all UI components with usage examples and props documentation';
---

<MarketingLayout title={title} description={description}>
  <div
    class="fixed inset-0 bg-[url('/grid-pattern.svg')] opacity-10 pointer-events-none"
  >
  </div>

  <main class="container mx-auto px-4 py-16 relative z-10">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="mb-16 border-b border-slate-800 pb-8">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-3 h-3 bg-accent-500 rounded-full animate-pulse"></div>
          <span
            class="font-mono text-sm text-accent-500 tracking-wider uppercase"
            >System Components</span
          >
        </div>
        <h1
          class="text-5xl md:text-6xl font-bold text-white mb-6 tracking-tight"
        >
          UI <span class="text-slate-500">Library</span>
        </h1>
        <p class="text-xl text-slate-400 max-w-2xl font-mono">
          // Standardized interface elements for mission-critical applications.
          <br />
          // Status: <span class="text-emerald-400">ACTIVE</span>
        </p>
      </div>

      <!-- Cards Section -->
      <section class="mb-20">
        <div class="mb-8 flex items-center gap-4">
          <div class="h-px bg-slate-800 flex-1"></div>
          <h2
            class="text-2xl font-bold text-white font-mono uppercase tracking-widest"
          >
            01. Card Components
          </h2>
          <div class="h-px bg-slate-800 flex-1"></div>
        </div>

        <div class="space-y-12">
          <!-- Basic Card -->
          <div class="border border-slate-800 bg-slate-900/50 p-1">
            <div class="border border-slate-800/50 p-8">
              <h3
                class="text-2xl font-semibold text-white mb-4 flex items-center gap-3"
              >
                <span class="w-1 h-6 bg-accent-500"></span>
                Card <span class="text-sm font-mono text-slate-500 ml-2"
                  >&lt;Card /&gt;</span
                >
              </h3>
              <p
                class="text-slate-400 mb-6 font-mono text-sm border-l-2 border-slate-800 pl-4"
              >
                Basic card component with optional header, body, and footer
                slots
              </p>
              <div class="grid md:grid-cols-2 gap-4 mb-6">
                <Card variant="default" href="#">
                  <h3 class="text-xl font-semibold text-slate-200 mb-2">
                    Card Title
                  </h3>
                  <p class="text-slate-400">
                    This is a basic card with a title and description. Perfect
                    for blog posts, products, or team members.
                  </p>
                </Card>
                <Card variant="gradient" href="#">
                  <h3 class="text-xl font-semibold text-slate-200 mb-2">
                    Gradient Card
                  </h3>
                  <p class="text-slate-400">
                    Cards can have different variants like gradient backgrounds.
                  </p>
                </Card>
              </div>
              <details class="text-sm group">
                <summary
                  class="cursor-pointer text-accent-400 hover:text-accent-300 mb-2 font-mono uppercase text-xs tracking-wider flex items-center gap-2"
                >
                  <span class="group-open:rotate-90 transition-transform"
                    >â–¶</span
                  >
                  View Props
                </summary>
                <pre
                  class="bg-slate-950 border border-slate-800 p-4 overflow-x-auto text-slate-300 font-mono text-xs"><code>{`interface Props {
  title?: string;
  imageSrc?: string;
  imageAlt?: string;
  href?: string;
  class?: string;
}`}</code></pre>
              </details>
            </div>
          </div>

          <!-- Modern Card -->
          <div class="border border-slate-800 bg-slate-900/50 p-1">
            <div class="border border-slate-800/50 p-8">
              <h3
                class="text-2xl font-semibold text-white mb-4 flex items-center gap-3"
              >
                <span class="w-1 h-6 bg-accent-500"></span>
                ModernCard <span class="text-sm font-mono text-slate-500 ml-2"
                  >&lt;ModernCard /&gt;</span
                >
              </h3>
              <p
                class="text-slate-400 mb-6 font-mono text-sm border-l-2 border-slate-800 pl-4"
              >
                Enhanced card with hover effects, gradients, and modern styling
              </p>
              <div class="grid md:grid-cols-2 gap-4 mb-6">
                <ModernCard variant="default">
                  <div class="text-4xl mb-3">âœ¨</div>
                  <h3 class="text-xl font-semibold text-slate-200 mb-2">
                    Modern Design
                  </h3>
                  <p class="text-slate-400">
                    Cards with gradient borders and smooth animations
                  </p>
                </ModernCard>
                <ModernCard variant="gradient">
                  <div class="text-4xl mb-3">ðŸŽ¨</div>
                  <h3 class="text-xl font-semibold text-slate-200 mb-2">
                    Interactive
                  </h3>
                  <p class="text-slate-400">
                    Hover effects and transform animations
                  </p>
                </ModernCard>
              </div>
              <details class="text-sm group">
                <summary
                  class="cursor-pointer text-accent-400 hover:text-accent-300 mb-2 font-mono uppercase text-xs tracking-wider flex items-center gap-2"
                >
                  <span class="group-open:rotate-90 transition-transform"
                    >â–¶</span
                  >
                  View Props
                </summary>
                <pre
                  class="bg-slate-950 border border-slate-800 p-4 overflow-x-auto text-slate-300 font-mono text-xs"><code>{`interface Props {
  title?: string;
  description?: string;
  icon?: string;
  href?: string;
  variant?: 'default' | 'gradient' | 'glow';
  class?: string;
}`}</code></pre>
              </details>
            </div>
          </div>

          <!-- Advanced Card -->
          <div class="border border-slate-800 bg-slate-900/50 p-1">
            <div class="border border-slate-800/50 p-8">
              <h3
                class="text-2xl font-semibold text-white mb-4 flex items-center gap-3"
              >
                <span class="w-1 h-6 bg-accent-500"></span>
                AdvancedCard <span class="text-sm font-mono text-slate-500 ml-2"
                  >&lt;AdvancedCard /&gt;</span
                >
              </h3>
              <p
                class="text-slate-400 mb-6 font-mono text-sm border-l-2 border-slate-800 pl-4"
              >
                Feature-rich card with badges, tags, actions, and advanced
                layouts
              </p>
              <div class="grid md:grid-cols-2 gap-4 mb-6">
                <AdvancedCard variant="default">
                  <div class="mb-2">
                    <span
                      class="inline-block px-2 py-1 text-xs font-semibold bg-blue-500 text-white rounded"
                      >New</span
                    >
                  </div>
                  <h3 class="text-xl font-semibold text-slate-200 mb-2">
                    Advanced Features
                  </h3>
                  <p class="text-slate-400 mb-3">
                    Support for badges, tags, custom footers and more
                  </p>
                  <div class="flex gap-2">
                    <span
                      class="text-xs px-2 py-1 bg-slate-700 text-slate-300 rounded"
                      >Feature</span
                    >
                    <span
                      class="text-xs px-2 py-1 bg-slate-700 text-slate-300 rounded"
                      >Premium</span
                    >
                  </div>
                </AdvancedCard>
                <AdvancedCard variant="glass">
                  <div class="mb-2">
                    <span
                      class="inline-block px-2 py-1 text-xs font-semibold bg-purple-500 text-white rounded"
                      >Popular</span
                    >
                  </div>
                  <h3 class="text-xl font-semibold text-slate-200 mb-2">
                    Customizable
                  </h3>
                  <p class="text-slate-400 mb-3">
                    Multiple variants and styling options
                  </p>
                  <div class="flex gap-2">
                    <span
                      class="text-xs px-2 py-1 bg-slate-700 text-slate-300 rounded"
                      >Flexible</span
                    >
                    <span
                      class="text-xs px-2 py-1 bg-slate-700 text-slate-300 rounded"
                      >Modern</span
                    >
                  </div>
                </AdvancedCard>
              </div>
              <details class="text-sm group">
                <summary
                  class="cursor-pointer text-accent-400 hover:text-accent-300 mb-2 font-mono uppercase text-xs tracking-wider flex items-center gap-2"
                >
                  <span class="group-open:rotate-90 transition-transform"
                    >â–¶</span
                  >
                  View Props
                </summary>
                <pre
                  class="bg-slate-950 border border-slate-800 p-4 overflow-x-auto text-slate-300 font-mono text-xs"><code>{`interface Props {
  title?: string;
  description?: string;
  badge?: string;
  tags?: string[];
  href?: string;
  variant?: 'default' | 'bordered' | 'elevated';
  class?: string;
}`}</code></pre>
              </details>
            </div>
          </div>
        </div>
      </section>

      <!-- Buttons Section -->
      <section class="mb-20">
        <div class="mb-8 flex items-center gap-4">
          <div class="h-px bg-slate-800 flex-1"></div>
          <h2
            class="text-2xl font-bold text-white font-mono uppercase tracking-widest"
          >
            02. Button Components
          </h2>
          <div class="h-px bg-slate-800 flex-1"></div>
        </div>

        <div class="space-y-12">


          <!-- Modern Button -->
          <div class="border border-slate-800 bg-slate-900/50 p-1">
            <div class="border border-slate-800/50 p-8">
              <h3
                class="text-2xl font-semibold text-white mb-4 flex items-center gap-3"
              >
                <span class="w-1 h-6 bg-accent-500"></span>
                ModernButton <span class="text-sm font-mono text-slate-500 ml-2"
                  >&lt;ModernButton /&gt;</span
                >
              </h3>
              <p
                class="text-slate-400 mb-6 font-mono text-sm border-l-2 border-slate-800 pl-4"
              >
                Modern button with gradients, glows, and advanced hover effects
              </p>
              <div class="flex flex-wrap gap-4 mb-6">
                <ModernButton variant="gradient">Gradient</ModernButton>
                <ModernButton variant="neon">Neon Effect</ModernButton>
                <ModernButton variant="primary">Primary</ModernButton>
              </div>
              <details class="text-sm group">
                <summary
                  class="cursor-pointer text-accent-400 hover:text-accent-300 mb-2 font-mono uppercase text-xs tracking-wider flex items-center gap-2"
                >
                  <span class="group-open:rotate-90 transition-transform"
                    >â–¶</span
                  >
                  View Props
                </summary>
                <pre
                  class="bg-slate-950 border border-slate-800 p-4 overflow-x-auto text-slate-300 font-mono text-xs"><code>{`interface Props {
  variant?: 'gradient' | 'glow' | 'shine' | 'pulse';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}`}</code></pre>
              </details>
            </div>
          </div>
        </div>
      </section>

      <!-- Animation Section -->
      <section class="mb-20">
        <div class="mb-8 flex items-center gap-4">
          <div class="h-px bg-slate-800 flex-1"></div>
          <h2
            class="text-2xl font-bold text-white font-mono uppercase tracking-widest"
          >
            03. Animation Components
          </h2>
          <div class="h-px bg-slate-800 flex-1"></div>
        </div>

        <div class="space-y-12">
          <!-- Basic Animate -->
          <div class="border border-slate-800 bg-slate-900/50 p-1">
            <div class="border border-slate-800/50 p-8">
              <h3
                class="text-2xl font-semibold text-white mb-4 flex items-center gap-3"
              >
                <span class="w-1 h-6 bg-accent-500"></span>
                Animate <span class="text-sm font-mono text-slate-500 ml-2"
                  >&lt;Animate /&gt;</span
                >
              </h3>
              <p
                class="text-slate-400 mb-6 font-mono text-sm border-l-2 border-slate-800 pl-4"
              >
                Basic reveal animation using Intersection Observer
              </p>
              <div class="space-y-4 mb-6">
                <Animate animation="fade-in">
                  <div class="p-4 bg-slate-800 rounded-lg text-slate-200">
                    Fade in animation
                  </div>
                </Animate>
                <Animate animation="slide-up">
                  <div class="p-4 bg-slate-800 rounded-lg text-slate-200">
                    Slide up animation
                  </div>
                </Animate>
              </div>
              <details class="text-sm group">
                <summary
                  class="cursor-pointer text-accent-400 hover:text-accent-300 mb-2 font-mono uppercase text-xs tracking-wider flex items-center gap-2"
                >
                  <span class="group-open:rotate-90 transition-transform"
                    >â–¶</span
                  >
                  View Props
                </summary>
                <pre
                  class="bg-slate-950 border border-slate-800 p-4 overflow-x-auto text-slate-300 font-mono text-xs"><code>{`interface Props {
  animation?: 'fade' | 'slide-up' | 'slide-down' | 'slide-left' | 'slide-right';
  delay?: number;
  duration?: number;
  class?: string;
}`}</code></pre>
              </details>
            </div>
          </div>

          <!-- Modern Animate -->
          <div class="border border-slate-800 bg-slate-900/50 p-1">
            <div class="border border-slate-800/50 p-8">
              <h3
                class="text-2xl font-semibold text-white mb-4 flex items-center gap-3"
              >
                <span class="w-1 h-6 bg-accent-500"></span>
                ModernAnimate <span
                  class="text-sm font-mono text-slate-500 ml-2"
                  >&lt;ModernAnimate /&gt;</span
                >
              </h3>
              <p
                class="text-slate-400 mb-6 font-mono text-sm border-l-2 border-slate-800 pl-4"
              >
                Enhanced animations with spring physics and advanced easing
              </p>
              <div class="space-y-4 mb-6">
                <ModernAnimate animation="bounce">
                  <div class="p-4 bg-slate-800 rounded-lg text-slate-200">
                    Bounce animation
                  </div>
                </ModernAnimate>
                <ModernAnimate animation="scale">
                  <div class="p-4 bg-slate-800 rounded-lg text-slate-200">
                    Scale animation
                  </div>
                </ModernAnimate>
              </div>
              <details class="text-sm group">
                <summary
                  class="cursor-pointer text-accent-400 hover:text-accent-300 mb-2 font-mono uppercase text-xs tracking-wider flex items-center gap-2"
                >
                  <span class="group-open:rotate-90 transition-transform"
                    >â–¶</span
                  >
                  View Props
                </summary>
                <pre
                  class="bg-slate-950 border border-slate-800 p-4 overflow-x-auto text-slate-300 font-mono text-xs"><code>{`interface Props {
  animation?: 'bounce' | 'scale' | 'rotate' | 'flip';
  delay?: number;
  duration?: number;
  easing?: 'ease' | 'spring' | 'bounce';
  class?: string;
}`}</code></pre>
              </details>
            </div>
          </div>
        </div>
      </section>

      <!-- Layout Section -->
      <section class="mb-20">
        <div class="mb-8 flex items-center gap-4">
          <div class="h-px bg-slate-800 flex-1"></div>
          <h2
            class="text-2xl font-bold text-white font-mono uppercase tracking-widest"
          >
            04. Layout Components
          </h2>
          <div class="h-px bg-slate-800 flex-1"></div>
        </div>

        <div class="space-y-12">
          <!-- Basic Grid -->
          <div class="border border-slate-800 bg-slate-900/50 p-1">
            <div class="border border-slate-800/50 p-8">
              <h3
                class="text-2xl font-semibold text-white mb-4 flex items-center gap-3"
              >
                <span class="w-1 h-6 bg-accent-500"></span>
                Grid <span class="text-sm font-mono text-slate-500 ml-2"
                  >&lt;Grid /&gt;</span
                >
              </h3>
              <p
                class="text-slate-400 mb-6 font-mono text-sm border-l-2 border-slate-800 pl-4"
              >
                Responsive grid with configurable columns and gaps
              </p>
              <Grid cols={3} gap="md" className="mb-6">
                <div
                  class="p-4 bg-slate-800 rounded-lg text-slate-200 text-center"
                >
                  Item 1
                </div>
                <div
                  class="p-4 bg-slate-800 rounded-lg text-slate-200 text-center"
                >
                  Item 2
                </div>
                <div
                  class="p-4 bg-slate-800 rounded-lg text-slate-200 text-center"
                >
                  Item 3
                </div>
              </Grid>
              <details class="text-sm group">
                <summary
                  class="cursor-pointer text-accent-400 hover:text-accent-300 mb-2 font-mono uppercase text-xs tracking-wider flex items-center gap-2"
                >
                  <span class="group-open:rotate-90 transition-transform"
                    >â–¶</span
                  >
                  View Props
                </summary>
                <pre
                  class="bg-slate-950 border border-slate-800 p-4 overflow-x-auto text-slate-300 font-mono text-xs"><code>{`interface Props {
  cols?: number | { sm?: number; md?: number; lg?: number };
  gap?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}`}</code></pre>
              </details>
            </div>
          </div>
        </div>
      </section>

      <!-- Utility Section -->
      <section class="mb-20">
        <div class="mb-8 flex items-center gap-4">
          <div class="h-px bg-slate-800 flex-1"></div>
          <h2
            class="text-2xl font-bold text-white font-mono uppercase tracking-widest"
          >
            05. Utility Components
          </h2>
          <div class="h-px bg-slate-800 flex-1"></div>
        </div>

        <div class="space-y-12">
          <!-- Theme Toggle -->
          <div class="border border-slate-800 bg-slate-900/50 p-1">
            <div class="border border-slate-800/50 p-8">
              <h3
                class="text-2xl font-semibold text-white mb-4 flex items-center gap-3"
              >
                <span class="w-1 h-6 bg-accent-500"></span>
                ThemeToggle <span class="text-sm font-mono text-slate-500 ml-2"
                  >&lt;ThemeToggle /&gt;</span
                >
              </h3>
              <p
                class="text-slate-400 mb-6 font-mono text-sm border-l-2 border-slate-800 pl-4"
              >
                Theme switcher with localStorage persistence and system
                preference detection
              </p>
              <div class="flex flex-wrap gap-4 mb-6">
                <ThemeToggle variant="icon" />
                <ThemeToggle variant="button" showLabel={true} />
                <ThemeToggle variant="dropdown" />
              </div>
              <details class="text-sm group">
                <summary
                  class="cursor-pointer text-accent-400 hover:text-accent-300 mb-2 font-mono uppercase text-xs tracking-wider flex items-center gap-2"
                >
                  <span class="group-open:rotate-90 transition-transform"
                    >â–¶</span
                  >
                  View Props
                </summary>
                <pre
                  class="bg-slate-950 border border-slate-800 p-4 overflow-x-auto text-slate-300 font-mono text-xs"><code>{`interface Props {
  variant?: 'icon' | 'button' | 'dropdown';
  showLabel?: boolean;
}`}</code></pre>
              </details>
            </div>
          </div>

          <!-- Lazy Image -->
          <div class="border border-slate-800 bg-slate-900/50 p-1">
            <div class="border border-slate-800/50 p-8">
              <h3
                class="text-2xl font-semibold text-white mb-4 flex items-center gap-3"
              >
                <span class="w-1 h-6 bg-accent-500"></span>
                LazyImage <span class="text-sm font-mono text-slate-500 ml-2"
                  >&lt;LazyImage /&gt;</span
                >
              </h3>
              <p
                class="text-slate-400 mb-6 font-mono text-sm border-l-2 border-slate-800 pl-4"
              >
                Performant lazy loading with Intersection Observer and blur
                placeholder
              </p>
              <div class="max-w-md mb-6">
                <LazyImage
                  src="https://via.placeholder.com/600x400"
                  alt="Demo image"
                  width={600}
                  height={400}
                />
              </div>
              <details class="text-sm group">
                <summary
                  class="cursor-pointer text-accent-400 hover:text-accent-300 mb-2 font-mono uppercase text-xs tracking-wider flex items-center gap-2"
                >
                  <span class="group-open:rotate-90 transition-transform"
                    >â–¶</span
                  >
                  View Props
                </summary>
                <pre
                  class="bg-slate-950 border border-slate-800 p-4 overflow-x-auto text-slate-300 font-mono text-xs"><code>{`interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  blurHash?: string;
  sizes?: string;
  srcset?: string;
}`}</code></pre>
              </details>
            </div>
          </div>

          <!-- Icon -->
          <div class="border border-slate-800 bg-slate-900/50 p-1">
            <div class="border border-slate-800/50 p-8">
              <h3
                class="text-2xl font-semibold text-white mb-4 flex items-center gap-3"
              >
                <span class="w-1 h-6 bg-accent-500"></span>
                Icon <span class="text-sm font-mono text-slate-500 ml-2"
                  >&lt;Icon /&gt;</span
                >
              </h3>
              <p
                class="text-slate-400 mb-6 font-mono text-sm border-l-2 border-slate-800 pl-4"
              >
                SVG icon component with customizable size and color
              </p>
              <div class="flex flex-wrap gap-4 mb-6 items-center">
                <Icon name="check" size="sm" />
                <Icon name="check" size="md" />
                <Icon name="check" size="lg" />
              </div>
              <details class="text-sm group">
                <summary
                  class="cursor-pointer text-accent-400 hover:text-accent-300 mb-2 font-mono uppercase text-xs tracking-wider flex items-center gap-2"
                >
                  <span class="group-open:rotate-90 transition-transform"
                    >â–¶</span
                  >
                  View Props
                </summary>
                <pre
                  class="bg-slate-950 border border-slate-800 p-4 overflow-x-auto text-slate-300 font-mono text-xs"><code>{`interface Props {
  name: string;
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}`}</code></pre>
              </details>
            </div>
          </div>
        </div>
      </section>

      <!-- Usage Guidelines -->
      <section class="mb-20">
        <div class="border border-slate-800 rounded-xl p-8 bg-slate-900/50">
          <h2
            class="text-3xl font-bold text-white mb-6 flex items-center gap-3"
          >
            <span class="w-2 h-8 bg-accent-500"></span>
            Usage Guidelines
          </h2>
          <div class="space-y-4 text-slate-300">
            <div>
              <h3 class="text-xl font-semibold text-white mb-2 font-mono">
                Import Components
              </h3>
              <pre
                class="bg-slate-950 border border-slate-800 p-4 rounded-lg overflow-x-auto text-sm font-mono"><code>---
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
---</code></pre>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-white mb-2 font-mono">
                Use in Templates
