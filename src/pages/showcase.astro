---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import { withBasePath } from '../utils/helpers';

const categories = [
  {
    name: 'Section templates',
    summary:
      'Pre-built hero, feature, and CTA layouts composed with semantic HTML and Tailwind.',
    items: [
      'Hero sections with metric blocks',
      'Two-column storytelling layouts',
      'Newsletter and contact callouts',
    ],
  },
  {
    name: 'Utility patterns',
    summary: 'Reusable class combinations for cards, badges, and grid spacing.',
    items: [
      'Neutral surfaces with subtle shadows',
      'Responsive grid helpers',
      'Accessible link and button states',
    ],
  },
  {
    name: 'Content components',
    summary: 'MDX-friendly blocks for blog posts and knowledge base entries.',
    items: [
      'Rich typography defaults using @tailwindcss/typography',
      'Quote and highlight callouts',
      'Table and code block styling',
    ],
  },
];

const caseStudies = [
  {
    client: 'Northwind Ops',
    result:
      'Consolidated three dashboard tools into a single static status page.',
    highlight:
      'Reduced deployment time from hours to minutes with GitHub Pages.',
  },
  {
    client: 'Globex Support',
    result: 'Replaced bespoke marketing site with reusable Astro templates.',
    highlight:
      'All content edits now handled by the support team via Markdown.',
  },
  {
    client: 'Contoso Labs',
    result: 'Launched a documentation portal without introducing a new CMS.',
    highlight:
      'Migrated 120 articles using the same BlogPost layout shipping here.',
  },
];
---

<MarketingLayout
  title="Showcase | Elite Project"
  description="Browse the reusable patterns and content sections that ship with this simplified Astro starter."
>
  <section class="bg-neutral-900 text-neutral-50">
    <div class="mx-auto max-w-5xl px-6 py-24 text-center">
      <p
        class="text-sm font-semibold uppercase tracking-[0.3em] text-neutral-400"
      >
        Showcase
      </p>
      <h1 class="mt-6 text-4xl font-semibold sm:text-5xl">
        Plain Astro components that still feel polished.
      </h1>
      <p class="mt-6 mx-auto max-w-3xl text-lg text-neutral-300">
        We rebuilt the showcase to highlight what matters: repeatable layouts
        that stay fully static. Everything on this page renders at build time
        and works without extra JavaScript bundles.
      </p>
    </div>
  </section>

  <section class="bg-white">
    <div class="mx-auto max-w-5xl space-y-10 px-6 py-20">
      {
        categories.map(category => (
          <article class="rounded-2xl border border-neutral-200 bg-neutral-50 p-8">
            <h2 class="text-2xl font-semibold text-neutral-900">
              {category.name}
            </h2>
            <p class="mt-3 text-sm text-neutral-600">{category.summary}</p>
            <ul class="mt-6 grid gap-3 text-sm text-neutral-600">
              {category.items.map(item => (
                <li class="flex items-start gap-2">
                  <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-brand-500" />
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </article>
        ))
      }
    </div>
  </section>

  <section class="bg-neutral-900 text-neutral-50">
    <div class="mx-auto max-w-5xl px-6 py-20">
      <h2 class="text-3xl font-semibold">Teams using these patterns</h2>
      <div class="mt-10 grid gap-8 md:grid-cols-3">
        {
          caseStudies.map(study => (
            <article class="rounded-2xl border border-neutral-800 bg-neutral-900/70 p-6">
              <p class="text-sm uppercase tracking-[0.3em] text-neutral-400">
                {study.client}
              </p>
              <h3 class="mt-4 text-xl font-semibold text-white">
                {study.result}
              </h3>
              <p class="mt-3 text-sm text-neutral-300">{study.highlight}</p>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <section class="bg-white">
    <div class="mx-auto max-w-4xl px-6 py-16 text-center">
      <h2 class="text-2xl font-semibold text-neutral-900">
        Want a tailored walkthrough?
      </h2>
      <p class="mt-4 text-sm text-neutral-600">
        We can pair-program through adapting these sections to your product
        narrative. Every update stays in Astro so the final deploy remains
        static and dependable.
      </p>
      <div class="mt-6 flex flex-wrap justify-center gap-3">
        <a
          class="inline-flex items-center justify-center rounded-full bg-brand-600 px-5 py-2 text-sm font-semibold text-white transition hover:bg-brand-700"
          href={withBasePath('contact/')}
        >
          Schedule a walkthrough
        </a>
        <a
          class="inline-flex items-center justify-center rounded-full border border-neutral-200 px-5 py-2 text-sm font-semibold text-neutral-800 transition hover:border-neutral-300"
          href={withBasePath('services/')}
        >
          View services
        </a>
      </div>
    </div>
  </section>
</MarketingLayout>
