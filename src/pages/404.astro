---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import { withBasePath } from '../utils/helpers';

const quickLinks = [
  { label: 'Home', href: withBasePath('/') },
  { label: 'About', href: withBasePath('about/') },
  { label: 'Services', href: withBasePath('services/') },
  { label: 'Pricing', href: withBasePath('pricing/') },
  { label: 'Blog', href: withBasePath('blog/') },
  { label: 'Contact', href: withBasePath('contact/') },
];
---

<MarketingLayout
  title="Page Not Found | Elite Project"
  description="The page you're looking for doesn't exist."
>
  <section
    class="relative flex min-h-[80vh] items-center justify-center overflow-hidden"
  >
    <div
      class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_center,_rgba(148,163,184,0.15),_transparent_70%)]"
    >
    </div>
    <div class="relative mx-auto max-w-[800px] px-6 py-20 text-center">
      <div
        class="glass-panel border border-white/10 px-10 py-16 sm:px-14 sm:py-20"
      >
        <div class="mb-8 flex justify-center">
          <span
            class="inline-flex h-24 w-24 items-center justify-center rounded-2xl border border-white/15 bg-white/5 text-4xl font-semibold text-slate-100"
          >
            404
          </span>
        </div>

        <h1 class="text-4xl font-semibold text-white sm:text-5xl">
          Page not found
        </h1>

        <p class="mt-6 text-lg text-slate-300">
          The page you're looking for doesn't exist or has been moved. Try one
          of the links below to get back on track.
        </p>

        <div class="mt-10 flex flex-wrap justify-center gap-4">
          <a class="btn btn-primary" href={withBasePath('/')}> Return home </a>
          <a class="btn btn-secondary" href={withBasePath('contact/')}>
            Contact support
          </a>
        </div>

        <div class="mt-12 border-t border-white/10 pt-10">
          <p
            class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
          >
            Quick links
          </p>
          <nav class="mt-6 flex flex-wrap justify-center gap-x-6 gap-y-3">
            {
              quickLinks.map(link => (
                <a
                  class="text-sm font-medium text-slate-300 transition hover:text-white"
                  href={link.href}
                >
                  {link.label}
                </a>
              ))
            }
          </nav>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>
