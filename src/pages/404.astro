---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import { withBasePath } from '../utils/helpers';

const quickLinks = [
  { label: 'Home', href: withBasePath('/') },
  { label: 'About', href: withBasePath('about/') },
  { label: 'Services', href: withBasePath('services/') },
  { label: 'Pricing', href: withBasePath('pricing/') },
  { label: 'Blog', href: withBasePath('blog/') },
  { label: 'Contact', href: withBasePath('contact/') },
];
---

<MarketingLayout
  title="Page Not Found | Elite Project"
  description="The page you're looking for doesn't exist."
>
  <section
    class="relative flex min-h-[80vh] items-center justify-center overflow-hidden bg-zinc-950"
  >
    <div
      class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"
    >
    </div>
    <div class="relative mx-auto max-w-[800px] px-6 py-20 text-center">
      <div
        class="border border-zinc-800 bg-zinc-900/80 px-10 py-16 sm:px-14 sm:py-20 backdrop-blur-sm relative"
      >
        <div
          class="absolute top-0 left-0 w-2 h-2 border-t border-l border-zinc-700"
        >
        </div>
        <div
          class="absolute top-0 right-0 w-2 h-2 border-t border-r border-zinc-700"
        >
        </div>
        <div
          class="absolute bottom-0 left-0 w-2 h-2 border-b border-l border-zinc-700"
        >
        </div>
        <div
          class="absolute bottom-0 right-0 w-2 h-2 border-b border-r border-zinc-700"
        >
        </div>

        <div class="mb-8 flex justify-center">
          <span
            class="inline-flex h-24 w-24 items-center justify-center border border-zinc-800 bg-zinc-950 text-4xl font-mono font-bold text-accent-500"
          >
            404
          </span>
        </div>

        <h1
          class="text-4xl font-display font-bold text-white sm:text-5xl uppercase tracking-tight"
        >
          Page_Not_Found
        </h1>

        <p class="mt-6 text-lg text-zinc-400 font-mono">
          // The page you're looking for doesn't exist or has been moved. Try
          one of the links below to get back on track.
        </p>

        <p class="mt-4 text-sm text-zinc-500 font-mono">
          Current URL: <code
            class="bg-zinc-950 border border-zinc-800 px-2 py-1 text-accent-500"
            id="current-url"></code>
        </p>

        <div class="mt-10 flex flex-wrap justify-center gap-4">
          <a
            class="inline-flex items-center justify-center px-6 py-3 text-sm font-bold text-zinc-900 bg-zinc-100 border border-zinc-100 hover:bg-accent-500 hover:border-accent-500 hover:text-white transition-all uppercase tracking-wider font-mono"
            href={withBasePath('/')}
          >
            Return_Home
          </a>
          <a
            class="inline-flex items-center justify-center px-6 py-3 text-sm font-bold text-zinc-100 border border-zinc-700 hover:bg-zinc-900 hover:border-accent-500 hover:text-accent-500 transition-all uppercase tracking-wider font-mono"
            href={withBasePath('contact/')}
          >
            Contact_Support
          </a>
        </div>

        <script is:inline>
          document.addEventListener('DOMContentLoaded', () => {
            const urlElement = document.getElementById('current-url');
            if (urlElement) {
              urlElement.textContent = window.location.pathname;
            }
          });
        </script>

        <div class="mt-12 border-t border-zinc-800 pt-10">
          <p
            class="text-xs font-mono font-bold uppercase tracking-widest text-zinc-500"
          >
            QUICK_LINKS
          </p>
          <nav class="mt-6 flex flex-wrap justify-center gap-x-6 gap-y-3">
            {
              quickLinks.map(link => (
                <a
                  class="text-sm font-mono text-zinc-400 transition hover:text-accent-500 uppercase tracking-wider"
                  href={link.href}
                >
                  {link.label}
                </a>
              ))
            }
          </nav>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>
