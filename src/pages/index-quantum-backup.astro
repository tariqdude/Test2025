---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ModernCard from '../components/ui/ModernCard.astro';
import ModernButton from '../components/ui/ModernButton.astro';
import ModernGrid from '../components/ui/ModernGrid.astro';
import ModernAnimate from '../components/ui/ModernAnimate.astro';
import Icon from '../components/ui/Icon.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-gradient-to-br from-slate-900 via-blue-900 to-purple-900 min-h-screen relative overflow-x-hidden">
		<!-- Quantum Background Effects -->
		<div class="fixed inset-0 bg-gradient-mesh opacity-30 animate-mesh-flow"></div>
		<div class="fixed inset-0 bg-noise opacity-20"></div>
		<div class="fixed inset-0 bg-gradient-to-br from-neon-blue/10 via-neon-purple/5 to-neon-cyan/10 animate-cosmic-drift"></div>
		
		<!-- Floating Particles -->
		<div class="fixed inset-0 pointer-events-none">
			<div class="absolute top-1/4 left-1/4 w-2 h-2 bg-neon-blue rounded-full animate-particle-float opacity-60"></div>
			<div class="absolute top-3/4 right-1/4 w-1 h-1 bg-neon-purple rounded-full animate-particle-drift opacity-40"></div>
			<div class="absolute top-1/2 left-3/4 w-3 h-3 bg-neon-cyan rounded-full animate-particle-pulse opacity-50"></div>
			<div class="absolute top-1/3 right-1/3 w-1.5 h-1.5 bg-neon-pink rounded-full animate-particle-orbit opacity-30"></div>
		</div>
		
		<Header />
		<main class="relative z-10">
			<!-- Quantum Hero Section -->
			<section id="hero" class="relative min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 overflow-hidden">
				<div class="relative max-w-7xl mx-auto text-center">
					<UltraAnimate animation="consciousness-expand" trigger="immediate" intensity="extreme" duration={3000}>
						<h1 class="text-6xl md:text-8xl font-bold text-transparent bg-gradient-to-r from-neon-blue via-neon-purple to-neon-cyan bg-clip-text leading-tight mb-8">
							QUANTUM
							<br />
							<span class="text-5xl md:text-7xl bg-gradient-to-r from-neon-cyan via-neon-pink to-neon-blue bg-clip-text">
								TRANSFORMATION
							</span>
						</h1>
					</UltraAnimate>
					
					<UltraAnimate animation="holographic-shimmer" trigger="viewport" delay={800} intensity="strong">
						<p class="text-xl md:text-3xl text-gray-300 max-w-4xl mx-auto leading-relaxed mb-12 font-light">
							Transcend reality with our <span class="text-neon-blue font-semibold">quantum-enhanced</span> solutions.
							<br />
							Experience the <span class="text-neon-purple font-semibold">impossible</span> made possible.
						</p>
					</UltraAnimate>
					
					<UltraAnimate animation="dimensional-shift" trigger="viewport" delay={1200} intensity="reality-breaking">
						<div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
							<HyperButton 
								variant="quantum" 
								size="xl" 
								effect="dimensional" 
								energy="transcendent"
								shape="organic"
								interaction="quantum"
							>
								Enter The Matrix
							</HyperButton>
							<HyperButton 
								variant="holographic" 
								size="xl" 
								effect="particle" 
								energy="cosmic"
								shape="morphing"
								interaction="magnetic"
							>
								Explore Reality
							</HyperButton>
						</div>
					</UltraAnimate>
				</div>
			</section>
			
			<!-- Quantum Features Grid -->
			<section id="features" class="py-32 relative">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<UltraAnimate animation="neural-pulse" trigger="viewport" intensity="strong">
						<div class="text-center mb-20">
							<h2 class="text-5xl md:text-6xl font-bold text-transparent bg-gradient-to-r from-neon-cyan via-neon-blue to-neon-purple bg-clip-text mb-6">
								QUANTUM CAPABILITIES
							</h2>
							<p class="text-xl text-gray-400 max-w-4xl mx-auto">
								Experience the next dimension of technological excellence
							</p>
						</div>
					</UltraAnimate>
					
					<UltraGrid 
						variant="neural-matrix"
						cols="auto"
						gap="quantum"
						animated={true}
						energyLevel="cosmic"
						dimension="3d"
						morphology="crystalline"
					>
						<UltraAnimate animation="quantum-phase" trigger="viewport" delay={200}>
							<UltraCard 
								variant="quantum"
								size="lg"
								dimension="3d"
								interaction="magnetic"
								energy="supercharged"
								glowIntensity="high"
							>
								<div class="text-center space-y-4">
									<div class="w-16 h-16 bg-gradient-to-br from-neon-blue to-neon-cyan rounded-full mx-auto flex items-center justify-center mb-6">
										<Icon name="monitor" size={32} className="text-white" />
									</div>
									<h3 class="text-2xl font-bold text-white mb-4">Neural Computing</h3>
									<p class="text-gray-300 leading-relaxed">
										Harness the power of quantum neural networks for unprecedented computational capabilities.
									</p>
								</div>
							</UltraCard>
						</UltraAnimate>

						<UltraAnimate animation="holographic-shimmer" trigger="viewport" delay={400}>
							<UltraCard 
								variant="holographic"
								size="lg"
								dimension="3d"
								interaction="gravitational"
								energy="transcendent"
								glowIntensity="extreme"
							>
								<div class="text-center space-y-4">
									<div class="w-16 h-16 bg-gradient-to-br from-neon-purple to-neon-pink rounded-full mx-auto flex items-center justify-center mb-6">
										<Icon name="cloud" size={32} className="text-white" />
									</div>
									<h3 class="text-2xl font-bold text-white mb-4">Reality Mesh</h3>
									<p class="text-gray-300 leading-relaxed">
										Connect to our interdimensional cloud infrastructure spanning infinite realities.
									</p>
								</div>
							</UltraCard>
						</UltraAnimate>

						<UltraAnimate animation="plasma-wave" trigger="viewport" delay={600}>
							<UltraCard 
								variant="cosmic"
								size="lg"
								dimension="3d"
								interaction="quantum"
								energy="godmode"
								glowIntensity="reality-breaking"
							>
								<div class="text-center space-y-4">
									<div class="w-16 h-16 bg-gradient-to-br from-neon-cyan to-neon-green rounded-full mx-auto flex items-center justify-center mb-6">
										<Icon name="trending-up" size={32} className="text-white" />
									</div>
									<h3 class="text-2xl font-bold text-white mb-4">Consciousness AI</h3>
									<p class="text-gray-300 leading-relaxed">
										Advanced artificial consciousness that transcends traditional AI limitations.
									</p>
								</div>
							</UltraCard>
						</UltraAnimate>

						<UltraAnimate animation="crystalline-grow" trigger="viewport" delay={800}>
							<UltraCard 
								variant="crystalline"
								size="lg"
								dimension="3d"
								interaction="dimensional"
								energy="cosmic"
								glowIntensity="high"
							>
								<div class="text-center space-y-4">
									<div class="w-16 h-16 bg-gradient-to-br from-neon-orange to-neon-yellow rounded-full mx-auto flex items-center justify-center mb-6">
										<Icon name="settings" size={32} className="text-white" />
									</div>
									<h3 class="text-2xl font-bold text-white mb-4">Reality Engineering</h3>
									<p class="text-gray-300 leading-relaxed">
										Reshape the fabric of digital reality with our quantum transformation protocols.
									</p>
								</div>
							</UltraCard>
						</UltraAnimate>

						<UltraAnimate animation="void-emerge" trigger="viewport" delay={1000}>
							<UltraCard 
								variant="void"
								size="lg"
								dimension="3d"
								interaction="ripple"
								energy="transcendent"
								glowIntensity="extreme"
							>
								<div class="text-center space-y-4">
									<div class="w-16 h-16 bg-gradient-to-br from-neon-red to-neon-pink rounded-full mx-auto flex items-center justify-center mb-6">
										<Icon name="shield" size={32} className="text-white" />
									</div>
									<h3 class="text-2xl font-bold text-white mb-4">Void Protection</h3>
									<p class="text-gray-300 leading-relaxed">
										Ultimate security that exists between dimensions, protecting against impossible threats.
									</p>
								</div>
							</UltraCard>
						</UltraAnimate>

						<UltraAnimate animation="infinity-spiral" trigger="viewport" delay={1200}>
							<UltraCard 
								variant="ethereal"
								size="lg"
								dimension="3d"
								interaction="particle"
								energy="supercharged"
								glowIntensity="high"
							>
								<div class="text-center space-y-4">
									<div class="w-16 h-16 bg-gradient-to-br from-neon-indigo to-neon-purple rounded-full mx-auto flex items-center justify-center mb-6">
										<Icon name="file-text" size={32} className="text-white" />
									</div>
									<h3 class="text-2xl font-bold text-white mb-4">Infinite Wisdom</h3>
									<p class="text-gray-300 leading-relaxed">
										Tap into the collective knowledge of infinite universes through our quantum consulting matrix.
									</p>
								</div>
							</UltraCard>
						</UltraAnimate>
					</UltraGrid>
				</div>
			</section>

			<!-- Contact Portal -->
			<section id="contact" class="py-32 relative">
				<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
					<UltraAnimate animation="consciousness-expand" trigger="viewport" intensity="reality-breaking">
						<div class="text-center mb-16">
							<h2 class="text-5xl md:text-6xl font-bold text-transparent bg-gradient-to-r from-neon-pink via-neon-blue to-neon-cyan bg-clip-text mb-6">
								INITIATE CONTACT
							</h2>
							<p class="text-xl text-gray-400 max-w-3xl mx-auto">
								Ready to transcend the boundaries of reality? Open a portal to the quantum realm.
							</p>
						</div>
					</UltraAnimate>
					
					<UltraAnimate animation="dimensional-shift" trigger="viewport" delay={600}>
						<UltraCard 
							variant="matrix"
							size="xl"
							dimension="4d"
							interaction="quantum"
							energy="godmode"
							glowIntensity="reality-breaking"
						>
							<div class="grid lg:grid-cols-2 gap-12">
								<!-- Quantum Info -->
								<div class="space-y-8">
									<div class="flex items-start space-x-4">
										<div class="w-12 h-12 bg-gradient-conic from-neon-blue via-neon-purple to-neon-cyan rounded-full flex items-center justify-center flex-shrink-0 animate-spin-slow">
											<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
												<circle cx="12" cy="10" r="3"></circle>
											</svg>
										</div>
										<div>
											<h4 class="text-lg font-semibold text-neon-blue mb-1">Quantum Coordinates</h4>
											<p class="text-gray-300">Reality Node 42.3598° N<br>Dimension Portal 71.0588° W</p>
										</div>
									</div>

									<div class="flex items-start space-x-4">
										<div class="w-12 h-12 bg-gradient-conic from-neon-purple via-neon-pink to-neon-blue rounded-full flex items-center justify-center flex-shrink-0 animate-pulse">
											<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
											</svg>
										</div>
										<div>
											<h4 class="text-lg font-semibold text-neon-purple mb-1">Neural Frequency</h4>
											<p class="text-gray-300">+∞ (555) QUANTUM</p>
										</div>
									</div>

									<div class="flex items-start space-x-4">
										<div class="w-12 h-12 bg-gradient-conic from-neon-cyan via-neon-green to-neon-yellow rounded-full flex items-center justify-center flex-shrink-0 animate-glow">
											<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
												<polyline points="22,6 12,13 2,6"></polyline>
											</svg>
										</div>
										<div>
											<h4 class="text-lg font-semibold text-neon-cyan mb-1">Data Stream</h4>
											<p class="text-gray-300">quantum@reality.matrix</p>
										</div>
									</div>
								</div>

								<!-- Quantum Contact Form -->
								<div class="space-y-6">
									<form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-6">
										<div>
											<label for="name" class="block text-sm font-semibold text-neon-blue mb-2">Identity Matrix</label>
											<input type="text" id="name" name="name" required 
												class="w-full px-4 py-3 bg-black/50 border border-neon-blue/30 rounded-xl text-white placeholder-gray-500 focus:border-neon-blue focus:ring-2 focus:ring-neon-blue/30 transition-all duration-300" 
												placeholder="Enter your designation" />
										</div>
										<div>
											<label for="email" class="block text-sm font-semibold text-neon-purple mb-2">Quantum Address</label>
											<input type="email" id="email" name="email" required 
												class="w-full px-4 py-3 bg-black/50 border border-neon-purple/30 rounded-xl text-white placeholder-gray-500 focus:border-neon-purple focus:ring-2 focus:ring-neon-purple/30 transition-all duration-300" 
												placeholder="your@reality.dimension" />
										</div>
										<div>
											<label for="project" class="block text-sm font-semibold text-neon-cyan mb-2">Mission Parameters</label>
											<textarea id="project" name="project" rows="4" required 
												class="w-full px-4 py-3 bg-black/50 border border-neon-cyan/30 rounded-xl text-white placeholder-gray-500 focus:border-neon-cyan focus:ring-2 focus:ring-neon-cyan/30 transition-all duration-300 resize-none" 
												placeholder="Describe your quantum objectives..."></textarea>
										</div>
										<HyperButton 
											variant="plasma" 
											size="xl" 
											effect="ripple" 
											energy="godmode"
											shape="fluid"
											interaction="dimensional"
											className="w-full"
										>
											TRANSMIT TO QUANTUM REALM
										</HyperButton>
									</form>
								</div>
							</div>
						</UltraCard>
					</UltraAnimate>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
