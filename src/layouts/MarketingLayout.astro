---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingDemoButton from '../components/ui/FloatingDemoButton.astro';
import PWARegistration from '../components/PWARegistration.astro';

interface Props {
  title: string;
  description: string;
  mainClass?: string;
  bodyClass?: string;
  showDemoButton?: boolean;
}

const {
  title,
  description,
  mainClass = 'space-y-24 pb-24',
  bodyClass = '',
  showDemoButton = true,
} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class={`bg-slate-950 text-slate-100 antialiased ${bodyClass}`.trim()}>
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-[100] focus:rounded-lg focus:bg-indigo-600 focus:px-4 focus:py-2 focus:text-white focus:outline-none focus:ring-2 focus:ring-indigo-400"
    >
      Skip to main content
    </a>
    <Header />
    <main id="main-content" class={mainClass}>
      <slot />
    </main>
    <Footer />

    {
      showDemoButton && (
        <FloatingDemoButton variant="default" position="bottom-right" />
      )
    }

    <script is:inline>
      // Add loading indicator for internal navigation
      document.addEventListener('DOMContentLoaded', () => {
        const links = document.querySelectorAll('a[href^="/"], a[href^="./"]');
        links.forEach(link => {
          link.addEventListener('click', () => {
            // Don't show for same-page anchors
            if (link.getAttribute('href')?.startsWith('#')) return;
            // Don't show for external links
            if (link.target === '_blank') return;

            document.body.classList.add('navigating');
          });
        });
      });
    </script>
    <PWARegistration />
  </body>
</html>
