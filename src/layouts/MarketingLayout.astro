---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  mainClass?: string;
  bodyClass?: string;
}

const {
  title,
  description,
  mainClass = 'space-y-24 pb-24',
  bodyClass = '',
} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class={`bg-slate-950 text-slate-100 antialiased ${bodyClass}`.trim()}>
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-[100] focus:rounded-lg focus:bg-indigo-600 focus:px-4 focus:py-2 focus:text-white focus:outline-none focus:ring-2 focus:ring-indigo-400"
    >
      Skip to main content
    </a>
    <Header />
    <main id="main-content" class={mainClass}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
