---
/**
 * Floating Islands - 3D isometric floating platforms with depth
 */
---

<div class="islands-wrapper">
  <h2 class="islands-title">Floating 3D Islands</h2>
  <p class="islands-subtitle">Isometric platforms suspended in space</p>

  <div class="islands-scene">
    <!-- Island 1 - Large center -->
    <div class="island island-1">
      <div class="island-top"></div>
      <div class="island-side-front"></div>
      <div class="island-side-right"></div>
      <div class="island-decoration decoration-1"></div>
    </div>

    <!-- Island 2 - Medium left -->
    <div class="island island-2">
      <div class="island-top"></div>
      <div class="island-side-front"></div>
      <div class="island-side-right"></div>
      <div class="island-decoration decoration-2"></div>
    </div>

    <!-- Island 3 - Small right -->
    <div class="island island-3">
      <div class="island-top"></div>
      <div class="island-side-front"></div>
      <div class="island-side-right"></div>
      <div class="island-decoration decoration-3"></div>
    </div>

    <!-- Island 4 - Tall back -->
    <div class="island island-4">
      <div class="island-top"></div>
      <div class="island-side-front"></div>
      <div class="island-side-right"></div>
      <div class="island-decoration decoration-4"></div>
    </div>

    <!-- Connecting bridges -->
    <div class="bridge bridge-1"></div>
    <div class="bridge bridge-2"></div>
  </div>
</div>

<style>
  .islands-wrapper {
    padding: 8rem 2rem;
    background: linear-gradient(
      180deg,
      rgba(6, 182, 212, 0.05),
      transparent,
      rgba(14, 165, 233, 0.05)
    );
    min-height: 700px;
  }

  .islands-title {
    font-size: 4rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #06b6d4 0%, #0ea5e9 50%, #8b5cf6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
  }

  .islands-subtitle {
    text-align: center;
    color: rgba(203, 213, 225, 0.9);
    margin-bottom: 5rem;
    font-size: 1.25rem;
    font-weight: 300;
  }

  .islands-scene {
    position: relative;
    width: 100%;
    max-width: 900px;
    height: 600px;
    margin: 0 auto;
    transform: rotateX(60deg) rotateZ(-45deg);
    transform-style: preserve-3d;
  }

  .island {
    position: absolute;
    transform-style: preserve-3d;
    animation: islandFloat 6s ease-in-out infinite;
  }

  @keyframes islandFloat {
    0%,
    100% {
      transform: translateY(0) rotateZ(0deg);
    }
    50% {
      transform: translateY(-40px) rotateZ(2deg);
    }
  }

  .island-1 {
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 0s;
    --width: 200px;
    --height: 80px;
  }

  .island-2 {
    left: 20%;
    top: 40%;
    animation-delay: 1s;
    --width: 150px;
    --height: 60px;
  }

  .island-3 {
    right: 15%;
    top: 45%;
    animation-delay: 2s;
    --width: 120px;
    --height: 50px;
  }

  .island-4 {
    left: 45%;
    top: 20%;
    animation-delay: 1.5s;
    --width: 160px;
    --height: 100px;
  }

  .island-top {
    width: var(--width);
    height: var(--width);
    background: linear-gradient(
      135deg,
      rgba(6, 182, 212, 0.8),
      rgba(14, 165, 233, 0.6)
    );
    border: 2px solid rgba(6, 182, 212, 0.8);
    transform: translateZ(var(--height));
    position: relative;
    box-shadow:
      0 0 40px rgba(6, 182, 212, 0.5),
      inset 0 0 30px rgba(6, 182, 212, 0.3);
  }

  .island-side-front {
    width: var(--width);
    height: var(--height);
    background: linear-gradient(
      180deg,
      rgba(14, 165, 233, 0.7),
      rgba(3, 105, 161, 0.9)
    );
    border: 2px solid rgba(14, 165, 233, 0.6);
    transform-origin: bottom;
    transform: rotateX(-90deg);
    position: absolute;
    bottom: 0;
  }

  .island-side-right {
    width: var(--width);
    height: var(--height);
    background: linear-gradient(
      180deg,
      rgba(8, 145, 178, 0.7),
      rgba(7, 89, 133, 0.9)
    );
    border: 2px solid rgba(8, 145, 178, 0.6);
    transform-origin: right;
    transform: rotateY(90deg);
    position: absolute;
    right: 0;
  }

  .island-decoration {
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%) translateZ(var(--height));
    width: 30px;
    height: 40px;
    background: linear-gradient(
      180deg,
      rgba(139, 92, 246, 0.9),
      rgba(124, 58, 237, 0.7)
    );
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
    box-shadow: 0 0 20px rgba(139, 92, 246, 0.8);
    animation: decorationGlow 2s ease-in-out infinite;
  }

  @keyframes decorationGlow {
    0%,
    100% {
      box-shadow: 0 0 20px rgba(139, 92, 246, 0.8);
      filter: brightness(1);
    }
    50% {
      box-shadow: 0 0 40px rgba(139, 92, 246, 1);
      filter: brightness(1.5);
    }
  }

  .decoration-2 {
    width: 20px;
    height: 30px;
  }

  .decoration-3 {
    width: 15px;
    height: 25px;
  }

  .decoration-4 {
    width: 25px;
    height: 35px;
  }

  .bridge {
    position: absolute;
    height: 10px;
    background: linear-gradient(
      90deg,
      rgba(6, 182, 212, 0.6),
      rgba(139, 92, 246, 0.8),
      rgba(6, 182, 212, 0.6)
    );
    border: 1px solid rgba(6, 182, 212, 0.8);
    transform-style: preserve-3d;
    box-shadow: 0 0 20px rgba(6, 182, 212, 0.5);
  }

  .bridge-1 {
    width: 150px;
    left: 40%;
    top: 48%;
    transform: translateZ(40px) rotateZ(30deg);
  }

  .bridge-2 {
    width: 120px;
    right: 30%;
    top: 46%;
    transform: translateZ(50px) rotateZ(-20deg);
  }

  @media (max-width: 768px) {
    .islands-title {
      font-size: 2.5rem;
    }

    .islands-scene {
      transform: rotateX(60deg) rotateZ(-45deg) scale(0.7);
    }
  }
</style>
