---
/**
 * Infinity Tunnel - 3D recursive tunnel with perspective depth
 */
---

<div class="tunnel-wrapper">
  <h2 class="tunnel-title">Infinite 3D Tunnel</h2>
  <p class="tunnel-subtitle">Recursive depth with perspective illusion</p>

  <div class="tunnel-container">
    <div class="tunnel">
      {
        Array.from({ length: 50 }).map((_, i) => (
          <div
            class="tunnel-ring"
            style={`
            --index: ${i};
            --delay: ${i * 0.05}s;
          `}
          >
            <div class="ring-segment segment-1" />
            <div class="ring-segment segment-2" />
            <div class="ring-segment segment-3" />
            <div class="ring-segment segment-4" />
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .tunnel-wrapper {
    padding: 6rem 2rem;
    background: radial-gradient(
      ellipse at center,
      rgba(59, 130, 246, 0.15),
      transparent
    );
    min-height: 800px;
  }

  .tunnel-title {
    font-size: 4rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 50%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
  }

  .tunnel-subtitle {
    text-align: center;
    color: rgba(203, 213, 225, 0.9);
    margin-bottom: 5rem;
    font-size: 1.25rem;
    font-weight: 300;
  }

  .tunnel-container {
    perspective: 1000px;
    height: 600px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .tunnel {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    animation: tunnelRotate 20s linear infinite;
  }

  @keyframes tunnelRotate {
    0% {
      transform: rotateZ(0deg);
    }
    100% {
      transform: rotateZ(360deg);
    }
  }

  .tunnel-ring {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 400px;
    height: 400px;
    border: 3px solid rgba(59, 130, 246, 0.8);
    border-radius: 50%;
    transform-style: preserve-3d;
    transform: translate(-50%, -50%) translateZ(calc(var(--index) * -100px))
      scale(calc(1 - var(--index) * 0.02));
    animation: ringPulse 2s ease-in-out infinite;
    animation-delay: var(--delay);
    box-shadow:
      0 0 30px rgba(59, 130, 246, 0.5),
      inset 0 0 30px rgba(59, 130, 246, 0.3);
  }

  @keyframes ringPulse {
    0%,
    100% {
      border-color: rgba(59, 130, 246, 0.8);
      box-shadow:
        0 0 30px rgba(59, 130, 246, 0.5),
        inset 0 0 30px rgba(59, 130, 246, 0.3);
    }
    50% {
      border-color: rgba(139, 92, 246, 1);
      box-shadow:
        0 0 50px rgba(139, 92, 246, 0.8),
        inset 0 0 50px rgba(139, 92, 246, 0.5);
    }
  }

  .ring-segment {
    position: absolute;
    width: 20px;
    height: 20px;
    background: radial-gradient(
      circle,
      rgba(59, 130, 246, 1),
      rgba(59, 130, 246, 0.5)
    );
    border-radius: 50%;
    box-shadow: 0 0 20px rgba(59, 130, 246, 1);
  }

  .segment-1 {
    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .segment-2 {
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .segment-3 {
    left: 0;
    top: 50%;
    transform: translateY(-50%);
  }

  .segment-4 {
    right: 0;
    top: 50%;
    transform: translateY(-50%);
  }

  @media (max-width: 768px) {
    .tunnel-title {
      font-size: 2.5rem;
    }

    .tunnel-ring {
      width: 300px;
      height: 300px;
    }
  }
</style>
