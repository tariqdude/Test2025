---
/**
 * Testimonials Component
 * Displays customer testimonials with accessibility support
 * Supports cards, carousel, and masonry layouts
 */

export interface Testimonial {
  name: string;
  role: string;
  company: string;
  content: string;
  avatar?: string;
  rating?: number;
}

export interface Props {
  /** Array of testimonial data */
  testimonials: Testimonial[];
  /** Display variant */
  variant?: 'cards' | 'carousel' | 'masonry';
  /** Additional CSS classes */
  className?: string;
  /** Section title for accessibility */
  title?: string;
  /** Number of columns for cards variant */
  columns?: 2 | 3 | 4;
  /** Enable glass morphism effect */
  glass?: boolean;
  /** Show company logos */
  showCompanyLogo?: boolean;
}

const {
  testimonials,
  variant = 'cards',
  className = '',
  title = 'Customer Testimonials',
  columns = 3,
  glass = false,
  showCompanyLogo = false,
} = Astro.props;

const columnClasses = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-2 lg:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4',
};

const cardBaseClasses = glass
  ? 'backdrop-blur-xl bg-white/10 dark:bg-black/20 border border-white/20 dark:border-white/10 shadow-xl'
  : 'bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 shadow-sm';
---

<section
  class={`testimonials testimonials--${variant} ${className}`}
  aria-labelledby="testimonials-title"
>
  <h2 id="testimonials-title" class="sr-only">{title}</h2>

  {
    variant === 'cards' && (
      <div
        class={`grid grid-cols-1 ${columnClasses[columns]} gap-6`}
        role="list"
        aria-label={title}
      >
        {testimonials.map((testimonial, index) => (
          <article
            class={`${cardBaseClasses} rounded-xl p-6 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 group`}
            role="listitem"
            aria-labelledby={`testimonial-author-${index}`}
          >
            {testimonial.rating && (
              <div
                class="flex items-center mb-4 gap-0.5"
                role="img"
                aria-label={`Rating: ${testimonial.rating} out of 5 stars`}
              >
                {Array.from({ length: 5 }, (_, i) => (
                  <svg
                    class={`w-5 h-5 transition-colors ${
                      i < (testimonial.rating || 0)
                        ? 'text-yellow-400'
                        : 'text-gray-300 dark:text-gray-600'
                    }`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    aria-hidden="true"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
            )}

            <blockquote class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
              <span
                aria-hidden="true"
                class="text-2xl text-gray-300 dark:text-gray-600"
              >
                "
              </span>
              {testimonial.content}
              <span
                aria-hidden="true"
                class="text-2xl text-gray-300 dark:text-gray-600"
              >
                "
              </span>
            </blockquote>

            <footer class="flex items-center mt-auto pt-4 border-t border-gray-100 dark:border-gray-700">
              {testimonial.avatar ? (
                <img
                  alt={testimonial.name}
                  src={testimonial.avatar}
                  class="w-12 h-12 rounded-full mr-4 object-cover ring-2 ring-gray-100 dark:ring-gray-700"
                  width="48"
                  height="48"
                  loading="lazy"
                  decoding="async"
                />
              ) : (
                <div
                  class="w-12 h-12 bg-gradient-to-br from-primary-400 to-secondary-400 rounded-full flex items-center justify-center text-white font-bold mr-4 ring-2 ring-white/50"
                  aria-hidden="true"
                >
                  {testimonial.name.charAt(0)}
                </div>
              )}
              <div>
                <cite
                  id={`testimonial-author-${index}`}
                  class="font-semibold text-gray-900 dark:text-white not-italic block"
                >
                  {testimonial.name}
                </cite>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  {testimonial.role}
                  {showCompanyLogo ? null : (
                    <span class="text-gray-400 dark:text-gray-500"> at </span>
                  )}
                  {!showCompanyLogo && (
                    <span class="font-medium text-gray-600 dark:text-gray-300">
                      {testimonial.company}
                    </span>
                  )}
                </p>
              </div>
              {showCompanyLogo && (
                <div class="ml-auto opacity-50 group-hover:opacity-100 transition-opacity">
                  <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">
                    {testimonial.company}
                  </span>
                </div>
              )}
            </footer>
          </article>
        ))}
      </div>
    )
  }

  {
    variant === 'masonry' && (
      <div
        class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6"
        role="list"
        aria-label={title}
      >
        {testimonials.map((testimonial, index) => (
          <article
            class={`${cardBaseClasses} rounded-xl p-6 break-inside-avoid transition-all duration-300 hover:shadow-lg`}
            role="listitem"
            aria-labelledby={`testimonial-masonry-author-${index}`}
          >
            {testimonial.rating && (
              <div
                class="flex items-center mb-4 gap-0.5"
                role="img"
                aria-label={`Rating: ${testimonial.rating} out of 5 stars`}
              >
                {Array.from({ length: 5 }, (_, i) => (
                  <svg
                    class={`w-4 h-4 ${
                      i < (testimonial.rating || 0)
                        ? 'text-yellow-400'
                        : 'text-gray-300'
                    }`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    aria-hidden="true"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
            )}
            <blockquote class="text-gray-600 dark:text-gray-300 mb-4 leading-relaxed italic">
              "{testimonial.content}"
            </blockquote>
            <footer class="flex items-center">
              {testimonial.avatar ? (
                <img
                  alt={testimonial.name}
                  src={testimonial.avatar}
                  class="w-10 h-10 rounded-full mr-3 object-cover"
                  width="40"
                  height="40"
                  loading="lazy"
                  decoding="async"
                />
              ) : (
                <div
                  class="w-10 h-10 bg-gradient-to-br from-primary-400 to-secondary-400 rounded-full flex items-center justify-center text-white text-sm font-bold mr-3"
                  aria-hidden="true"
                >
                  {testimonial.name.charAt(0)}
                </div>
              )}
              <div>
                <cite
                  id={`testimonial-masonry-author-${index}`}
                  class="font-semibold text-gray-900 dark:text-white not-italic text-sm block"
                >
                  {testimonial.name}
                </cite>
                <p class="text-xs text-gray-500 dark:text-gray-400">
                  {testimonial.role} at {testimonial.company}
                </p>
              </div>
            </footer>
          </article>
        ))}
      </div>
    )
  }
</section>
