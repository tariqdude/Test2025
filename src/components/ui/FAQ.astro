---
export interface Props {
  items: Array<{
    title: string;
    content: string;
    icon?: string;
  }>;
  variant?: 'accordion' | 'tabs';
  className?: string;
  allowMultiple?: boolean;
  defaultOpen?: number;
  title?: string;
}

const {
  items,
  variant = 'accordion',
  className = '',
  allowMultiple = true,
  defaultOpen = -1,
  title = 'Frequently Asked Questions',
} = Astro.props;

const faqId = `faq-${Math.random().toString(36).slice(2, 9)}`;
---

<section
  class={`faq ${className}`}
  aria-labelledby={`${faqId}-title`}
  role="region"
>
  <h2 id={`${faqId}-title`} class="sr-only">{title}</h2>

  {
    variant === 'accordion' && (
      <div
        class="space-y-4 faq-container"
        data-allow-multiple={allowMultiple.toString()}
        role="list"
      >
        {items.map((item, index) => {
          const itemId = `${faqId}-item-${index}`;
          const isOpen = defaultOpen === index;
          return (
            <details
              class="group bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 transition-all duration-200 hover:shadow-md"
              open={isOpen}
              role="listitem"
            >
              <summary
                class="flex items-center justify-between p-6 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg select-none focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 list-none"
                id={`${itemId}-trigger`}
                aria-controls={`${itemId}-content`}
                aria-expanded={isOpen ? 'true' : 'false'}
              >
                <div class="flex items-center pr-4">
                  {item.icon && (
                    <div
                      class="text-primary-600 dark:text-primary-400 mr-3 flex-shrink-0"
                      aria-hidden="true"
                    >
                      <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <use href={`#${item.icon}`} />
                      </svg>
                    </div>
                  )}
                  <h3 class="text-lg font-medium text-gray-900 dark:text-white text-left">
                    {item.title}
                  </h3>
                </div>
                <svg
                  class="w-5 h-5 text-gray-500 dark:text-gray-400 transition-transform duration-200 group-open:rotate-180 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"
                  />
                </svg>
              </summary>
              <div
                class="px-6 pb-6 animate-fade-in"
                id={`${itemId}-content`}
                role="region"
                aria-labelledby={`${itemId}-trigger`}
              >
                <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                  {item.content}
                </p>
              </div>
            </details>
          );
        })}
      </div>
    )
  }
</section>

<script>
  // Handle single-open accordion behavior
  document.addEventListener('DOMContentLoaded', () => {
    const containers = document.querySelectorAll(
      '.faq-container[data-allow-multiple="false"]'
    );

    containers.forEach(container => {
      const details = container.querySelectorAll('details');

      details.forEach(detail => {
        detail.addEventListener('toggle', () => {
          if ((detail as HTMLDetailsElement).open) {
            details.forEach(otherDetail => {
              if (
                otherDetail !== detail &&
                (otherDetail as HTMLDetailsElement).open
              ) {
                (otherDetail as HTMLDetailsElement).open = false;
              }
            });
          }
        });
      });
    });

    // Update aria-expanded on toggle
    const allDetails = document.querySelectorAll('.faq details');
    allDetails.forEach(detail => {
      const summary = detail.querySelector('summary');

      detail.addEventListener('toggle', () => {
        if (summary) {
          summary.setAttribute(
            'aria-expanded',
            (detail as HTMLDetailsElement).open ? 'true' : 'false'
          );
        }
      });
    });
  });
</script>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }

  details[open] summary {
    border-bottom: 1px solid rgb(229 231 235);
  }

  .dark details[open] summary {
    border-bottom-color: rgb(55 65 81);
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.2s ease-out;
  }
</style>
