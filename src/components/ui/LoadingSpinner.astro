---
import { cn } from '../../utils/css';

export interface Props {
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  variant?: 'spinner' | 'dots' | 'bars' | 'pulse';
  color?: 'primary' | 'secondary' | 'white' | 'current';
  className?: string;
  label?: string;
}

const {
  size = 'md',
  variant = 'spinner',
  color = 'primary',
  className,
  label = 'Loading...',
} = Astro.props;

const sizeClasses = {
  xs: 'w-3 h-3',
  sm: 'w-4 h-4',
  md: 'w-6 h-6',
  lg: 'w-8 h-8',
  xl: 'w-12 h-12',
};

const colorClasses = {
  primary: 'text-blue-600 dark:text-blue-400',
  secondary: 'text-gray-600 dark:text-gray-400',
  white: 'text-white',
  current: 'text-current',
};
---

<div
  role="status"
  aria-label={label}
  class={cn('inline-flex items-center justify-center', className)}
>
  {
    variant === 'spinner' && (
      <svg
        class={cn('animate-spin', sizeClasses[size], colorClasses[color])}
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
      >
        <circle
          class="opacity-25"
          cx="12"
          cy="12"
          r="10"
          stroke="currentColor"
          stroke-width="4"
        />
        <path
          class="opacity-75"
          fill="currentColor"
          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
        />
      </svg>
    )
  }

  {
    variant === 'dots' && (
      <div class={cn('flex space-x-1', colorClasses[color])}>
        <div
          class={cn(
            'rounded-full bg-current animate-bounce',
            size === 'xs'
              ? 'w-1 h-1'
              : size === 'sm'
                ? 'w-1.5 h-1.5'
                : 'w-2 h-2'
          )}
          style="animation-delay: 0ms"
        />
        <div
          class={cn(
            'rounded-full bg-current animate-bounce',
            size === 'xs'
              ? 'w-1 h-1'
              : size === 'sm'
                ? 'w-1.5 h-1.5'
                : 'w-2 h-2'
          )}
          style="animation-delay: 150ms"
        />
        <div
          class={cn(
            'rounded-full bg-current animate-bounce',
            size === 'xs'
              ? 'w-1 h-1'
              : size === 'sm'
                ? 'w-1.5 h-1.5'
                : 'w-2 h-2'
          )}
          style="animation-delay: 300ms"
        />
      </div>
    )
  }

  {
    variant === 'bars' && (
      <div
        class={cn('flex space-x-0.5', sizeClasses[size], colorClasses[color])}
      >
        <div
          class="w-1 bg-current animate-loading-bar"
          style="animation-delay: 0ms"
        />
        <div
          class="w-1 bg-current animate-loading-bar"
          style="animation-delay: 100ms"
        />
        <div
          class="w-1 bg-current animate-loading-bar"
          style="animation-delay: 200ms"
        />
        <div
          class="w-1 bg-current animate-loading-bar"
          style="animation-delay: 300ms"
        />
      </div>
    )
  }

  {
    variant === 'pulse' && (
      <div
        class={cn(
          'rounded-full bg-current animate-pulse',
          sizeClasses[size],
          colorClasses[color]
        )}
      />
    )
  }

  <span class="sr-only">{label}</span>
</div>

<style>
  @keyframes loading-bar {
    0%,
    100% {
      height: 40%;
    }
    50% {
      height: 100%;
    }
  }

  .animate-loading-bar {
    animation: loading-bar 1s ease-in-out infinite;
  }
</style>
