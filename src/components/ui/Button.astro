---
import Icon from './Icon.astro';

interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'link';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  loading?: boolean;
  icon?: string;
  iconPosition?: 'left' | 'right';
  className?: string;
  fullWidth?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  disabled = false,
  loading = false,
  icon,
  iconPosition = 'left',
  className = '',
  fullWidth = false,
  ...rest
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-medium rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none';

const variants = {
  primary: 'bg-blue-900 text-white hover:bg-blue-800 focus:ring-blue-500',
  secondary: 'bg-amber-500 text-blue-900 hover:bg-amber-400 focus:ring-amber-500',
  outline: 'border-2 border-blue-900 text-blue-900 hover:bg-blue-50 focus:ring-blue-500',
  ghost: 'text-blue-900 hover:bg-blue-50 focus:ring-blue-500',
  link: 'text-blue-900 underline-offset-4 hover:underline focus:ring-blue-500'
};

const sizes = {
  sm: 'h-9 px-3 text-sm',
  md: 'h-10 px-4 py-2',
  lg: 'h-11 px-6 text-lg',
  xl: 'h-12 px-8 text-xl'
};

const iconSizes = {
  sm: 16,
  md: 18,
  lg: 20,
  xl: 22
};

const classes = [
  baseClasses,
  variants[variant],
  sizes[size],
  fullWidth ? 'w-full' : '',
  className
].filter(Boolean).join(' ');

const Component = href ? 'a' : 'button';
const linkProps = href ? { href } : { type, disabled };
---

<Component class={classes} {...linkProps} {...rest}>
  {icon && iconPosition === 'left' && (
    <Icon name={icon} size={iconSizes[size]} className="mr-2" />
  )}
  
  {loading && (
    <svg class="animate-spin -ml-1 mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
    </svg>
  )}
  
  <slot />
  
  {icon && iconPosition === 'right' && (
    <Icon name={icon} size={iconSizes[size]} className="ml-2" />
  )}
</Component>
