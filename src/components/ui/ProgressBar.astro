---
import { cn } from '../../utils/css';

export interface Props {
  value: number;
  max?: number;
  size?: 'sm' | 'md' | 'lg';
  variant?: 'default' | 'success' | 'warning' | 'danger' | 'info' | 'gradient';
  showLabel?: boolean;
  animated?: boolean;
  striped?: boolean;
  className?: string;
  label?: string;
}

const {
  value,
  max = 100,
  size = 'md',
  variant = 'default',
  showLabel = false,
  animated = false,
  striped = false,
  className,
  label,
} = Astro.props;

const percentage = Math.min(100, Math.max(0, (value / max) * 100));

const sizeClasses = {
  sm: 'h-1',
  md: 'h-2',
  lg: 'h-4',
};

const variantClasses = {
  default: 'bg-blue-600',
  success: 'bg-green-500',
  warning: 'bg-yellow-500',
  danger: 'bg-red-500',
  info: 'bg-cyan-500',
  gradient: 'bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500',
};

const trackClass = cn(
  'w-full bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden',
  sizeClasses[size],
  className
);

const fillClass = cn(
  'h-full rounded-full transition-all duration-500 ease-out',
  variantClasses[variant],
  striped && 'bg-striped',
  animated && 'animate-progress-stripe'
);
---

<div class="progress-wrapper">
  {
    (showLabel || label) && (
      <div class="flex justify-between mb-1 text-sm">
        {label && <span class="text-gray-700 dark:text-gray-300">{label}</span>}
        {showLabel && (
          <span class="text-gray-500 dark:text-gray-400">
            {Math.round(percentage)}%
          </span>
        )}
      </div>
    )
  }
  <div
    class={trackClass}
    role="progressbar"
    aria-valuenow={value}
    aria-valuemin={0}
    aria-valuemax={max}
    aria-label={label || `Progress: ${Math.round(percentage)}%`}
  >
    <div class={fillClass} style={`width: ${percentage}%`}></div>
  </div>
</div>

<style>
  .bg-striped {
    background-image: linear-gradient(
      45deg,
      rgba(255, 255, 255, 0.15) 25%,
      transparent 25%,
      transparent 50%,
      rgba(255, 255, 255, 0.15) 50%,
      rgba(255, 255, 255, 0.15) 75%,
      transparent 75%,
      transparent
    );
    background-size: 1rem 1rem;
  }

  @keyframes progress-stripe {
    0% {
      background-position: 1rem 0;
    }
    100% {
      background-position: 0 0;
    }
  }

  .animate-progress-stripe {
    animation: progress-stripe 1s linear infinite;
  }
</style>
