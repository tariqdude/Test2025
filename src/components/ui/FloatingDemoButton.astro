---
/**
 * Floating Demo Access Button
 * Provides quick access to the demo center from any page
 */

import { withBasePath } from '../../utils/helpers';

export interface Props {
  position?: 'bottom-right' | 'bottom-left' | 'top-right' | 'top-left';
  variant?: 'default' | 'minimal' | 'expanded';
  showOnScroll?: boolean;
}

const {
  position = 'bottom-right',
  variant = 'default',
  showOnScroll = true,
} = Astro.props;

const positionClasses = {
  'bottom-right': 'bottom-6 right-6',
  'bottom-left': 'bottom-6 left-6',
  'top-right': 'top-20 right-6',
  'top-left': 'top-20 left-6',
};
---

<div
  id="floating-demo-button"
  class={`fixed ${positionClasses[position]} z-40 ${showOnScroll ? 'translate-y-32 opacity-0' : ''} transition-all duration-500`}
>
  {
    variant === 'expanded' ? (
      <div class="flex flex-col gap-3">
        <a
          href={withBasePath('demo/')}
          class="group flex items-center gap-3 px-6 py-4 bg-zinc-900 border border-zinc-800 text-zinc-100 rounded-sm shadow-lg hover:border-accent-500 transition-all"
        >
          <span class="text-2xl">ðŸš€</span>
          <div class="flex flex-col">
            <span class="font-mono font-bold text-sm text-accent-500">
              TRY DEMO
            </span>
            <span class="font-mono text-xs opacity-70">INTERACTIVE_MODE</span>
          </div>
        </a>
        <a
          href={withBasePath('visual-showcase/')}
          class="flex items-center gap-3 px-6 py-3 bg-zinc-950/90 backdrop-blur-sm border border-zinc-800 text-zinc-400 rounded-sm hover:text-accent-500 hover:border-accent-500/50 transition-all"
        >
          <span class="text-xl">ðŸŽ¨</span>
          <span class="font-mono font-semibold text-sm">VISUAL_TOUR</span>
        </a>
      </div>
    ) : variant === 'minimal' ? (
      <a
        href={withBasePath('demo/')}
        class="flex items-center justify-center w-14 h-14 bg-zinc-900 border border-zinc-800 text-accent-500 rounded-sm shadow-lg hover:border-accent-500 hover:bg-zinc-800 transition-all"
        title="Try Interactive Demo"
        aria-label="Try Interactive Demo"
      >
        <span class="text-2xl">ðŸš€</span>
      </a>
    ) : (
      <a
        href={withBasePath('demo/')}
        class="group flex items-center gap-3 px-5 py-3 bg-zinc-900 border border-zinc-800 text-zinc-100 rounded-sm shadow-lg hover:border-accent-500 transition-all font-mono font-semibold"
      >
        <span class="text-xl text-accent-500">ðŸš€</span>
        <span>TRY_DEMO</span>
        <svg
          class="w-4 h-4 text-accent-500 group-hover:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"
          />
        </svg>
      </a>
    )
  }
</div>

<script define:vars={{ showOnScroll }}>
  if (showOnScroll) {
    const button = document.getElementById('floating-demo-button');
    let hasShown = false;

    const handleScroll = () => {
      if (!button) return;

      const scrollPosition = window.scrollY;
      const shouldShow = scrollPosition > 300;

      if (shouldShow && !hasShown) {
        button.classList.remove('translate-y-32', 'opacity-0');
        button.classList.add('translate-y-0', 'opacity-100');
        hasShown = true;
      }
    };

    window.addEventListener('scroll', handleScroll, { passive: true });

    // Check initial position
    handleScroll();
  }
</script>

<style>
  @keyframes pulse-glow {
    0%,
    100% {
      box-shadow: 0 0 20px rgba(99, 102, 241, 0.5);
    }
    50% {
      box-shadow: 0 0 30px rgba(99, 102, 241, 0.8);
    }
  }

  #floating-demo-button a {
    animation: pulse-glow 2s ease-in-out infinite;
  }

  #floating-demo-button a:hover {
    animation: none;
  }
</style>
