  tablet: `<rect x="4" y="2" width="16" height="20" rx="2" ry="2"></rect><line x1="12" y1="18" x2="12.01" y2="18"></line>`
};

const iconPath = icons[name] || icons.settings; // fallback to settings icon

// Apply stroke width dynamically based on variant
const effectiveStrokeWidth = variant === 'filled' ? 0 : strokeWidth;
const fill = variant === 'filled' ? color : 'none';
---

<svg 
  viewBox="0 0 24 24" 
  fill={fill}
  stroke={variant === 'filled' ? 'none' : color} 
  stroke-width={effectiveStrokeWidth}
  stroke-linecap="round" 
  stroke-linejoin="round"
  width={iconSize} 
  height={iconSize}
  class={svgClasses}
  aria-hidden="true"
  {...rest}
>
  <Fragment set:html={iconPath} />
</svg>
