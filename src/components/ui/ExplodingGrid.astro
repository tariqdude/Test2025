---
/**
 * Exploding Grid - 3D grid that explodes and reforms
 */
---

<div class="explode-wrapper">
  <h2 class="explode-title">Explosive 3D Grid</h2>
  <p class="explode-subtitle">Dynamic expansion and contraction</p>

  <div class="explode-container">
    <div class="explode-grid">
      {
        Array.from({ length: 100 }).map((_, i) => {
          const row = Math.floor(i / 10);
          const col = i % 10;
          return (
            <div
              class="explode-cube"
              style={`
              --row: ${row};
              --col: ${col};
              --delay: ${(row + col) * 0.05}s;
            `}
            >
              <div class="cube-face cube-front" />
              <div class="cube-face cube-back" />
              <div class="cube-face cube-right" />
              <div class="cube-face cube-left" />
              <div class="cube-face cube-top" />
              <div class="cube-face cube-bottom" />
            </div>
          );
        })
      }
    </div>
  </div>
</div>

<style>
  .explode-wrapper {
    padding: 8rem 2rem;
    background: radial-gradient(
      ellipse at center,
      rgba(236, 72, 153, 0.1),
      transparent
    );
    min-height: 800px;
  }

  .explode-title {
    font-size: 4rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #ec4899 0%, #f43f5e 50%, #8b5cf6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
  }

  .explode-subtitle {
    text-align: center;
    color: rgba(203, 213, 225, 0.9);
    margin-bottom: 5rem;
    font-size: 1.25rem;
    font-weight: 300;
  }

  .explode-container {
    perspective: 2500px;
    height: 700px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .explode-grid {
    position: relative;
    width: 600px;
    height: 600px;
    transform-style: preserve-3d;
    animation: gridRotate 30s linear infinite;
  }

  @keyframes gridRotate {
    0% {
      transform: rotateY(0deg) rotateX(20deg);
    }
    100% {
      transform: rotateY(360deg) rotateX(20deg);
    }
  }

  .explode-cube {
    position: absolute;
    width: 50px;
    height: 50px;
    left: calc(var(--col) * 60px);
    top: calc(var(--row) * 60px);
    transform-style: preserve-3d;
    animation:
      cubeExplode 6s ease-in-out infinite,
      cubeFloat 3s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  @keyframes cubeExplode {
    0%,
    100% {
      transform: translateX(0) translateY(0) translateZ(0) rotateX(0deg)
        rotateY(0deg);
    }
    25% {
      transform: translateX(calc((var(--col) - 4.5) * 80px))
        translateY(calc((var(--row) - 4.5) * 80px)) translateZ(200px)
        rotateX(180deg) rotateY(180deg);
    }
    50% {
      transform: translateX(calc((var(--col) - 4.5) * 120px))
        translateY(calc((var(--row) - 4.5) * 120px)) translateZ(400px)
        rotateX(360deg) rotateY(360deg);
    }
    75% {
      transform: translateX(calc((var(--col) - 4.5) * 80px))
        translateY(calc((var(--row) - 4.5) * 80px)) translateZ(200px)
        rotateX(540deg) rotateY(540deg);
    }
  }

  @keyframes cubeFloat {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .cube-face {
    position: absolute;
    width: 50px;
    height: 50px;
    border: 2px solid rgba(236, 72, 153, 0.6);
    background: radial-gradient(
      circle at 30% 30%,
      rgba(236, 72, 153, 0.8),
      rgba(244, 63, 94, 0.6)
    );
    box-shadow:
      inset 0 0 20px rgba(236, 72, 153, 0.3),
      0 0 30px rgba(236, 72, 153, 0.2);
  }

  .cube-front {
    transform: rotateY(0deg) translateZ(25px);
  }
  .cube-back {
    transform: rotateY(180deg) translateZ(25px);
  }
  .cube-right {
    transform: rotateY(90deg) translateZ(25px);
  }
  .cube-left {
    transform: rotateY(-90deg) translateZ(25px);
  }
  .cube-top {
    transform: rotateX(90deg) translateZ(25px);
  }
  .cube-bottom {
    transform: rotateX(-90deg) translateZ(25px);
  }

  @media (max-width: 768px) {
    .explode-title {
      font-size: 2.5rem;
    }

    .explode-grid {
      width: 400px;
      height: 400px;
      transform: scale(0.7);
    }
  }
</style>
