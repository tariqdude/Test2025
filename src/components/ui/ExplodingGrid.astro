---
/**
 * Exploding Grid - 3D grid that explodes and reforms
 */
---

<div class="explode-wrapper">
  <h2 class="explode-title">Explosive 3D Grid</h2>
  <p class="explode-subtitle">
    Dynamic expansion â€¢ Click cubes to trigger â€¢ Mouse to orbit
  </p>

  <div class="explode-controls">
    <button class="explode-btn active" data-pattern="wave">Wave Pattern</button>
    <button class="explode-btn" data-pattern="radial">Radial Burst</button>
    <button class="explode-btn" data-pattern="spiral">Spiral Explosion</button>
    <button class="explode-btn" data-pattern="chaos">Chaos Mode</button>
    <button class="explode-btn" data-action="trigger"
      >ðŸŽ† Trigger Explosion</button
    >
  </div>

  <div class="explode-stats">
    <div class="stat-box">
      <span class="stat-label">Cubes</span>
      <span class="stat-value">144</span>
    </div>
    <div class="stat-box">
      <span class="stat-label">Pattern</span>
      <span class="stat-value" data-pattern-name>Wave</span>
    </div>
  </div>

  <div class="explode-container" data-explode-scene>
    <div class="explode-grid" data-grid>
      {
        Array.from({ length: 144 }).map((_, i) => {
          const row = Math.floor(i / 12);
          const col = i % 12;
          const distance = Math.sqrt(
            Math.pow(col - 5.5, 2) + Math.pow(row - 5.5, 2)
          );
          return (
            <div
              class="explode-cube"
              data-cube
              data-clickable
              style={`
              --row: ${row};
              --col: ${col};
              --delay: ${(row + col) * 0.05}s;
              --distance: ${distance};
            `}
            >
              <div class="cube-face cube-front" />
              <div class="cube-face cube-back" />
              <div class="cube-face cube-right" />
              <div class="cube-face cube-left" />
              <div class="cube-face cube-top" />
              <div class="cube-face cube-bottom" />
              <div class="cube-glow" />
            </div>
          );
        })
      }
    </div>
    <div class="explosion-effect"></div>
  </div>
</div>

<style>
  .explode-wrapper {
    padding: 8rem 2rem;
    background: radial-gradient(
      ellipse at center,
      rgba(236, 72, 153, 0.1),
      transparent
    );
    min-height: 800px;
  }

  .explode-title {
    font-size: 4rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #ec4899 0%, #f43f5e 50%, #8b5cf6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
  }

  .explode-subtitle {
    text-align: center;
    color: rgba(203, 213, 225, 0.9);
    margin-bottom: 2rem;
    font-size: 1.25rem;
    font-weight: 300;
  }

  .explode-controls {
    display: flex;
    gap: 12px;
    margin: 0 auto 2rem;
    flex-wrap: wrap;
    justify-content: center;
    max-width: 900px;
  }

  .explode-btn {
    padding: 10px 20px;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(236, 72, 153, 0.3);
    border-radius: 8px;
    color: #ec4899;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .explode-btn:hover {
    background: rgba(236, 72, 153, 0.1);
    border-color: rgba(236, 72, 153, 0.6);
    box-shadow: 0 0 20px rgba(236, 72, 153, 0.3);
    transform: translateY(-2px);
  }

  .explode-btn.active {
    background: rgba(236, 72, 153, 0.2);
    border-color: #ec4899;
    box-shadow: 0 0 30px rgba(236, 72, 153, 0.5);
  }

  .explode-stats {
    display: flex;
    gap: 20px;
    margin: 0 auto 3rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .stat-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10px 20px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(236, 72, 153, 0.2);
    border-radius: 8px;
    backdrop-filter: blur(10px);
  }

  .stat-label {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 4px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .stat-value {
    font-size: 1.2rem;
    font-weight: 700;
    color: #ec4899;
  }

  .explode-container {
    perspective: 2500px;
    height: 750px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    cursor: grab;
  }

  .explode-container:active {
    cursor: grabbing;
  }

  .explode-grid {
    position: relative;
    width: 700px;
    height: 700px;
    transform-style: preserve-3d;
    animation: gridRotate 40s linear infinite;
    transition: transform 0.1s ease-out;
  }

  .explode-grid.exploding {
    animation-play-state: paused;
  }

  .explosion-effect {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle,
      rgba(236, 72, 153, 0.3),
      transparent 60%
    );
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .explode-container.exploding .explosion-effect {
    opacity: 1;
  }

  @keyframes gridRotate {
    0% {
      transform: rotateY(0deg) rotateX(20deg);
    }
    100% {
      transform: rotateY(360deg) rotateX(20deg);
    }
  }

  .explode-cube {
    position: absolute;
    width: 50px;
    height: 50px;
    left: calc(var(--col) * 58px);
    top: calc(var(--row) * 58px);
    transform-style: preserve-3d;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .explode-cube:hover {
    transform: translateZ(30px) scale(1.1);
  }

  .explode-cube.triggered {
    animation: cubeBlast 1s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
  }

  @keyframes cubeBlast {
    0% {
      transform: translateX(0) translateY(0) translateZ(0) rotateX(0deg)
        rotateY(0deg) scale(1);
      opacity: 1;
    }
    100% {
      transform: translateX(calc((var(--col) - 5.5) * 200px))
        translateY(calc((var(--row) - 5.5) * 200px)) translateZ(600px)
        rotateX(720deg) rotateY(720deg) scale(0.5);
      opacity: 0;
    }
  }

  [data-pattern='wave'] .explode-cube {
    animation: cubeWave 8s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  [data-pattern='radial'] .explode-cube {
    animation: cubeRadial 6s ease-in-out infinite;
    animation-delay: calc(var(--distance) * 0.1s);
  }

  [data-pattern='spiral'] .explode-cube {
    animation: cubeSpiral 7s ease-in-out infinite;
    animation-delay: calc((var(--row) + var(--col)) * 0.08s);
  }

  [data-pattern='chaos'] .explode-cube {
    animation: cubeChaos 5s ease-in-out infinite;
    animation-delay: calc((var(--row) * var(--col)) * 0.02s);
  }

  @keyframes cubeWave {
    0%,
    100% {
      transform: translateZ(0) rotateX(0deg) rotateY(0deg);
    }
    25% {
      transform: translateZ(150px) rotateX(180deg) rotateY(90deg);
    }
    50% {
      transform: translateZ(300px) rotateX(360deg) rotateY(180deg);
    }
    75% {
      transform: translateZ(150px) rotateX(540deg) rotateY(270deg);
    }
  }

  @keyframes cubeRadial {
    0%,
    100% {
      transform: translateX(0) translateY(0) translateZ(0);
    }
    50% {
      transform: translateX(calc((var(--col) - 5.5) * 60px))
        translateY(calc((var(--row) - 5.5) * 60px)) translateZ(250px)
        rotateX(360deg) rotateY(360deg);
    }
  }

  @keyframes cubeSpiral {
    0%,
    100% {
      transform: translateZ(0) rotateZ(0deg);
    }
    50% {
      transform: translateX(calc((var(--col) - 5.5) * 40px))
        translateY(calc((var(--row) - 5.5) * 40px)) translateZ(200px)
        rotateZ(360deg) rotateX(180deg);
    }
  }

  @keyframes cubeChaos {
    0%,
    100% {
      transform: translateX(0) translateY(0) translateZ(0) rotateX(0deg)
        rotateY(0deg) rotateZ(0deg);
    }
    33% {
      transform: translateX(calc((var(--col) - 5.5) * 80px * sin(var(--row))))
        translateY(calc((var(--row) - 5.5) * 80px * cos(var(--col))))
        translateZ(200px) rotateX(360deg) rotateY(180deg) rotateZ(90deg);
    }
    66% {
      transform: translateX(calc((var(--row) - 5.5) * 60px))
        translateY(calc((var(--col) - 5.5) * 60px)) translateZ(100px)
        rotateX(180deg) rotateY(360deg) rotateZ(270deg);
    }
  }

  .cube-glow {
    position: absolute;
    inset: -5px;
    background: radial-gradient(
      circle,
      rgba(236, 72, 153, 0.4),
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .explode-cube:hover .cube-glow {
    opacity: 1;
  }

  .cube-face {
    position: absolute;
    width: 50px;
    height: 50px;
    border: 2px solid rgba(236, 72, 153, 0.6);
    background: radial-gradient(
      circle at 30% 30%,
      rgba(236, 72, 153, 0.8),
      rgba(244, 63, 94, 0.6)
    );
    box-shadow:
      inset 0 0 20px rgba(236, 72, 153, 0.3),
      0 0 30px rgba(236, 72, 153, 0.2);
  }

  .cube-front {
    transform: rotateY(0deg) translateZ(25px);
  }
  .cube-back {
    transform: rotateY(180deg) translateZ(25px);
  }
  .cube-right {
    transform: rotateY(90deg) translateZ(25px);
  }
  .cube-left {
    transform: rotateY(-90deg) translateZ(25px);
  }
  .cube-top {
    transform: rotateX(90deg) translateZ(25px);
  }
  .cube-bottom {
    transform: rotateX(-90deg) translateZ(25px);
  }

  @media (max-width: 768px) {
    .explode-title {
      font-size: 2.5rem;
    }

    .explode-grid {
      width: 500px;
      height: 500px;
      transform: scale(0.7);
    }

    .explode-controls {
      gap: 8px;
    }

    .explode-btn {
      padding: 8px 16px;
      font-size: 0.9rem;
    }
  }
</style>

<script>
  const scene = document.querySelector(
    '[data-explode-scene]'
  ) as HTMLElement | null;
  const grid = document.querySelector('[data-grid]') as HTMLElement | null;
  const cubes = document.querySelectorAll(
    '[data-cube]'
  ) as NodeListOf<HTMLElement>;
  const patternButtons = document.querySelectorAll(
    '[data-pattern]'
  ) as NodeListOf<HTMLElement>;
  const triggerButton = document.querySelector(
    '[data-action="trigger"]'
  ) as HTMLElement | null;
  const patternName = document.querySelector(
    '[data-pattern-name]'
  ) as HTMLElement | null;

  if (scene && grid && cubes) {
    let isDragging = false;
    let startX = 0;
    let startY = 0;
    let currentRotationX = 20;
    let currentRotationY = 0;

    // Pattern control
    patternButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        patternButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        const pattern = btn.dataset.pattern;
        if (pattern && grid) {
          grid.dataset.pattern = pattern;
          if (patternName) {
            patternName.textContent =
              pattern.charAt(0).toUpperCase() + pattern.slice(1);
          }
        }
      });
    });

    // Trigger explosion
    if (triggerButton) {
      triggerButton.addEventListener('click', () => {
        scene.classList.add('exploding');
        grid.classList.add('exploding');

        cubes.forEach(cube => {
          cube.classList.add('triggered');
        });

        setTimeout(() => {
          scene.classList.remove('exploding');
          grid.classList.remove('exploding');
          cubes.forEach(cube => {
            cube.classList.remove('triggered');
          });
        }, 1200);
      });
    }

    // Click individual cubes
    cubes.forEach(cube => {
      cube.addEventListener('click', e => {
        e.stopPropagation();
        cube.classList.add('triggered');

        setTimeout(() => {
          cube.classList.remove('triggered');
        }, 1000);
      });
    });

    // Drag to rotate
    scene.addEventListener('mousedown', (e: MouseEvent) => {
      if (!(e.target as HTMLElement).closest('[data-cube]')) {
        isDragging = true;
        startX = e.clientX;
        startY = e.clientY;
      }
    });

    document.addEventListener('mousemove', (e: MouseEvent) => {
      if (isDragging) {
        const deltaX = e.clientX - startX;
        const deltaY = e.clientY - startY;

        currentRotationY += deltaX * 0.5;
        currentRotationX -= deltaY * 0.5;

        currentRotationX = Math.max(-90, Math.min(90, currentRotationX));

        if (grid) {
          grid.style.transform = `rotateX(${currentRotationX}deg) rotateY(${currentRotationY}deg)`;
        }

        startX = e.clientX;
        startY = e.clientY;
      }
    });

    document.addEventListener('mouseup', () => {
      isDragging = false;
    });
  }
</script>
