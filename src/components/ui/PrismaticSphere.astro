---
/**
 * Prismatic Sphere - Multi-faceted 3D sphere with light refraction
 */
---

<div class="sphere-wrapper">
  <h2 class="sphere-title">Prismatic Sphere</h2>
  <p class="sphere-subtitle">Multi-faceted geometry with light refraction</p>

  <div class="sphere-container">
    <div class="sphere">
      {
        Array.from({ length: 60 }).map((_, i) => {
          const latAngle = (i / 60) * 180;
          const lonAngle = (i * 137.5) % 360; // Golden angle for even distribution
          return (
            <div
              class="sphere-facet"
              style={`
              --lat: ${latAngle}deg;
              --lon: ${lonAngle}deg;
              --delay: ${i * 0.03}s;
              --hue: ${(i / 60) * 360};
            `}
            />
          );
        })
      }

      {/* Inner core */}
      <div class="sphere-core"></div>
    </div>

    {/* Light rays */}
    <div class="light-rays">
      {
        Array.from({ length: 12 }).map((_, i) => (
          <div
            class="light-ray"
            style={`--ray-angle: ${i * 30}deg; --ray-delay: ${i * 0.1}s;`}
          />
        ))
      }
    </div>
  </div>
</div>

<style>
  .sphere-wrapper {
    padding: 8rem 2rem;
    background: radial-gradient(
      ellipse at center,
      rgba(168, 85, 247, 0.15),
      transparent
    );
    min-height: 800px;
    position: relative;
    overflow: hidden;
  }

  .sphere-title {
    font-size: 4rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #a855f7 0%, #ec4899 50%, #f43f5e 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
  }

  .sphere-subtitle {
    text-align: center;
    color: rgba(203, 213, 225, 0.9);
    margin-bottom: 5rem;
    font-size: 1.25rem;
    font-weight: 300;
  }

  .sphere-container {
    perspective: 2000px;
    height: 700px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .sphere {
    position: relative;
    width: 400px;
    height: 400px;
    transform-style: preserve-3d;
    animation: sphereRotate 25s linear infinite;
  }

  @keyframes sphereRotate {
    0% {
      transform: rotateX(20deg) rotateY(0deg);
    }
    100% {
      transform: rotateX(20deg) rotateY(360deg);
    }
  }

  .sphere-facet {
    position: absolute;
    width: 80px;
    height: 80px;
    left: 50%;
    top: 50%;
    transform-origin: center;
    transform: translateX(-50%) translateY(-50%) rotateY(var(--lon))
      rotateX(var(--lat)) translateZ(200px);
    background: linear-gradient(
      135deg,
      hsla(var(--hue), 80%, 60%, 0.6),
      hsla(calc(var(--hue) + 60), 70%, 50%, 0.4)
    );
    border: 1px solid hsla(var(--hue), 80%, 70%, 0.8);
    backdrop-filter: blur(10px);
    clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
    box-shadow:
      0 0 30px hsla(var(--hue), 80%, 60%, 0.6),
      inset 0 0 20px hsla(var(--hue), 80%, 80%, 0.3);
    animation: facetGlow 3s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  @keyframes facetGlow {
    0%,
    100% {
      box-shadow:
        0 0 30px hsla(var(--hue), 80%, 60%, 0.6),
        inset 0 0 20px hsla(var(--hue), 80%, 80%, 0.3);
      filter: brightness(1);
    }
    50% {
      box-shadow:
        0 0 50px hsla(var(--hue), 80%, 60%, 1),
        inset 0 0 40px hsla(var(--hue), 80%, 80%, 0.6);
      filter: brightness(1.5);
    }
  }

  .sphere-core {
    position: absolute;
    width: 150px;
    height: 150px;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    border-radius: 50%;
    background: radial-gradient(
      circle at 30% 30%,
      rgba(255, 255, 255, 0.9),
      rgba(168, 85, 247, 0.8),
      rgba(236, 72, 153, 0.6)
    );
    box-shadow:
      0 0 80px rgba(168, 85, 247, 1),
      0 0 120px rgba(236, 72, 153, 0.8),
      inset 0 0 60px rgba(255, 255, 255, 0.5);
    animation: coreBreathe 4s ease-in-out infinite;
  }

  @keyframes coreBreathe {
    0%,
    100% {
      transform: translate(-50%, -50%) scale(1);
      box-shadow:
        0 0 80px rgba(168, 85, 247, 1),
        0 0 120px rgba(236, 72, 153, 0.8),
        inset 0 0 60px rgba(255, 255, 255, 0.5);
    }
    50% {
      transform: translate(-50%, -50%) scale(1.15);
      box-shadow:
        0 0 120px rgba(168, 85, 247, 1),
        0 0 180px rgba(236, 72, 153, 1),
        inset 0 0 80px rgba(255, 255, 255, 0.8);
    }
  }

  .light-rays {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .light-ray {
    position: absolute;
    width: 4px;
    height: 100%;
    left: 50%;
    top: 0;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(168, 85, 247, 0.6) 50%,
      transparent
    );
    transform-origin: 50% 50%;
    transform: translateX(-50%) rotate(var(--ray-angle));
    animation: rayPulse 3s ease-in-out infinite;
    animation-delay: var(--ray-delay);
    filter: blur(2px);
  }

  @keyframes rayPulse {
    0%,
    100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.8;
    }
  }

  @media (max-width: 768px) {
    .sphere-title {
      font-size: 2.5rem;
    }

    .sphere {
      width: 300px;
      height: 300px;
    }

    .sphere-facet {
      width: 60px;
      height: 60px;
      transform: translateX(-50%) translateY(-50%) rotateY(var(--lon))
        rotateX(var(--lat)) translateZ(150px);
    }

    .sphere-core {
      width: 100px;
      height: 100px;
    }
  }
</style>
