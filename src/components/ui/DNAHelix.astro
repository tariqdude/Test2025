---
/**
 * DNA Helix - 3D rotating double helix structure
 */
---

<div class="dna-wrapper">
  <h2 class="dna-title">3D DNA Helix Structure</h2>
  <p class="dna-subtitle">Rotating double helix with animated particles</p>

  <div class="dna-container">
    <div class="dna-helix">
      {
        Array.from({ length: 40 }).map((_, i) => {
          const angle = (i / 40) * 360 * 2;
          const y = i * 20 - 400;
          return (
            <div>
              <div
                class="dna-sphere strand-1"
                style={`
                --angle: ${angle}deg;
                --y: ${y}px;
                --delay: ${i * 0.05}s;
              `}
              />
              <div
                class="dna-sphere strand-2"
                style={`
                --angle: ${angle + 180}deg;
                --y: ${y}px;
                --delay: ${i * 0.05}s;
              `}
              />
              <div
                class="dna-bridge"
                style={`
                --angle: ${angle}deg;
                --y: ${y}px;
                --delay: ${i * 0.05}s;
              `}
              />
            </div>
          );
        })
      }
    </div>
  </div>
</div>

<style>
  .dna-wrapper {
    padding: 8rem 2rem;
    background: radial-gradient(
      ellipse at center,
      rgba(168, 85, 247, 0.15),
      transparent 70%
    );
    overflow: hidden;
    min-height: 900px;
    position: relative;
  }

  .dna-wrapper::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(
        circle at 20% 50%,
        rgba(236, 72, 153, 0.15),
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 50%,
        rgba(168, 85, 247, 0.15),
        transparent 50%
      );
    pointer-events: none;
  }

  .dna-title {
    font-size: 4rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #ec4899 0%, #a855f7 50%, #f472b6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
    position: relative;
    z-index: 10;
    filter: drop-shadow(0 0 40px rgba(236, 72, 153, 0.4));
  }

  .dna-subtitle {
    text-align: center;
    color: rgba(203, 213, 225, 0.9);
    margin-bottom: 5rem;
    font-size: 1.25rem;
    font-weight: 300;
    position: relative;
    z-index: 10;
  }

  .dna-container {
    perspective: 2500px;
    height: 850px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 10;
    filter: drop-shadow(0 0 60px rgba(236, 72, 153, 0.3));
  }

  .dna-helix {
    position: relative;
    width: 450px;
    height: 850px;
    transform-style: preserve-3d;
    animation: rotateDNA 24s linear infinite;
  }

  .dna-helix:hover {
    animation-play-state: paused;
  }

  @keyframes rotateDNA {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(360deg);
    }
  }

  .dna-sphere {
    position: absolute;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    transform-style: preserve-3d;
    animation: pulseGlow 2s ease-in-out infinite;
    animation-delay: var(--delay);
    box-shadow:
      0 0 40px currentColor,
      0 0 60px currentColor;
    border: 2px solid currentColor;
  }

  .strand-1 {
    background: radial-gradient(circle, #c084fc, #a855f7, #7c3aed);
    color: #a855f7;
    transform: translateY(var(--y)) rotateY(var(--angle)) translateX(140px);
  }

  .strand-2 {
    background: radial-gradient(circle, #f9a8d4, #ec4899, #db2777);
    color: #ec4899;
    transform: translateY(var(--y)) rotateY(var(--angle)) translateX(120px);
  }

  @keyframes pulseGlow {
    0%,
    100% {
      transform: translateY(var(--y)) rotateY(var(--angle)) translateX(120px)
        scale(1);
      box-shadow: 0 0 30px currentColor;
    }
    50% {
      transform: translateY(var(--y)) rotateY(var(--angle)) translateX(120px)
        scale(1.3);
      box-shadow: 0 0 50px currentColor;
    }
  }

  .dna-bridge {
    position: absolute;
    width: 240px;
    height: 3px;
    background: linear-gradient(
      90deg,
      rgba(168, 85, 247, 0.6),
      rgba(236, 72, 153, 0.8),
      rgba(168, 85, 247, 0.6)
    );
    transform-origin: center;
    transform: translateY(var(--y)) rotateY(var(--angle)) translateX(0px)
      translateZ(0);
    animation: bridgePulse 2s ease-in-out infinite;
    animation-delay: var(--delay);
    box-shadow: 0 0 20px rgba(236, 72, 153, 0.6);
  }

  @keyframes bridgePulse {
    0%,
    100% {
      opacity: 0.6;
      transform: translateY(var(--y)) rotateY(var(--angle)) translateX(0px)
        translateZ(0) scaleX(1);
    }
    50% {
      opacity: 1;
      transform: translateY(var(--y)) rotateY(var(--angle)) translateX(0px)
        translateZ(0) scaleX(1.05);
    }
  }

  @media (max-width: 768px) {
    .dna-title {
      font-size: 2rem;
    }

    .dna-container {
      height: 600px;
    }

    .dna-helix {
      width: 300px;
      height: 600px;
      transform: scale(0.8);
    }
  }
</style>
