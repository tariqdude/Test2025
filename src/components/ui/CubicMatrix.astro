---
/**
 * Cubic Matrix - 3D Grid of animated cubes with wave effects
 * Enhanced with multiple wave patterns and color cycling
 */
---

<div class="cubic-matrix-wrapper">
  <h2 class="matrix-title">3D Cubic Matrix</h2>
  <p class="matrix-subtitle">
    Interactive wave patterns • Click cubes to freeze • Hover for highlight
  </p>

  <div class="matrix-controls">
    <button class="matrix-btn active" data-pattern="wave">Wave</button>
    <button class="matrix-btn" data-pattern="ripple">Ripple</button>
    <button class="matrix-btn" data-pattern="spiral">Spiral</button>
    <button class="matrix-btn" data-pattern="random">Random</button>
    <button class="matrix-btn" data-pattern="rainbow">Rainbow</button>
  </div>

  <div class="cubic-matrix" data-matrix-grid>
    {
      Array.from({ length: 100 }).map((_, i) => {
        const row = Math.floor(i / 10);
        const col = i % 10;
        const distance = Math.sqrt(
          Math.pow(col - 4.5, 2) + Math.pow(row - 4.5, 2)
        );
        return (
          <div
            class="matrix-cube"
            data-cube
            data-row={row}
            data-col={col}
            style={`
            --delay: ${(row + col) * 0.08}s;
            --x: ${col};
            --y: ${row};
            --distance: ${distance};
          `}
          >
            <div class="cube-3d">
              <div class="cube-face front" />
              <div class="cube-face back" />
              <div class="cube-face right" />
              <div class="cube-face left" />
              <div class="cube-face top" />
              <div class="cube-face bottom" />
            </div>
            <div class="cube-glow" />
          </div>
        );
      })
    }
  </div>
</div>

<style>
  .cubic-matrix-wrapper {
    padding: 6rem 2rem;
    background: radial-gradient(
      ellipse at center,
      rgba(99, 102, 241, 0.1),
      transparent 70%
    );
    min-height: 700px;
    position: relative;
  }

  .cubic-matrix-wrapper::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(
      circle,
      rgba(99, 102, 241, 0.2),
      transparent 70%
    );
    pointer-events: none;
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 0.3;
      transform: translate(-50%, -50%) scale(1);
    }
    50% {
      opacity: 0.6;
      transform: translate(-50%, -50%) scale(1.1);
    }
  }

  .matrix-title {
    font-size: 4rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #60a5fa 0%, #a78bfa 50%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
    position: relative;
    z-index: 10;
  }

  .matrix-subtitle {
    text-align: center;
    color: rgba(203, 213, 225, 0.9);
    margin-bottom: 2rem;
    font-size: 1.25rem;
    font-weight: 300;
    position: relative;
    z-index: 10;
  }

  .matrix-controls {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    z-index: 10;
    position: relative;
  }

  .matrix-btn {
    padding: 0.75rem 1.5rem;
    background: rgba(99, 102, 241, 0.1);
    border: 2px solid rgba(99, 102, 241, 0.3);
    border-radius: 9999px;
    color: rgba(203, 213, 225, 0.9);
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .matrix-btn:hover {
    background: rgba(99, 102, 241, 0.2);
    border-color: rgba(99, 102, 241, 0.6);
    transform: translateY(-2px);
    box-shadow: 0 0 20px rgba(99, 102, 241, 0.4);
  }

  .matrix-btn.active {
    background: rgba(99, 102, 241, 0.3);
    border-color: rgba(99, 102, 241, 0.8);
    color: #fff;
    box-shadow: 0 0 30px rgba(99, 102, 241, 0.6);
  }

  .cubic-matrix {
    perspective: 2500px;
    display: grid;
    grid-template-columns: repeat(10, 60px);
    grid-template-rows: repeat(10, 60px);
    gap: 15px;
    justify-content: center;
    align-items: center;
    transform-style: preserve-3d;
    margin: 0 auto;
    max-width: fit-content;
    position: relative;
    z-index: 10;
    filter: drop-shadow(0 0 40px rgba(99, 102, 241, 0.3));
  }

  .matrix-cube {
    width: 60px;
    height: 60px;
    transform-style: preserve-3d;
    animation: cubeWave 3s ease-in-out infinite;
    animation-delay: var(--delay);
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
  }

  .matrix-cube:hover {
    transform: translateZ(100px) scale(1.2) rotateX(20deg) rotateY(20deg);
    animation-play-state: paused;
  }

  .matrix-cube:hover .cube-glow {
    opacity: 1;
    transform: scale(1.5);
  }

  .matrix-cube.frozen {
    animation-play-state: paused;
  }

  .matrix-cube.frozen .cube-3d {
    background: rgba(255, 215, 0, 0.2);
  }

  .cube-glow {
    position: absolute;
    inset: -15px;
    background: radial-gradient(
      circle,
      rgba(99, 102, 241, 0.4),
      transparent 70%
    );
    border-radius: 50%;
    opacity: 0;
    transition: all 0.3s ease;
    pointer-events: none;
    filter: blur(10px);
  }

  .cube-3d {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    animation: spinCube 10s linear infinite;
    animation-delay: var(--delay);
  }

  @keyframes cubeWave {
    0%,
    100% {
      transform: translateZ(0) scale(1);
    }
    50% {
      transform: translateZ(100px) scale(1.2);
    }
  }

  @keyframes spinCube {
    0% {
      transform: rotateX(0deg) rotateY(0deg);
    }
    100% {
      transform: rotateX(360deg) rotateY(360deg);
    }
  }

  .cube-face {
    position: absolute;
    width: 60px;
    height: 60px;
    border: 2px solid rgba(168, 85, 247, 0.6);
    opacity: 0.95;
    box-shadow: inset 0 0 20px rgba(99, 102, 241, 0.2);
    transition: all 0.3s ease;
  }

  .front {
    background: linear-gradient(
      135deg,
      rgba(99, 102, 241, 0.4),
      rgba(139, 92, 246, 0.3)
    );
    transform: translateZ(30px);
  }

  .back {
    background: linear-gradient(
      135deg,
      rgba(79, 70, 229, 0.4),
      rgba(109, 40, 217, 0.3)
    );
    transform: rotateY(180deg) translateZ(35px);
  }

  .right {
    background: linear-gradient(
      135deg,
      rgba(139, 92, 246, 0.4),
      rgba(168, 85, 247, 0.3)
    );
    transform: rotateY(90deg) translateZ(35px);
  }

  .left {
    background: linear-gradient(
      135deg,
      rgba(124, 58, 237, 0.4),
      rgba(147, 51, 234, 0.3)
    );
    transform: rotateY(-90deg) translateZ(35px);
  }

  .top {
    background: linear-gradient(
      135deg,
      rgba(168, 85, 247, 0.5),
      rgba(192, 132, 252, 0.4)
    );
    transform: rotateX(90deg) translateZ(35px);
  }

  .bottom {
    background: linear-gradient(
      135deg,
      rgba(109, 40, 217, 0.4),
      rgba(124, 58, 237, 0.3)
    );
    transform: rotateX(-90deg) translateZ(35px);
  }

  @media (max-width: 768px) {
    .cubic-matrix {
      grid-template-columns: repeat(6, 50px);
      grid-template-rows: repeat(6, 50px);
      gap: 10px;
    }

    .matrix-cube,
    .cube-face {
      width: 50px;
      height: 50px;
    }

    .matrix-title {
      font-size: 2rem;
    }

    .matrix-controls {
      gap: 0.5rem;
    }

    .matrix-btn {
      padding: 0.5rem 1rem;
      font-size: 0.8rem;
    }
  }
</style>

<script>
  const matrixGrid = document.querySelector(
    '[data-matrix-grid]'
  ) as HTMLElement;
  const cubes = document.querySelectorAll(
    '[data-cube]'
  ) as NodeListOf<HTMLElement>;
  const buttons = document.querySelectorAll('.matrix-btn');

  if (matrixGrid && cubes.length > 0) {
    // Click to freeze/unfreeze cubes
    cubes.forEach(cube => {
      cube.addEventListener('click', () => {
        cube.classList.toggle('frozen');
      });
    });

    // Pattern controls
    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        buttons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        const pattern = btn.getAttribute('data-pattern') || 'wave';

        cubes.forEach((cube, i) => {
          const row = parseInt(cube.getAttribute('data-row') || '0');
          const col = parseInt(cube.getAttribute('data-col') || '0');
          const distance = parseFloat(
            cube.getAttribute('data-distance') || '0'
          );

          let delay = 0;
          let hue = 200;

          switch (pattern) {
            case 'wave':
              delay = (row + col) * 0.08;
              break;
            case 'ripple':
              delay = distance * 0.15;
              break;
            case 'spiral':
              delay = (Math.atan2(row - 4.5, col - 4.5) + Math.PI) * 0.3;
              break;
            case 'random':
              delay = Math.random() * 2;
              break;
            case 'rainbow':
              delay = i * 0.05;
              hue = (i / 100) * 360;
              break;
          }

          cube.style.animationDelay = `${delay}s`;

          if (pattern === 'rainbow') {
            const faces = cube.querySelectorAll(
              '.cube-face'
            ) as NodeListOf<HTMLElement>;
            faces.forEach(face => {
              face.style.background = `linear-gradient(135deg,
                hsla(${hue}, 70%, 60%, 0.4),
                hsla(${hue + 30}, 70%, 50%, 0.3))`;
              face.style.borderColor = `hsla(${hue}, 70%, 60%, 0.6)`;
            });
          }
        });
      });
    });

    // Mouse interaction
    matrixGrid.addEventListener('mousemove', e => {
      const rect = matrixGrid.getBoundingClientRect();
      const x = (e.clientX - rect.left) / rect.width - 0.5;
      const y = (e.clientY - rect.top) / rect.height - 0.5;

      const rotateX = y * 20;
      const rotateY = x * 20;

      matrixGrid.style.transform = `
        perspective(2500px)
        rotateX(${rotateX}deg)
        rotateY(${rotateY}deg)
      `;
    });

    matrixGrid.addEventListener('mouseleave', () => {
      matrixGrid.style.transform = 'perspective(2500px) rotateX(0) rotateY(0)';
    });
  }
</script>
