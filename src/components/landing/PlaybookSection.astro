---
import { playbookSteps } from '../../data/marketing';

const sectionId = 'playbook-section';
---

<section class="relative" aria-labelledby={`${sectionId}-title`}>
  <div class="absolute inset-0 -z-10 bg-[rgba(8,14,26,0.8)]" aria-hidden="true">
  </div>
  <div class="relative mx-auto max-w-[1220px] px-6 py-24">
    <div class="grid gap-12 lg:grid-cols-[minmax(0,0.9fr)_minmax(0,1.1fr)]">
      <header class="space-y-5">
        <p
          class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
          aria-hidden="true"
        >
          Operations playbook
        </p>
        <h2
          id={`${sectionId}-title`}
          class="text-3xl font-semibold text-white sm:text-4xl"
        >
          From empty repo to trusted status hub in three moves
        </h2>
        <p class="text-sm text-slate-300">
          These steps are baked into the starter documentation. Follow them
          as-is or adapt the cadence to match your governance process.
        </p>
      </header>
      <ol class="space-y-4" aria-label="Playbook steps">
        {
          playbookSteps.map((item, index) => (
            <li>
              <article
                class="glass-panel flex gap-5 border border-white/10 p-6 transition-all duration-300 hover:border-indigo-500/30 hover:shadow-lg"
                aria-labelledby={`step-${index}-title`}
              >
                <span
                  class="mt-1 inline-flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full border border-white/15 text-sm font-semibold text-slate-200"
                  aria-hidden="true"
                >
                  {item.step}
                </span>
                <div class="space-y-2">
                  <h3
                    id={`step-${index}-title`}
                    class="text-lg font-semibold text-white"
                  >
                    <span class="sr-only">Step {item.step}: </span>
                    {item.title}
                  </h3>
                  <p class="text-sm text-slate-300">{item.detail}</p>
                </div>
              </article>
            </li>
          ))
        }
      </ol>
    </div>
  </div>
</section>
