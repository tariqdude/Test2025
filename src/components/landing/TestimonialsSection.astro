---
import { testimonials } from '../../data/marketing';

const sectionId = 'testimonials-section';
---

<section class="relative" aria-labelledby={`${sectionId}-title`}>
  <div
    class="absolute inset-0 -z-10 bg-[rgba(7,12,22,0.85)]"
    aria-hidden="true"
  >
  </div>
  <div class="relative mx-auto max-w-[1220px] px-6 py-24">
    <div class="grid gap-10 lg:grid-cols-[minmax(0,0.9fr)_minmax(0,1.1fr)]">
      <header class="space-y-4">
        <p
          class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
          aria-hidden="true"
        >
          Customer perspective
        </p>
        <h2
          id={`${sectionId}-title`}
          class="text-3xl font-semibold text-white sm:text-4xl"
        >
          Stories from teams running mission-critical updates
        </h2>
        <p class="text-sm text-slate-300">
          Every quote below comes from a production rollout of the Elite Project
          starter. Each team now delivers consistent updates without owning
          runtime infrastructure.
        </p>
      </header>
      <div class="grid gap-6" role="list" aria-label="Customer testimonials">
        {
          testimonials.map((item, index) => (
            <blockquote
              class="glass-panel border border-white/10 p-8 shadow-md transition-all duration-300 hover:border-indigo-500/30 hover:shadow-lg"
              role="listitem"
              aria-labelledby={`testimonial-${index}-author`}
            >
              <p class="text-lg text-slate-100 italic">"{item.quote}"</p>
              <footer
                id={`testimonial-${index}-author`}
                class="mt-4 text-sm text-slate-400"
              >
                <cite class="not-italic">
                  <span class="font-semibold text-slate-100">{item.name}</span>
                  <span class="ml-2 text-slate-400">{item.role}</span>
                </cite>
              </footer>
            </blockquote>
          ))
        }
      </div>
    </div>
  </div>
</section>
