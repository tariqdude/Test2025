---
import { insightReports } from '../../data/marketing';
import { withBasePath } from '../../utils/helpers';

const sectionId = 'insight-section';
---

<section class="relative" aria-labelledby={`${sectionId}-title`}>
  <div
    class="absolute inset-0 -z-10 bg-[rgba(6,11,22,0.85)]"
    aria-hidden="true"
  >
  </div>
  <div class="relative mx-auto max-w-[1220px] px-6 py-24">
    <header class="max-w-3xl space-y-4">
      <p
        class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
        aria-hidden="true"
      >
        Ops intelligence
      </p>
      <h2
        id={`${sectionId}-title`}
        class="text-3xl font-semibold text-white sm:text-4xl"
      >
        Toolkits that accelerate the way you brief, audit, and recover
      </h2>
      <p class="text-sm text-slate-300">
        Pair the starter with focused resources that walk your teams through
        messaging, risk posture, and customer narratives without adding
        overhead.
      </p>
    </header>
    <div
      class="mt-12 grid gap-6 md:grid-cols-2 xl:grid-cols-3"
      role="list"
      aria-label="Intelligence reports and toolkits"
    >
      {
        insightReports.map((report, index) => (
          <article
            class="glass-panel flex h-full flex-col justify-between gap-5 border border-white/10 p-6 transition-all duration-300 hover:border-indigo-500/30 hover:shadow-lg focus-within:ring-2 focus-within:ring-indigo-500/50"
            role="listitem"
            aria-labelledby={`report-${index}-title`}
          >
            <div class="space-y-4">
              <span
                class="inline-flex w-max items-center rounded-full border border-white/10 px-3 py-1 text-[0.65rem] font-semibold uppercase tracking-[0.32em] text-slate-300"
                aria-label={`Category: ${report.category}`}
              >
                {report.category}
              </span>
              <h3
                id={`report-${index}-title`}
                class="text-xl font-semibold text-white"
              >
                {report.title}
              </h3>
              <p class="text-sm text-slate-300">{report.description}</p>
            </div>
            <a
              class="inline-flex w-max items-center gap-2 text-sm font-semibold text-slate-200 transition hover:text-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-slate-900 rounded-sm"
              href={withBasePath(report.href)}
              aria-describedby={`report-${index}-title`}
            >
              {report.linkLabel}
              <span aria-hidden="true">â†’</span>
            </a>
          </article>
        ))
      }
    </div>
  </div>
</section>
