---
import { engagementTracks } from '../../data/marketing';

const sectionId = 'engagement-section';
---

<section class="relative" aria-labelledby={`${sectionId}-title`}>
  <div
    class="absolute inset-0 -z-10 bg-[rgba(15,23,42,0.72)]"
    aria-hidden="true"
  >
  </div>
  <div class="relative mx-auto max-w-[1220px] px-6 py-24">
    <div class="grid gap-12 lg:grid-cols-[minmax(0,0.85fr)_minmax(0,1.15fr)]">
      <header class="space-y-4">
        <p
          class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
          aria-hidden="true"
        >
          Engagement options
        </p>
        <h2
          id={`${sectionId}-title`}
          class="text-3xl font-semibold text-white sm:text-4xl"
        >
          Choose the partnership cadence that matches your velocity
        </h2>
        <p class="text-sm text-slate-300">
          Whether you need a sprint to polish messaging or a standing operations
          retainer, each track keeps deliverables focused and measurable.
        </p>
      </header>
      <div
        class="grid gap-6 lg:grid-cols-3"
        role="list"
        aria-label="Engagement track options"
      >
        {
          engagementTracks.map((option, index) => (
            <article
              class="glass-panel flex h-full flex-col gap-5 border border-white/10 p-6 transition-all duration-300 hover:border-indigo-500/30 hover:shadow-lg focus-within:ring-2 focus-within:ring-indigo-500/50"
              role="listitem"
              aria-labelledby={`track-${index}-title`}
            >
              <div class="flex items-baseline justify-between text-slate-200">
                <h3
                  id={`track-${index}-title`}
                  class="text-lg font-semibold text-white"
                >
                  {option.name}
                </h3>
                <span
                  class="text-xs uppercase tracking-[0.3em] text-slate-400"
                  aria-label={`Timeline: ${option.timeline}`}
                >
                  {option.timeline}
                </span>
              </div>
              <p class="text-sm text-slate-300">{option.summary}</p>
              <ul
                class="space-y-2 text-sm text-slate-300/90"
                aria-label={`Deliverables for ${option.name}`}
              >
                {option.deliverables.map(item => (
                  <li class="flex items-start gap-2">
                    <span
                      class="mt-1 inline-flex h-2 w-2 flex-shrink-0 rounded-full bg-[rgba(99,102,241,0.55)]"
                      aria-hidden="true"
                    />
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </article>
          ))
        }
      </div>
    </div>
  </div>
</section>
