---
import { withBasePath } from '../utils/helpers';

const today = new Date();

const navSections = [
  {
    title: 'Company',
    items: [
      { label: 'About', href: withBasePath('about/') },
      { label: 'Services', href: withBasePath('services/') },
      { label: 'Pricing', href: withBasePath('pricing/') },
      { label: 'Blog', href: withBasePath('blog/') },
    ],
  },
  {
    title: 'Operations',
    items: [
      { label: 'Status playbook', href: withBasePath('dashboard/') },
      { label: 'Modernisation notes', href: withBasePath('dashboard-v2/') },
      {
        label: 'Error review workflow',
        href: withBasePath('error-dashboard/'),
      },
    ],
  },
];
---

<footer class="border-t border-white/10 bg-[rgba(6,11,22,0.92)] text-slate-400">
  <div class="mx-auto max-w-[1220px] px-6 py-16">
    <div class="grid gap-12 lg:grid-cols-[minmax(0,1.15fr)_minmax(0,1fr)]">
      <div class="space-y-6">
        <div class="flex items-center gap-3">
          <span
            class="inline-flex h-10 w-10 items-center justify-center rounded-xl border border-white/15 bg-white/10 text-sm font-semibold uppercase tracking-[0.28em] text-slate-100"
          >
            EP
          </span>
          <div class="leading-tight">
            <p class="text-sm font-semibold text-white">Elite Project</p>
            <p class="text-xs uppercase tracking-[0.32em] text-slate-500">
              Operations intelligence
            </p>
          </div>
        </div>
        <p class="max-w-lg text-sm text-slate-300">
          Purpose-built Astro starter for industrial product teams. Lean
          components, thoughtful defaults, and deployment patterns that keep
          GitHub Pages fast and predictable.
        </p>
        <div class="flex flex-wrap gap-4">
          <a class="btn btn-primary" href={withBasePath('contact/')}>
            Schedule a strategy call
          </a>
          <a class="btn btn-secondary" href={withBasePath('pricing/')}>
            View pricing
          </a>
        </div>
        <div class="flex gap-3 text-slate-400">
          <a
            class="inline-flex h-10 w-10 items-center justify-center rounded-full border border-white/10 transition hover:border-white/25 hover:text-white"
            href="https://github.com/tariqdude/Test2025"
            target="_blank"
          >
            <span class="sr-only">GitHub</span>
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
          <a
            class="inline-flex h-10 w-10 items-center justify-center rounded-full border border-white/10 transition hover:border-white/25 hover:text-white"
            href="https://www.linkedin.com"
            target="_blank"
          >
            <span class="sr-only">LinkedIn</span>
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <div class="grid gap-10 sm:grid-cols-2">
        {
          navSections.map(section => (
            <div class="glass-panel border border-white/10 p-6">
              <p class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400">
                {section.title}
              </p>
              <ul class="mt-4 space-y-2 text-sm">
                {section.items.map(item => (
                  <li>
                    <a
                      class="inline-flex items-center gap-2 text-slate-200 transition hover:text-white"
                      href={item.href}
                    >
                      <span class="h-px w-8 bg-white/15" />
                      {item.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
        <div class="glass-panel border border-white/10 p-6">
          <p
            class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
          >
            Contact
          </p>
          <ul class="mt-4 space-y-2 text-sm text-slate-200">
            <li>123 Innovation Street</li>
            <li>Tech City, USA</li>
            <li>+1 (555) 123-4567</li>
            <li>hello@eliteproject.dev</li>
          </ul>
        </div>
      </div>
    </div>

    <div
      class="mt-12 flex flex-col gap-3 border-t border-white/10 pt-8 text-xs text-slate-500 sm:flex-row sm:items-center sm:justify-between"
    >
      <p>&copy; {today.getFullYear()} Elite Project. All rights reserved.</p>
      <p>Astro + Tailwind. Deployed statically on GitHub Pages.</p>
    </div>
  </div>
</footer>
