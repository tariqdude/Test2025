---
import ModernCard from './ui/ModernCard.astro';

interface HighlightItem {
  label: string;
  title: string;
  description: string;
}

interface Props {
  eyebrow: string;
  title: string;
  intro?: string;
  items: HighlightItem[];
}

const { eyebrow, title, intro = '', items } = Astro.props as Props;
---

<section class="relative py-24 border-t border-zinc-800 bg-zinc-950">
  <div
    class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_center,_var(--color-surface-subtle)_0%,_transparent_70%)] opacity-20"
  >
  </div>
  <div class="relative mx-auto max-w-[1220px] px-6">
    <div class="max-w-3xl space-y-4">
      <p
        class="text-xs font-bold uppercase tracking-[0.32em] text-accent-500 font-mono"
      >
        {eyebrow}
      </p>
      <h2
        class="text-3xl font-bold text-white sm:text-4xl font-display uppercase tracking-tight"
      >
        {title}
      </h2>
      {
        intro && (
          <p class="text-sm text-zinc-400 font-mono border-l-2 border-zinc-800 pl-4">
            {intro}
          </p>
        )
      }
    </div>

    <div class="mt-12 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        items.map(item => (
          <ModernCard className="flex h-full flex-col gap-4 bg-zinc-900/30 border-zinc-800 hover:border-accent-500/50 transition-colors group">
            <div class="flex items-center gap-3 text-[0.7rem] font-bold uppercase tracking-[0.32em] text-zinc-200">
              <span class="inline-flex h-8 w-8 items-center justify-center border border-zinc-700 bg-zinc-800 text-accent-400 font-mono group-hover:text-accent-300 group-hover:border-accent-500/50 transition-colors">
                {item.label}
              </span>
              <span class="text-zinc-300 font-mono group-hover:text-white transition-colors">
                {item.title}
              </span>
            </div>
            <p class="text-sm leading-relaxed text-zinc-400 font-mono">
              {item.description}
            </p>
          </ModernCard>
        ))
      }
    </div>
  </div>
</section>
