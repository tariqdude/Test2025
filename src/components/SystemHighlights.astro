---
interface HighlightItem {
  label: string;
  title: string;
  description: string;
}

interface Props {
  eyebrow: string;
  title: string;
  intro?: string;
  items: HighlightItem[];
}

const { eyebrow, title, intro = '', items } = Astro.props as Props;
---

<section class="bg-neutral-50">
  <div class="mx-auto max-w-6xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="max-w-3xl space-y-4">
      <p
        class="text-xs font-semibold uppercase tracking-[0.3em] text-neutral-500"
      >
        {eyebrow}
      </p>
      <h2 class="text-3xl font-semibold text-neutral-950 sm:text-4xl">
        {title}
      </h2>
      {intro && <p class="text-base text-neutral-600">{intro}</p>}
    </div>

    <div class="mt-12 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        items.map(item => (
          <article class="relative overflow-hidden rounded-2xl border border-neutral-200 bg-white p-6 shadow-elevation-xs">
            <div class="flex items-center gap-3 text-xs font-semibold uppercase tracking-[0.35em] text-brand-600">
              <span class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-brand-200 bg-brand-50 text-brand-700">
                {item.label}
              </span>
              <span class="text-neutral-500">{item.title}</span>
            </div>
            <p class="mt-4 text-sm leading-relaxed text-neutral-600">
              {item.description}
            </p>
            <span class="pointer-events-none absolute bottom-0 right-0 h-20 w-20 rounded-tl-[3rem] bg-brand-50" />
          </article>
        ))
      }
    </div>
  </div>
</section>
