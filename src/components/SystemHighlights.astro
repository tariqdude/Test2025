---
interface HighlightItem {
  label: string;
  title: string;
  description: string;
}

interface Props {
  eyebrow: string;
  title: string;
  intro?: string;
  items: HighlightItem[];
}

const { eyebrow, title, intro = '', items } = Astro.props as Props;
---

<section class="relative py-24">
  <div class="absolute inset-0 -z-10 bg-[rgba(9,14,26,0.82)]"></div>
  <div class="relative mx-auto max-w-[1220px] px-6">
    <div class="max-w-3xl space-y-4">
      <p
        class="text-xs font-semibold uppercase tracking-[0.32em] text-slate-400"
      >
        {eyebrow}
      </p>
      <h2 class="text-3xl font-semibold text-white sm:text-4xl">
        {title}
      </h2>
      {intro && <p class="text-sm text-slate-300">{intro}</p>}
    </div>

    <div class="mt-12 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        items.map(item => (
          <article class="glass-panel relative flex h-full flex-col gap-4 border border-white/10 p-6">
            <div class="flex items-center gap-3 text-[0.7rem] font-semibold uppercase tracking-[0.32em] text-slate-200">
              <span class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-white/15 bg-white/10 text-slate-100">
                {item.label}
              </span>
              <span class="text-slate-300">{item.title}</span>
            </div>
            <p class="text-sm leading-relaxed text-slate-300/90">
              {item.description}
            </p>
            <span class="pointer-events-none absolute bottom-0 right-0 h-16 w-16 rounded-tl-[2.5rem] bg-[rgba(99,102,241,0.18)]" />
          </article>
        ))
      }
    </div>
  </div>
</section>
